@using NBK.WMS.Portal.Helpers
@model NBK.ECService.WMS.DTO.PreBulkPackDto
@{
    ViewBag.Title = "";
    Layout = null;
}


<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no, minimal-ui" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/Print.css" rel="stylesheet" />

<div class="">
    <div id="PrintPrebulkPackView" class="ibox-content m-b-sm border-bottom">
        <form id="PrePackForm" class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-12 control-label ">
                    <H2 style="color: red;text-align:left">散货封装单</H2>
                </label>
            </div>

            <div class="form-group line-dashed">
                <div class="col-xs-12">
                </div>
            </div>

            <div class="form-group">
                @Html.PrintTitle("封装单号", Model.PreBulkPackOrder)
                @Html.PrintTitle("单据状态", Model.StatusName)
                @Html.PrintTitle("箱号", Model.StorageCase)
            </div>

            <div class="form-group">
                @Html.PrintTitle("创建日期", Model.CreateDateDisplay)
            </div>

            <br />
            <br />

            <div class="form-group">
                <label class="col-sm-1 control-label">封装清单</label>
                <div class="col-sm-11"></div>
            </div>

            <div class="form-group ">
                <div class="col-sm-12">
                    <table class="table">
                        <thead>
                            <tr>
                                @Html.PrintTh("商品编码")
                                @Html.PrintTh("商品名称")
                                @Html.PrintTh("UPC")
                                @Html.PrintTh("数量")
                                @Html.PrintTh("包装")
                                @Html.PrintTh("单位")
                                @Html.PrintTh("货位")
                                @Html.PrintTh("批次")
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var preBulkPackDetail in Model.PreBulkPackDetailList)
                                {
                                    <tr>
                                        @Html.PrintTd(preBulkPackDetail.SkuCode)
                                        @Html.PrintTd(preBulkPackDetail.SkuName)
                                        @Html.PrintTd(preBulkPackDetail.UPC)
                                        @Html.PrintTd(preBulkPackDetail.Qty.ToString())
                                        @Html.PrintTd(preBulkPackDetail.PackCode)
                                        @Html.PrintTd(preBulkPackDetail.UomCode)
                                        @Html.PrintTd(preBulkPackDetail.Loc)
                                        @Html.PrintTd(preBulkPackDetail.Lot)
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/plugins/barcode")
    <script type="text/javascript">
        $(function () {
            $("#divPrebulkPackCode").empty().barcode($("#divPrebulkPackValue").html(), "code128", { barWidth: 1, barHeight: 45, showHRI: false });
        });
    </script>
}