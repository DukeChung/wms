@using NBK.AuthServiceUtil
@using NBK.ECService.WMS.DTO
@using NBK.WMS.Portal.Helpers

@{
    ViewBag.Title = "冻结商品明细报表";
}
@Html.Breadcrumb("报表", "冻结商品明细报表")
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom">
        <form method="post" id="exportForm">
            <div class="row">
                <div class="col-sm-3">
                    @Html.SearchTextBox("商品名称", "SkuName")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("UPC", "UPC")
                </div>
                <div class="col-sm-3">
                    <div class="form-group" style="line-height:85px">
                        <input type="hidden" id="IsStoreZeroVal" name="IsStoreZero" />
                        <input type="checkbox" id="IsStoreZero" class="control-label" /> 不显示为0的库存
                    </div>
                </div>
                <div class="col-sm-3">
                    <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:25px;float: left; ">查询</button>
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <table id="gvFrozenSkuReport" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th data-data="SkuName">商品名称</th>
                                <th data-data="UPC">UPC</th>
                                <th data-data="Loc">货位</th>
                                <th data-data="Lot">批次</th>
                                <th data-data="LotAttr01">渠道</th>
                                <th data-data="DisplayQty">库存数量</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/dataPicker")

    <script>
        var FrozenSkuReport = {
            table: {},
            init: function () {
                var _self = this;

                _self.table = $('#gvFrozenSkuReport').DataTable({
                    "sAjaxSource": "GetFrozenSkuReport",
                    "fnServerParams": function (aoData) { //查询条件
                        aoData.push(
                            { "name": "SkuName", "value": $("#SkuName").val() },
                            { "name": "UPC", "value": $("#UPC").val() },
                            { "name": "IsStoreZero", "value": $("#IsStoreZero").is(':checked') }
                        );
                    },
                    dom: 'Bfrtip',
                    buttons: [
                        'pageLength',
                    @if (AuthorizeManager.HasFunction(AuthKeyConst.Report_FrozenSkuReportExport, User.Identity.Name))
                    {
                        <text>
                        {
                            text: '导出',
                            action: function(e, dt, node, config) {
                                var request = {
                                    SkuName: $("#SkuName").val(),
                                    UPC: $("#UPC").val(),
                                    IsStoreZero: $("#IsStoreZero").is(':checked')
                                };
                                saveLoading('show');
                                $.ajax({
                                    url: "@Url.Action("FrozenSkuReportExportByFile", "Report")",
                                    data: request,
                                    dataType: "json",
                                    type: "post",
                                    success: function(data) {;
                                        saveLoading();
                                        if (data.success) {
                                            window.open(data.filePath);
                                        }
                                        else {
                                            msgErro(data.message);
                                        }
                                    },
                                    error: function() {
                                        saveLoading();
                                        msgErro("导出失败！");
                                    }
                                });
                            }
                        }
                        </text>
                    }
                    ],
                    "columnDefs": [],
                    "bServerSide": true,
                    "bProcessing": true,
                    "bPaginate": true, //翻页功能
                    "bLengthChange": true, //改变每页显示数据数量
                    "bFilter": false, //过滤功能
                    "bSort": false, //排序功能
                    "bInfo": true, //页脚信息
                    "bAutoWidth": true, //自动宽度
                    "aaSorting": [[2, "Asc"]],

                    "oLanguage": {
                        buttons: {
                            pageLength: {
                                _: "每页显示 %d 条记录"
                            }
                        },
                        "sLengthMenu": "每页显示 _MENU_ 条记录",
                        "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                        "sInfoEmpty": "",
                        "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                        "oPaginate": {
                            "sFirst": "首页",
                            "sPrevious": "前一页",
                            "sNext": "后一页",
                            "sLast": "尾页"
                        },
                        "sZeroRecords": "没有检索到数据"
                    }
                });

                $("#btnSearch").bind("click", function () { //按钮 触发table重新请求服务器
                    FrozenSkuReport.table.ajax.reload();
                });

            }
        }

        $(function () {
            FrozenSkuReport.init();
        })


    </script>
}
