@using NBK.AuthServiceUtil
@using NBK.ECService.WMS.DTO
@using NBK.WMS.Portal.Helpers

@{
    ViewBag.Title = "出库处理时间统计表";
}
@Html.Breadcrumb("报表", "出库处理时间统计表")
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
}

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom">
        <form method="post" id="exportForm">
            <div class="row">
                <div class="col-sm-3">
                    @Html.SearchTextBox("出库单号", "OutboundOrder")
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label class="control-label" for="OutboundType">单据类型</label>
                        <select class="form-control m-b" name="OutboundType" id="OutboundType">
                            <option selected>全部</option>
                            <option value="10">正常</option>
                            <option value="20">B2C</option>
                            <option value="30">B2B</option>
                            <option value="40">退货出库</option>
                            <option value="50">快进快出</option>
                            <option value="60">移仓</option>
                            <option value="70">原材料出库</option>
                            <option value="80">农资出库</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label class="control-label" for="Status">单据状态</label>
                        <select class="form-control m-b" name="Status" id="Status">
                            <option selected>全部</option>
                            <option value="10">新建</option>
                            <option value="30">分配完成</option>
                            <option value="40">拣货完成</option>
                            <option value="70">出库完成</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("创建时间从", "CreateDateFrom")
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("创建时间到", "CreateDateTo")
                </div>
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("出库时间从", "ActualShipDateFrom")
                </div>
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("出库时间到", "ActualShipDateTo")
                </div>
                <div class="col-sm-3">
                    <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:25px;float: left; ">查询</button>
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <table id="gvOutboundHandleDateStatisticsReport" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th data-data="OutboundOrder">出库单号</th>
                                <th data-data="OutboundTypeName">单据类型</th>
                                <th data-data="CreateDateDisplay">创建时间</th>
                                <th data-data="PickDateDisplay">拣货时间</th>
                                <th data-data="VanningDateDisplay">装箱时间</th>
                                <th data-data="ActualShipDateDisplay"> 出库时间 </th>
                                <th data-data="StatusName"> 单据状态 </th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/dataPicker")
    <script>
        var reportList = {
            table: {},
            init: function () {
                var _self = this;
                $("#CreateDateFrom").val("@ViewBag.StartDate");
                $("#CreateDateTo").val("@ViewBag.EndDate");
                @*$("#ActualShipDateFrom").val("@ViewBag.StartDate");
                $("#ActualShipDateTo").val("@ViewBag.EndDate");*@


                $('#divCreateDateFrom .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divCreateDateTo .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divActualShipDateFrom .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divActualShipDateTo .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });

                _self.table = $('#gvOutboundHandleDateStatisticsReport').DataTable({
                    "sAjaxSource": "GetOutboundHandleDateStatisticsReport",
                    "fnServerParams": function (aoData) { //查询条件
                        aoData.push(
                            { "name": "OutboundOrder", "value": $("#OutboundOrder").val() },
                            { "name": "OutboundType", "value": $("#OutboundType").val() },
                            { "name": "Status", "value": $("#Status").val() },
                            { "name": "CreateDateFrom", "value": $("#CreateDateFrom").val() },
                            { "name": "CreateDateTo", "value": $("#CreateDateTo").val() },
                            { "name": "ActualShipDateFrom", "value": $("#ActualShipDateFrom").val() },
                            { "name": "ActualShipDateTo", "value": $("#ActualShipDateTo").val() }
                        );
                    },
                    dom: 'Bfrtip',
                    buttons: [
                        @if (AuthorizeManager.HasFunction(AuthKeyConst.Report_OutboundHandleDateStatisticsReport_Export, User.Identity.Name))
                        {
                            <text>
                            {
                                text: '导出',
                                action: function (e, dt, node, config) {
                                    var exportForm = $("#exportForm");
                                    exportForm.attr("action", '@Url.Action("OutboundHandleDateStatisticsExport")');
                                    exportForm.submit();
                                }
                            }
                            </text>
                    }],
                    "columnDefs": [],
                    "bServerSide": true,
                    "bProcessing": true,
                    "bPaginate": true, //翻页功能
                    "bLengthChange": true, //改变每页显示数据数量
                    "bFilter": false, //过滤功能
                    "bSort": false, //排序功能
                    "bInfo": true, //页脚信息
                    "bAutoWidth": true, //自动宽度
                    "aaSorting": [[2, "Asc"]],
                    "oLanguage": {
                        buttons: {
                            pageLength: {
                                _: "每页显示 %d 条记录"
                            }
                        },
                        "sLengthMenu": "每页显示 _MENU_ 条记录",
                        "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                        "sInfoEmpty": "",
                        "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                        "oPaginate": {
                            "sFirst": "首页",
                            "sPrevious": "前一页",
                            "sNext": "后一页",
                            "sLast": "尾页"
                        },
                        "sZeroRecords": "没有检索到数据"
                    }
                });

                $("#btnSearch").bind("click", function () {
                    if (!commonCheckDateCompare($("#OutboundDateFrom").val(), $("#OutboundDateTo").val())) {
                        msgAlert("下单终止时间必须大于开始时间！");
                        return false;
                    }
                    if (!commonCheckDateCompare($("#ActualShipDateFrom").val(), $("#ActualShipDateTo").val())) {
                        msgAlert("出库终止时间必须大于开始时间！");
                        return false;
                    }
                    reportList.table.ajax.reload();
                });

            }
        }

        $(function () {
            reportList.init();
        })

    </script>
}