@using NBK.WMS.Portal.Helpers
@using NBK.AuthServiceUtil

@{
    ViewBag.Title = "收货明细查询";
}

@Html.Breadcrumb("报表", "收货明细查询")
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
}


<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom">
        <form method="post" id="exportForm">
            <div class="row">
                <div class="col-sm-3">
                    @Html.SearchTextBox("收货单号", "ReceiptOrder")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("入库单号", "ExternalOrder")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("出库单号", "OutboundOrder")
                </div> 
                <div class="col-sm-3">
                    <div class="form-group">
                        <label class="control-label" for="OutboundType">收货单状态</label>
                        <select class="form-control m-b" name="Status" id="Status">
                            <option selected>全部</option>
                            <option value="30">收货中</option>
                            <option value="40">收货完成</option>
                            <option value="-999">作废</option>
                        </select>
                    </div>
                </div> 
            </div>
            <div class="row">
                <div class="col-sm-3">
                    @Html.SearchTextBox("商品名称", "SkuName")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("商品编号", "SkuCode")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("UPC", "UPC")
                </div>
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("收货开始时间", "ReceivedDateFrom")
                </div> 
            </div>
            <div class="row">
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("收货结束时间", "ReceivedDateTo")
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label class="control-label" for="ShelvesStatus">上架状态</label>
                        <select class="form-control m-b" name="ShelvesStatus" id="ShelvesStatus">
                            <option selected>全部</option>
                            <option value="0">未上架</option>
                            <option value="10">上架中</option>
                            <option value="20">上架完成</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("供应商", "VendorName")
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label class="control-label" for="OutboundType">类型</label>
                        <select class="form-control m-b" name="ReceiptType" id="ReceiptType">
                            <option selected>全部</option>
                            <option value="1">入库订单</option>
                            <option value="2">退货入库</option>
                            <option value="50">快进快出</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="control-label" for="Region">是否原材料</label>
                            <select id="IsMaterial" name="IsMaterial" class="form-control ">
                                <option value="">全部</option>
                                <option value="true">是</option>
                                <option value="false">否</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:25px;float: left; ">查询</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <table id="gvReceiptDetailReport" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th data-data="ReceiptOrder">收货单号</th>
                                <th data-data="ExternalOrder">入库单号</th>
                                <th data-data="OutboundOrder">出库单号</th>
                                <th data-data="StatusDisplay">收货单状态</th>
                                <th data-data="VendorName">供应商名称</th>
                                <th data-data="SkuCode">商品编号</th>
                                <th data-data="SkuName">商品名称</th>
                                <th data-data="UPC">UPC</th>
                                <th data-data="SkuDescr">商品描述</th>
                                <th data-data="DisplayReceivedQty">收货数量</th>
                                <th data-data="DisplayShelvesQty">上架数量</th>
                                <th data-data="ReceivedDateDisplay">收货时间</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>


@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/dataPicker")

    <script>
        var ReceiptDetailReport = {
            table: {},
            init: function () {
                var _self = this;
                $('#divReceivedDateFrom .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divReceivedDateTo .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });

                _self.table = $('#gvReceiptDetailReport').DataTable({
                    "sAjaxSource": "GetReceiptDetailReport",
                    "fnServerParams": function (aoData) { //查询条件
                        aoData.push(
                            { "name": "ReceiptOrder", "value": $("#ReceiptOrder").val() },
                            { "name": "ExternalOrder", "value": $("#ExternalOrder").val() },
                            { "name": "OutboundOrder", "value": $("#OutboundOrder").val() },
                            { "name": "Status", "value": $("#Status").val() },
                            { "name": "SkuCode", "value": $("#SkuCode").val() },
                            { "name": "SkuName", "value": $("#SkuName").val() },
                            { "name": "UPC", "value": $("#UPC").val() },
                            { "name": "ReceivedDateFrom", "value": $("#ReceivedDateFrom").val() },
                            { "name": "ReceivedDateTo", "value": $("#ReceivedDateTo").val() },
                            { "name": "ShelvesStatus", "value": $("#ShelvesStatus").val() },
                            { "name": "VendorName", "value": $("#VendorName").val() },
                            { "name": "ReceiptType", "value": $("#ReceiptType").val() },
                            { "name": "IsMaterial", "value": $("#IsMaterial").val() }
                        );
                    },
                    dom: 'Bfrtip',
                    buttons: [
                        'pageLength',
                        @if (AuthorizeManager.HasFunction(AuthKeyConst.Report_ReceiptDetailReportExport, User.Identity.Name))
                        {
                            <text>
                            {
                                text: '导出',
                                action: function (e, dt, node, config) {
                                    var exportForm = $("#exportForm");
                                    exportForm.attr("action", '@Url.Action("ReceiptDetailReportExport")');
                                    exportForm.submit();
                                }
                            }
                            </text>
                        }
                    ],
                    "columnDefs": [],
                    "bServerSide": true,
                    "bProcessing": true,
                    "bPaginate": true, //翻页功能
                    "bLengthChange": true, //改变每页显示数据数量
                    "bFilter": false, //过滤功能
                    "bSort": false, //排序功能
                    "bInfo": true, //页脚信息
                    "bAutoWidth": true, //自动宽度
                    "aaSorting": [[2, "Asc"]],
                    "oLanguage": {
                        buttons: {
                            pageLength: {
                                _: "每页显示 %d 条记录"
                            }
                        },
                        "sLengthMenu": "每页显示 _MENU_ 条记录",
                        "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                        "sInfoEmpty": "",
                        "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                        "oPaginate": {
                            "sFirst": "首页",
                            "sPrevious": "前一页",
                            "sNext": "后一页",
                            "sLast": "尾页"
                        },
                        "sZeroRecords": "没有检索到数据"
                    }
                });

                $("#btnSearch").bind("click", function () { //按钮 触发table重新请求服务器
                    ReceiptDetailReport.table.ajax.reload();
                });

            }
        }

        $(function () {
            ReceiptDetailReport.init();
        })


    </script>
}