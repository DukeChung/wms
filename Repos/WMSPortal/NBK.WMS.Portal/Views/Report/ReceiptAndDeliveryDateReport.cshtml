@using NBK.AuthServiceUtil
@using NBK.ECService.WMS.DTO
@using NBK.WMS.Portal.Helpers

@{
    ViewBag.Title = "收货上架时间统计表";
}
@Html.Breadcrumb("报表", "收货上架时间统计表")
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
}


<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom">
        <form method="post" id="exportForm">
            <div class="row">
                <div class="col-sm-3">
                    @Html.SearchTextBox("入库单号", "PurchaseOrder")
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label class="control-label" for="Type">单据类型</label>
                        <select class="form-control m-b" name="Type" id="Type">
                            <option selected>全部</option>
                            <option value="0">采购入库</option>
                            <option value="50">快进快出</option>
                            <option value="10">退货入库</option>
                            <option value="20">原材料入库</option>
                            <option value="30">移仓入库</option>
                            <option value="40">农资入库</option>
                        </select>
                    </div>

                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("收货单号", "ReceiptOrder")
                </div>
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("审核时间从", "AuditingDateFrom")
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("审核时间到", "AuditingDateTo")
                </div>
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("收获单生成时间从", "CreateDateFrom")
                </div>
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("收获单生成时间到", "CreateDateTo")
                </div>
                <div class="col-sm-3">
                    <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:25px;float: left; ">查询</button>
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <table id="gvReceiptAndDeliveryDateReport" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th data-data="PurchaseOrder">入库单号</th>
                                <th data-data="TypeName">入库单类型</th>
                                <th data-data="AuditingDateDisplay">审核时间</th>
                                <th data-data="ReceiptOrder">收货单号</th>
                                <th data-data="CreateDateDisplay">收货单生成时间</th>
                                <th data-data="TotalReceivedQty">实际收货数量</th>
                                <th data-data="ReceiptDateDisplay"> 收货完成时间 </th>
                                <th data-data="TotalShelvesQty"> 实际上架数量 </th>
                                <th data-data="ShelvesDateDisplay"> 上架完成时间 </th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/dataPicker")
    <script>
        var reportList = {
            table: {},
            init: function () {
                var _self = this;
                $("#AuditingDateFrom").val("@ViewBag.StartDate");
                $("#AuditingDateTo").val("@ViewBag.EndDate");
                $("#CreateDateFrom").val("@ViewBag.StartDate");
                $("#CreateDateTo").val("@ViewBag.EndDate");


                $('#divAuditingDateFrom .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divAuditingDateTo .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divCreateDateFrom .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divCreateDateTo .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });

                _self.table = $('#gvReceiptAndDeliveryDateReport').DataTable({
                    "sAjaxSource": "GetReceiptAndDeliveryDateReport",
                    "fnServerParams": function (aoData) { //查询条件
                        aoData.push(
                            { "name": "PurchaseOrder", "value": $("#PurchaseOrder").val() },
                            { "name": "Type", "value": $("#Type").val() },
                            { "name": "ReceiptOrder", "value": $("#ReceiptOrder").val() },
                            { "name": "CreateDateFrom", "value": $("#CreateDateFrom").val() },
                            { "name": "CreateDateTo", "value": $("#CreateDateTo").val() },
                            { "name": "AuditingDateFrom", "value": $("#AuditingDateFrom").val() },
                            { "name": "AuditingDateTo", "value": $("#AuditingDateTo").val() }
                        );
                    },
                    dom: 'Bfrtip',
                    buttons: [
                        @if (AuthorizeManager.HasFunction(AuthKeyConst.Report_ReceiptAndDeliveryDateReport_Export, User.Identity.Name))
                        {
                            <text>
                            {
                                text: '导出',
                                action: function (e, dt, node, config) {
                                    var exportForm = $("#exportForm");
                                    exportForm.attr("action", '@Url.Action("ReceiptAndDeliveryDateExport")');
                                    exportForm.submit();
                                }
                            }
                            </text>
                    }],
                    "columnDefs": [],
                    "bServerSide": true,
                    "bProcessing": true,
                    "bPaginate": true, //翻页功能
                    "bLengthChange": true, //改变每页显示数据数量
                    "bFilter": false, //过滤功能
                    "bSort": false, //排序功能
                    "bInfo": true, //页脚信息
                    "bAutoWidth": true, //自动宽度
                    "aaSorting": [[2, "Asc"]],
                    "oLanguage": {
                        buttons: {
                            pageLength: {
                                _: "每页显示 %d 条记录"
                            }
                        },
                        "sLengthMenu": "每页显示 _MENU_ 条记录",
                        "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                        "sInfoEmpty": "",
                        "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                        "oPaginate": {
                            "sFirst": "首页",
                            "sPrevious": "前一页",
                            "sNext": "后一页",
                            "sLast": "尾页"
                        },
                        "sZeroRecords": "没有检索到数据"
                    }
                });

                $("#btnSearch").bind("click", function () {
                    if (!commonCheckDateCompare($("#OutboundDateFrom").val(), $("#OutboundDateTo").val())) {
                        msgAlert("下单终止时间必须大于开始时间！");
                        return false;
                    }
                    if (!commonCheckDateCompare($("#ActualShipDateFrom").val(), $("#ActualShipDateTo").val())) {
                        msgAlert("出库终止时间必须大于开始时间！");
                        return false;
                    }
                    reportList.table.ajax.reload();
                });

            }
        }

        $(function () {
            reportList.init();
        })

    </script>
}