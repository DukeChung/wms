@using NBK.AuthServiceUtil
@using NBK.ECService.WMS.DTO
@using NBK.WMS.Portal.Helpers

@{
    ViewBag.Title = "仓库进销存报表";
}
@Html.Breadcrumb("报表", "仓库进销存报表")
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
}

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom">
        <form method="post" id="exportForm">
            <div class="row">
                <div class="col-sm-3">
                    @Html.SearchTextBox("商品名称", "SkuName")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("商品编号", "SkuCode")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("UPC", "UPC")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("外部ID", "OtherId")
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label class="control-label">所属仓库:</label>
                        <select id="SearchWarehouseSysId" name="SearchWarehouseSysId" class="form-control">
                            @{
                                foreach (var warehouse in (List<SelectItem>)ViewBag.WarehouseList)
                                {
                                    <option value="@warehouse.Value">@warehouse.Text</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("开始时间", "StartTime")
                </div>
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("结束时间", "EndTime")
                </div>
                <div class="col-sm-3">
                    <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:25px;float: left; ">查询</button>
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <table id="gvFinanceInvoicingReport" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th data-data="SkuOtherId">商品外部ID</th>
                                <th data-data="SkuName">商品名称</th>
                                <th data-data="UPC">UPC</th>
                                <th data-data="DisplayInitialQty">期初数量</th>
                                <th data-data="DisplayCurrentPeriodReceiptQty">本期入库数量</th>
                                <th data-data="DisplayCurrentPeriodOutboundQty">本期出库数量</th>
                                <th data-data="DisplayAssemblyQty">本期加工数量</th>
                                <th data-data="DisplayAdjustmentQty">本期损益数量</th>
                                <th data-data="DisplayEndingInventoryQty">期末数量</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>


@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/dataPicker")

    <script>
        var FinanceInvoicingReport = {
            table: {},
            init: function () {
                var _self = this;
                $('#divStartTime .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true,
                    defaultDate: new Date()
                });
                $('#divEndTime .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true,
                    defaultDate: new Date()
                });

                $("#StartTime").val("@ViewBag.StartDate");
                $("#EndTime").val("@ViewBag.EndDate");
                _self.table = $('#gvFinanceInvoicingReport').DataTable({
                    "sAjaxSource": "GetFinanceInvoicingReport",
                    "fnServerParams": function (aoData) { //查询条件
                        aoData.push
                        (
                            { "name": "SkuName", "value": $("#SkuName").val() },
                            { "name": "SkuCode", "value": $("#SkuCode").val() },
                            { "name": "UPC", "value": $("#UPC").val() },
                            { "name": "SearchWarehouseSysId", "value": $("#SearchWarehouseSysId").val() },
                            { "name": "OtherId", "value": $("#OtherId").val() },
                            { "name": "StartTime", "value": $("#StartTime").val() },
                            { "name": "EndTime", "value": $("#EndTime").val() }
                        );
                    },
                    dom: 'Bfrtip',
                    buttons: [
                        'pageLength',
                        @if (AuthorizeManager.HasFunction(AuthKeyConst.Report_FinanceInvoicingReport_Export, User.Identity.Name))
                        {
                            <text>
                        {
                            text: '导出',
                            action: function (e, dt, node, config) {
                                var exportForm = $("#exportForm");
                                exportForm.attr("action", '@Url.Action("FinanceInvoicingReportExport")');
                                exportForm.submit();
                            }
                        }
                        </text>
                        }
                    ],
                    "columnDefs": [],
                    "bServerSide": true,
                    "bProcessing": true,
                    "bPaginate": true, //翻页功能
                    "bLengthChange": true, //改变每页显示数据数量
                    "bFilter": false, //过滤功能
                    "bSort": false, //排序功能
                    "bInfo": true, //页脚信息
                    "bAutoWidth": true, //自动宽度
                    "aaSorting": [[2, "Asc"]],

                    "oLanguage": {
                        buttons: {
                            pageLength: {
                                _: "每页显示 %d 条记录"
                            }
                        },
                        "sLengthMenu": "每页显示 _MENU_ 条记录",
                        "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                        "sInfoEmpty": "",
                        "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                        "oPaginate": {
                            "sFirst": "首页",
                            "sPrevious": "前一页",
                            "sNext": "后一页",
                            "sLast": "尾页"
                        },
                        "sZeroRecords": "没有检索到数据"
                    }
                });

                $("#btnSearch").bind("click", function () { //按钮 触发table重新请求服务器

                    if ($("#StartTime").val().length === 0) {
                        msgAlert("请选择一个开始时间");
                        return;
                    }

                    if ($("#EndTime").val().length === 0) {
                        msgAlert("请选择一个结束时间");
                        return;
                    }

                    if ($("#EndTime").val() < $("#StartTime").val()) {
                        msgAlert("结束时间不能小于开始时间");
                        return;
                    }

                    FinanceInvoicingReport.table.ajax.reload();
                });

            }
        }

        $(function () {
            FinanceInvoicingReport.init();
        })


    </script>
}

