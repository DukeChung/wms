@using NBK.WMS.Portal.Helpers

@{
    ViewBag.Title = "交接单";
}

@Html.Breadcrumb("三方交接", "交接单")
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
}

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom">
        <div class="row">
            <div class="col-sm-3">
                @Html.SearchTextBox("交接单编号", "HandoverGroupOrder")
            </div>
            <div class="col-sm-3">
                @Html.DataPickerTextBox("创建时间从", "HandoverCreateDateFrom")
            </div>
            <div class="col-sm-3">
                @Html.DataPickerTextBox("创建时间到", "HandoverCreateDateTo")
            </div>
            <div class="col-sm-3">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                @Html.SearchTextBox("外部订单编号", "ExternOrderId")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("包裹单号", "VanningOrder")
            </div>
            <div class="col-sm-3">
            </div>
            <div class="col-sm-3">
                <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:25px;float: left; ">查询</button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <table id="gvHandoverGroup" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th data-data="HandoverGroupOrder">交接单编号</th>
                                <th data-data="CarrierName">交接物流</th>
                                <th data-data="TotalCount">合计件数</th>
                                <th data-data="TotalWeight">合计重量</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
@Scripts.Render("~/plugins/dataPicker")

    <script>
        var HandoverGroupMaintain = {
            table: {},
            init: function () {
                var _self = this;
                
                $('#divHandoverCreateDateFrom .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divHandoverCreateDateTo .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });

                _self.table = $('#gvHandoverGroup').DataTable({
                    "sAjaxSource": "GetHandoverGroupByPage",
                    "fnServerParams": function (aoData) { //查询条件
                        aoData.push(
                            { "name": "HandoverGroupOrder", "value": $("#HandoverGroupOrder").val() },
                            { "name": "HandoverCreateDateFrom", "value": $("#HandoverCreateDateFrom").val() },
                            { "name": "HandoverCreateDateTo", "value": $("#HandoverCreateDateTo").val() },
                            { "name": "ExternOrderId", "value": $("#ExternOrderId").val() },
                            { "name": "VanningOrder", "value": $("#VanningOrder").val() }
                        );
                    },
                    dom: 'Bfrtip',
                    buttons: [],
                    "columnDefs": [
                        {
                            "targets": 0,
                            "width": "15%",
                            render: function (data, type, full, meta) {
                                return '<a target="_blank" href="/Vanning/HandoverGroupDetail?handoverGroupOrder=' + full.HandoverGroupOrder + '">' + full.HandoverGroupOrder + '</a>';
                            }
                        }
                    ],
                    "bServerSide": true,
                    "bProcessing": true,
                    "bPaginate": true, //翻页功能
                    "bLengthChange": true, //改变每页显示数据数量
                    "bFilter": false, //过滤功能
                    "bSort": false, //排序功能
                    "bInfo": true, //页脚信息
                    "bAutoWidth": true, //自动宽度
                    "aaSorting": [[2, "Asc"]],
                    "oLanguage": {
                        "sLengthMenu": "每页显示 _MENU_ 条记录",
                        "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                        "sInfoEmpty": "",
                        "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                        "oPaginate": {
                            "sFirst": "首页",
                            "sPrevious": "前一页",
                            "sNext": "后一页",
                            "sLast": "尾页"
                        },
                        "sZeroRecords": "没有检索到数据"
                    }
                });

                $("#btnSearch").bind("click", function () { //按钮 触发table重新请求服务器
                    HandoverGroupMaintain.table.ajax.reload();
                });

            }
        }

        $(function () {
            HandoverGroupMaintain.init();
        })


    </script>
}
