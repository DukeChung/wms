
@using NBK.ECService.WMS.DTO
@using NBK.WMS.Portal.Helpers
@{
    ViewBag.Title = "移仓单管理";
}

@Html.Breadcrumb("订单管理", "移仓单管理")

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
}

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom">
        <div class="row">
            <div class="col-sm-3">
                <div class="form-group">
                    <label class="control-label" for="OutboundOrder">移仓单号</label>
                    <input type="text" id="TransferInventoryOrder" name="TransferInventoryOrder" value="" placeholder="请输入移仓单号" title="支持多个出库单号查询，用逗号分隔" class="form-control">
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                    <label class="control-label">来源仓:</label>
                    <select id="FromWareHouseSysId" name="FromWareHouseSysId" class="form-control">
                        <option value="">全部仓库</option>
                        @{
                            foreach (var warehouse in (List<SelectItem>)ViewBag.WarehouseList)
                            {
                                <option value="@warehouse.Value">@warehouse.Text</option>
                            }
                        }
                    </select>
                </div>
            </div><div class="col-sm-3">
                <div class="form-group">
                    <label class="control-label">目标仓:</label>
                    <select id="ToWareHouseSysId" name="ToWareHouseSysId" class="form-control">
                        <option value="">全部仓库</option>
                        @{
                            foreach (var warehouse in (List<SelectItem>)ViewBag.WarehouseList)
                            {
                                <option value="@warehouse.Value">@warehouse.Text</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                    <label class="control-label" for="Status">订单状态</label>
                    <select class="form-control m-b" name="Status" id="Status">
                        <option selected>全部</option>
                        <option value="10">新增</option>
                        <option value="20">出库完成</option>
                        <option value="25">部分收货</option>
                        <option value="30">收货完成</option>
                        <option value="-999">作废</option>
                        <option value="-10">关闭</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="ibox" style="margin-bottom:0px">
            <a class="collapse-link">
                <i class="fa fa-chevron-down">更多查询条件</i>
            </a>
            <div class="ibox-content" style="display:none;padding:10px 0px 0px 0px">

                <div class="row">
                    <div class="col-sm-3">
                        @Html.DataPickerTextBox("移仓出库从", "TransferOutboundDateFrom")
                    </div>
                    <div class="col-sm-3">
                        @Html.DataPickerTextBox("移仓出库到", "TransferOutboundDateTo")
                    </div>
                    <div class="col-sm-3">
                        @Html.DataPickerTextBox("移仓入库从", "TransferInboundDateFrom")
                    </div>
                    <div class="col-sm-3">
                        @Html.DataPickerTextBox("移仓入库到", "TransferInboundDateTo")
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        @Html.SearchTextBox("移仓出库单", "TransferOutboundOrder")
                    </div>
                    <div class="col-sm-3">
                        @Html.SearchTextBox("移仓入库单", "TransferPurchaseOrder")
                    </div>
                    <div class="col-sm-3">
                        @Html.SearchTextBox("外部单号", "ExternOrderId")
                    </div>
                    <div class="col-sm-3">
                        @Html.SearchTextBox("渠道", "Channel")
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:25px;float: left; ">查询</button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <table id="transferinventoryData" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th width="5%"><input type="checkbox" id="ckbAll" onclick="gvCheckAll(this);" /></th>
                                <th data-data="TransferInventoryOrder">移仓单号</th>
                                <th data-data="StatusName">订单状态</th>
                                <th data-data="FromWareHouseName">来源仓</th>
                                <th data-data="ToWareHouseName">目标仓</th>
                                <th data-data="ExternOrderId">外部单据号</th>
                                <th data-data="TransferOutboundDateDisplay">移仓出库时间</th>
                                <th data-data="TransferInboundDateDisplay">移仓入库时间</th>
                                <th data-data="TransferOutboundOrder">移仓出库单</th>
                                <th data-data="TransferPurchaseOrder">移仓入库单</th>
                                <th data-data="Remark">订单备注</th>
                                <th data-data="Channel">渠道</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/dataPicker")

    <script src="~/Scripts/Utility/Common.js"></script>
    <script>
        var transferinventoryData = {
            table: {},
            init: function () {
                var _self = this;
                $('#divTransferOutboundDateFrom .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divTransferOutboundDateTo .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divTransferInboundDateFrom .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divTransferInboundDateTo .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });

                _self.table = $('#transferinventoryData').DataTable({
                    "sAjaxSource": "/Transferinventory/GetTransferinventoryByPage",
                    "fnServerParams": function (aoData) { //查询条件
                        aoData.push(
                            { "name": "TransferInventoryOrder", "value": $("#TransferInventoryOrder").val() },
                            { "name": "FromWareHouseSysId", "value": $("#FromWareHouseSysId").val() },
                            { "name": "ToWareHouseSysId", "value": $("#ToWareHouseSysId").val() },
                            { "name": "Status", "value": $("#Status").val() },

                            { "name": "TransferOutboundDateFrom", "value": $("#TransferOutboundDateFrom").val() },
                            { "name": "TransferOutboundDateTo", "value": $("#TransferOutboundDateTo").val() },
                            { "name": "TransferInboundDateFrom", "value": $("#TransferInboundDateFrom").val() },
                            { "name": "TransferInboundDateTo", "value": $("#TransferInboundDateTo").val() },

                            { "name": "TransferOutboundOrder", "value": $("#TransferOutboundOrder").val() },
                            { "name": "TransferPurchaseOrder", "value": $("#TransferPurchaseOrder").val() },
                            { "name": "Channel", "value": $("#Channel").val() },
                            { "name": "ExternOrderId", "value": $("#ExternOrderId").val() }
                        );
                    },
                    dom: 'Bfrtip',
                    buttons: [],
                    "columnDefs": [
                        {
                            "targets": 0,
                            "width": "15px",
                            render: function (data, type, full, meta) {
                                return '<input type="checkbox" id="checkbox-all-' + full.SysId + '" value="' + full.SysId + '" transferInventoryOrder="' + full.TransferInventoryOrder + '" status="' + full.Status + '" />';
                            }
                        },
                        {
                            "targets": 1,
                            "width": "15%",
                            render: function (data, type, full, meta) {
                                return '<a target="_blank" href="/Transferinventory/TransferinventoryView?sysId=' + full.SysId + '">' + full.TransferInventoryOrder + '</a>';
                            }
                        }
                    ],
                    "bServerSide": true,
                    "bProcessing": true,
                    "bPaginate": true, //翻页功能
                    "bLengthChange": true, //改变每页显示数据数量
                    "bFilter": false, //过滤功能
                    "bSort": false, //排序功能
                    "bInfo": true, //页脚信息
                    "bAutoWidth": true, //自动宽度
                    "aaSorting": [[2, "Asc"]],
                    "oLanguage": {
                        "sLengthMenu": "每页显示 _MENU_ 条记录",
                        "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                        "sInfoEmpty": "",
                        "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                        "oPaginate": {
                            "sFirst": "首页",
                            "sPrevious": "前一页",
                            "sNext": "后一页",
                            "sLast": "尾页"
                        },
                        "sZeroRecords": "没有检索到数据"
                    }
                });

                $("#btnSearch").bind("click", function () {
                    //按钮 触发table重新请求服务器
                    if (!commonCheckDateCompare($("#TransferOutboundDateFrom").val(), $("#TransferOutboundDateTo").val())) {
                        msgAlert("移仓出库终止日期应大于移仓出库起始日期！");
                        return false;
                    }

                    if (!commonCheckDateCompare($("#TransferInboundDateFrom").val(), $("#TransferInboundDateTo").val())) {
                        msgAlert("移仓入库终止日期应大于移仓入库起始日期！");
                        return false;
                    }

                    transferinventoryData.table.ajax.reload();
                });
            }
        };

        $(function () {
            transferinventoryData.init();
        });

    </script>
}