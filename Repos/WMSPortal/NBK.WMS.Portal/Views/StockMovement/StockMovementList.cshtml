@using NBK.WMS.Portal.Helpers
@using NBK.AuthServiceUtil
@{
    ViewBag.Title = "库位变更管理";
}
@Html.Breadcrumb("库存管理", "库位变更管理")

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom">
        <div class="row">
            <div class="col-sm-3">
                @Html.SearchTextBox("商品名称", "SkuNameSearch")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("UPC", "SkuUPCSearch")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("目标货位", "ToLocSearch")
            </div>
            <div class="col-sm-2">
                <label class="control-label">状态</label>
                <select id="StatusSearch" name="StatusSearch" class="form-control">
                    @{
                        <option value="">请选择</option>
                        foreach (var status in (List<SelectListItem>)ViewBag.StatusList)
                        {
                            <option value="@status.Value">@status.Text</option>
                        }
                    }
                </select>
            </div>
            <div class="col-sm-1">
                <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:23px;float: left; ">查询</button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content" style="overflow-x:auto">
                    <div style="float: right; margin-top: 10px;margin-right: 5px;">
                        <a href="~/Template/库位变更导入模板.xls">下载模板</a>
                    </div>
                    <table id="gvStockMovement" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th><input type="checkbox" id="ckbAll" onclick="gvCheckAll(this);" /></th>
                                <th data-data="StockMovementOrder" style="width:100px">变更单号</th>
                                <th data-data="SkuName" style="width:100px">商品名称</th>
                                <th data-data="SkuDescr" style="width:100px">商品描述</th>
                                <th data-data="UPC" style="width:100px">UPC</th>
                                @*<th data-data="DisplayQty" style="width:100px">数量</th>*@
                                <th data-data="StatusText" style="width:100px">状态</th>
                                <th data-data="Lot" style="width:100px">批次编号</th>
                                <th data-data="FromQty" style="width:100px">变更数量</th>
                                @*<th data-data="ToQty" style="width:100px">目标数量</th>*@
                                <th data-data="FromLoc" style="width:100px">来源货位</th>
                                <th data-data="ToLoc" style="width:100px">目标货位</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<input type="file" id="importButton" name="importButton" class="hidden" onchange="ImportExcelData(this);" />
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    <script src="~/Scripts/Utility/Common.js"></script>
    <script type="text/javascript">
        var table;
        $(document).ready(function () {
            table = $('#gvStockMovement').DataTable({
                "sAjaxSource": "GetStockMovementList",
                "fnServerParams": function (aoData) { //查询条件
                    aoData.push(
                        { "name": "SkuNameSearch", "value": $("#SkuNameSearch").val() },
                        { "name": "SkuUPCSearch", "value": $("#SkuUPCSearch").val() },
                        { "name": "ToLocSearch", "value": $("#ToLocSearch").val() },
                        { "name": "StatusSearch", "value": $("#StatusSearch").val() }
                    );
                },
                dom: 'Bfrtip',
                buttons: [
                    {
                        text: '确认变更',
                        action: function (e, dt, node, config) {
                            var sysIds = GetGridMultiselectSysId();
                            //var sysIds = GetGridSysId();
                            if (sysIds != null) {
                                msgConfirm("是否确认变更所选记录？", function (isConfirm) {
                                    if (isConfirm) {
                                        saveLoading('show');
                                        $.ajax({
                                            url: "/StockMovement/ConfirmStockMovement?sysIds=" + sysIds,
                                            type: "GET",
                                            success: function (data) {
                                                setTimeout(function () {
                                                    saveLoading();
                                                    if (data.Success) {
                                                        msgSuccess(data.Message, setTimeout(function () { table.ajax.reload(); }, 100));
                                                    } else {
                                                        msgErro(data.Message);
                                                    }
                                                }, 100);
                                            },
                                            error: function (data) {
                                                saveLoading();
                                                msgErro(data.Message);
                                            }
                                        });
                                    }
                                }, true);
                            }
                        }
                    },
                    {
                        text: '作废',
                        action: function (e, dt, node, config) {
                            var sysIds = GetGridMultiselectSysId();
                            if (sysIds != null) {
                                msgConfirm("是否作废所选记录？", function (isConfirm) {
                                    if (isConfirm) {
                                        saveLoading('show');
                                        $.ajax({
                                            url: "/StockMovement/CancelStockMovement?sysIds=" + sysIds,
                                            type: "GET",
                                            success: function (data) {
                                                setTimeout(function () {
                                                    saveLoading();
                                                    if (data.Success) {
                                                        msgSuccess(data.Message, setTimeout(function () { table.ajax.reload(); }, 100));
                                                    } else {
                                                        msgErro(data.Message);
                                                    }
                                                }, 100);
                                            },
                                            error: function (data) {
                                                saveLoading();
                                                msgErro(data.Message);
                                            }
                                        });
                                    }
                                }, true);
                            } else {
                                msgErro("请在列表中勾选一项!");
                                return false;
                            }
                        }
                    },
                     @if (AuthorizeManager.HasFunction(AuthKeyConst.StockMovement_PrePack_Export, User.Identity.Name))
                {
                            <text>
                            {
                                text: '导入',
                                action: function (e, dt, node, config) {
                                    $("#importButton").click();
                                }
                            }
                            </text>
            }
                ],
                "columnDefs": [
                    {
                        "targets": 0,
                        "width": "15px",
                        render: function (data, type, full, meta) {
                            return '<input type="checkbox" id="checkbox-all-' + full.SysId + '" value="' + full.SysId + '"/>';
                        }
                    }
                ],
                "bServerSide": true,
                "bProcessing": true,
                "bPaginate": true, //翻页功能
                "bLengthChange": true, //改变每页显示数据数量
                "bFilter": false, //过滤功能
                "bSort": false, //排序功能
                "bInfo": true, //页脚信息
                "bAutoWidth": true, //自动宽度
                "aaSorting": [[2, "Asc"]],
                "oLanguage": {
                    "sLengthMenu": "每页显示 _MENU_ 条记录",
                    "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                    "sInfoEmpty": "",
                    "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                    "oPaginate": {
                        "sFirst": "首页",
                        "sPrevious": "前一页",
                        "sNext": "后一页",
                        "sLast": "尾页"
                    },
                    "sZeroRecords": "没有检索到数据"
                }
            });

            $("#btnSearch").bind("click", function () { //按钮 触发table重新请求服务器
                table.ajax.reload();
            });
        });
        function ImportExcelData(obj) {
            var typeName = common.GetFileTypeName(obj.files[0].name);
            if (typeName == '.xlsx') {
                $("#importButton").val('');
                msgAlert("请选择03版之前的excel文件进行导入！");
                return false;
            }
            if (typeName == '' || typeName != '.xls') {
                $("#importButton").val('');
                msgAlert("请选择excel文件进行导入！");
                return false;
            }

            saveLoading('show');
            var formData = new FormData();
            formData.append("file", $(obj)[0].files[0]);
            $.ajax({
                url: "@Url.Action("ImportData", "StockMovement")",
                type: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                success: function (data) {
                    saveLoading('hide');
                    if (data.Success) {
                        msgSuccess(data.Message);
                        $("#importButton").val('');
                        window.location.reload();
                    }
                    else {
                        msgErro(data.Message);
                        $("#importButton").val('');
                        return false;
                    }
                },
                error: function (data) {
                    saveLoading('hide');
                    msgErro("导入失败！");
                    $("#importButton").val('');
                    return false;
                }
            });
        }

    </script>
}