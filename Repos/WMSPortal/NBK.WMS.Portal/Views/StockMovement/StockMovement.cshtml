@using NBK.WMS.Portal.Helpers
@{
    ViewBag.Title = "库位变更";
}

@Html.Breadcrumb("库存管理", "库位变更")
<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom">
        <div class="row">
            <div class="col-sm-3">
                @Html.SearchTextBox("UPC", "SkuUPCSearch")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("商品名称", "SkuNameSearch")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("货位", "LocSearch")
            </div>
            <div class="col-sm-2">
                @Html.SearchTextBox("批次编号", "LotSearch")
            </div>
            <div class="col-sm-1">
                <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:23px;float: left; ">查询</button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content" style="overflow-x:auto">
                    <table id="gvSku" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th><input type="checkbox" id="ckbAll" onclick="gvCheckAll(this);" /></th>
                                <th data-data="SkuName" style="width:100px">商品名称</th>
                                <th data-data="SkuDescr" style="width:100px">商品描述</th>
                                <th data-data="UPC" style="width:100px">UPC</th>
                                <th data-data="Loc" style="width:100px">货位</th>
                                <th data-data="DisplayQty" style="width:100px">数量</th>
                                <th data-data="Lot" style="width:100px">批次编号</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    <script src="~/Scripts/Utility/Common.js"></script>
    <script type="text/javascript">
        var table;
        $(document).ready(function () {
            table = $('#gvSku').DataTable({
                "sAjaxSource": "GetStockMovementSkuList",
                "fnServerParams": function (aoData) { //查询条件
                    aoData.push(
                        { "name": "SkuUPCSearch", "value": $("#SkuUPCSearch").val() },
                        { "name": "SkuNameSearch", "value": $("#SkuNameSearch").val() },
                        { "name": "LocSearch", "value": $("#LocSearch").val() },
                        { "name": "LotSearch", "value": $("#LotSearch").val() }
                    );
                },
                dom: 'Bfrtip',
                buttons: [
                    {
                        text: "库位变更",
                        action: function (e, dt, node, config) {
                            var sysId = GetGridSysId();
                            var check = $("table tbody input:checked");
                            var loc = $(check).attr("loc");
                            var lot = $(check).attr("lot");
                            if (sysId != null && loc != null && loc != undefined && lot != null && lot != undefined) {
                                window.location.href = "/StockMovement/AddMovement?skuSysId=" + sysId + "&loc=" + loc + "&lot=" + lot;
                            }
                        }
                    }
                ],
                "columnDefs": [
                    {
                        "targets": 0,
                        "width": "15px",
                        render: function (data, type, full, meta) {
                            return '<input type="checkbox" id="checkbox-all-' + full.SysId + '" value="' + full.SysId + '" loc="' + full.Loc + '" lot="' + full.Lot + '"/>';
                        }
                    }
                ],
                "bServerSide": true,
                "bProcessing": true,
                "bPaginate": true, //翻页功能
                "bLengthChange": true, //改变每页显示数据数量
                "bFilter": false, //过滤功能
                "bSort": false, //排序功能
                "bInfo": true, //页脚信息
                "bAutoWidth": true, //自动宽度
                "aaSorting": [[2, "Asc"]],
                "oLanguage": {
                    "sLengthMenu": "每页显示 _MENU_ 条记录",
                    "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                    "sInfoEmpty": "",
                    "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                    "oPaginate": {
                        "sFirst": "首页",
                        "sPrevious": "前一页",
                        "sNext": "后一页",
                        "sLast": "尾页"
                    },
                    "sZeroRecords": "没有检索到数据"
                }
            });

            $("#btnSearch").bind("click", function () { //按钮 触发table重新请求服务器
                table.ajax.reload();
            });
        });
    </script>
}