@using NBK.WMS.Portal.Helpers

@{
    ViewBag.Title = "商品外借";
}

@Html.Breadcrumb("增值服务", "商品外借")
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}


<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom">
        <div class="row">
            <div class="col-sm-3">
                @Html.SearchTextBox("商品外借单编号", "SkuBorrowOrder")
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                    <label class="control-label" for="Status">单据状态</label>
                    <select class="form-control m-b" name="Status" id="Status">
                        <option selected>全部</option>
                        <option value="10">新建</option>
                        <option value="20">已借出</option>
                        <option value="30">已归还</option>
                        <option value="-999">已作废</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("创建人", "CreateUserName")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("外借人", "BorrowName")
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                @Html.SearchTextBox("外借部门", "LendingDepartment")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("商品条码", "UPC")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("商品编号", "SkuCode")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("商品名称", "SkuName")
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                @Html.SearchTextBox("外部单据号", "OtherId")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("渠道", "Channel")
            </div>
            <div class="col-sm-1">
                <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:25px;float: left; ">查询</button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <table id="gvSkuBorrow" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th width="5%"><input type="checkbox" id="ckbAll" onclick="gvCheckAll(this);" /></th>
                                <th data-data="BorrowOrder">商品外借单编号</th>
                                <th data-data="StatusName">单据状态</th>
                                <th data-data="BorrowName">外借人</th>
                                <th data-data="LendingDepartment">外借部门</th>
                                <th data-data="BorrowStartTimeDisplay">借出时间</th>
                                <th data-data="BorrowEndTimeDisplay">归还时间</th>
                                <th data-data="OtherId">外部单据号</th>
                                <th data-data="Channel">渠道</th>
                                <th data-data="CreateInfoDisplay">创建时间</th>
                                <th data-data="Remark">备注</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

