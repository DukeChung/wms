@using NBK.WMS.Portal.Helpers
@using NBK.AuthServiceUtil;
@{
    ViewBag.Title = "散货封箱管理";
}
@Html.Breadcrumb("订单管理", "散货封箱管理")
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
}

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom">
        <div class="row">
            <div class="col-sm-3">
                @Html.SearchTextBox("商品名称", "SkuName")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("UPC", "UPC")
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                    <label class="control-label" for="Status">订单状态</label>
                    <select class="form-control m-b" name="Status" id="Status">
                        <option selected>全部</option>
                        <option value="10">新建</option>
                        <option value="20">封箱中</option>
                        <option value="30">完成</option>
                        <option value="-999">作废</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("箱号", "StorageCase")
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                @Html.SearchTextBox("出库单号", "OutboundOrder")
            </div>
            <div class="col-sm-3">
            </div>
            <div class="col-sm-3">
            </div>
            <div class="col-sm-3">
                <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:25px;float: left; ">查询</button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <div style="float: right; margin-top: 10px;margin-right: 5px;">
                        <a href="~/Template/散货封箱导入模板.xls">下载模板</a>
                    </div>
                    <table id="prebulkPackTable" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th width="5%"><input type="checkbox" id="ckbAll" onclick="gvCheckAll(this);" /></th>
                                <th data-data="PreBulkPackOrder">封装单号</th>
                                <th data-data="StorageCase">箱号</th>
                                <th data-data="OutboundOrder">出库单号</th>
                                <th data-data="StatusName">状态</th>
                                <th data-data="CreateDateDisplay">创建日期</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <form id="prePackForm" class="form-horizontal">
        <div class="modal inmodal fade" id="generateCaseModal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-body" style="max-height:600px;">
                        <div class="form-group">
                            <label class="col-sm-12">批号:</label>
                            <div class="col-sm-12">
                                <input id="prePackLot" name="prePackLot" class="form-control required">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-12">箱号:</label>
                            <div class="col-sm-12">
                                <input id="prePackCase" name="prePackCase" class="form-control required">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-12">起始值:</label>
                            <div class="col-sm-12">
                                <input type="number" id="prePackStart" name="prePackStart" class="form-control required">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-12">结束值:</label>
                            <div class="col-sm-12">
                                <input type="number" id="prePackEnd" name="prePackEnd" class="form-control required">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <a class="btn btn-sm btn-primary" id="btnSave" onclick="PrebulkPackManage.GenerateCase();"><i class="fa fa-check-square-o"></i> 完成</a>
                            <a class="btn btn-white btn-sm" id="btnClose" data-dismiss="modal"><i class="fa fa-times"></i> 关闭</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>
<input type="file" id="importPrebulkPackButton" name="importPrebulkPackButton" class="hidden" onchange="ImportPrebulkPackExcelData(this);" />

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/dataPicker")
    @Scripts.Render("~/plugins/print")
    <script>
        var PrebulkPackManage = {
            table: {},
            init: function () {
                var _self = this;

                _self.table = $('#prebulkPackTable').DataTable({
                    "sAjaxSource": "/PrebulkPack/GetPreBulkPackByPage",
                    "fnServerParams": function (aoData) { //查询条件
                        aoData.push(
                            { "name": "SkuName", "value": $("#SkuName").val() },
                            { "name": "UPC", "value": $("#UPC").val() },
                            { "name": "StorageCase", "value": $("#StorageCase").val() },
                            { "name": "Status", "value": $("#Status").val() },
                            { "name": "OutboundOrder", "value": $("#OutboundOrder").val() }
                        );
                    },
                    dom: 'Bfrtip',
                    buttons: [
                         {
                             text: '生成箱号',
                             action: function (e, dt, node, config) {
                                 $('#generateCaseModal').modal('show');
                                 $("#prePackLot").val("");
                                 $("#prePackCase").val("");
                                 $("#prePackStart").val("");
                                 $("#prePackEnd").val("");
                             }
                         },
                         {
                             text: '打印箱号',
                             action: function (e, dt, node, config) {
                                 var check = $("table tbody input:checked");
                                 if (check.length === 0) {
                                     msgErro("请在列表中勾选一项!");
                                     return null;
                                 }
                                 msgConfirm("确定要打印箱号吗？", function (isConfirm) {
                                     if (isConfirm) {
                                         for (var i = 0; i < check.length; i++) {
                                             var LODOP = getLodop();
                                             LODOP.SET_LICENSES("", "B373432C4C51542C45D4E0F4A634612C", "C94CEE276DB2187AE6B65D56B3FC2848", "");
                                             LODOP.SET_PRINTER_INDEX("@ViewBag.PrintSettingCase");
                                             LODOP.ADD_PRINT_BARCODE(20, 30, 340, 80, "128B", $(check[i]).attr("StorageCase"));
                                             LODOP.SET_PRINT_STYLE("FontSize", 40);
                                             LODOP.SET_PRINT_STYLEA(0, "ShowBarText", 0);
                                             LODOP.ADD_PRINT_TEXT(110, 100, 360, 100, $(check[i]).attr("StorageCase"))
                                             //LODOP.PREVIEW();
                                             LODOP.PRINT();
                                         }
                                         msgAlert("打印成功");
                                     }
                                 });
                             }
                         },
                         {
                             text: '打印单据',
                             action: function () {
                                 var sysIds = GetGridMultiselectSysId();
                                 if (sysIds != null) {
                                     var LODOP = getLodop();
                                     LODOP.SET_LICENSES("", "B373432C4C51542C45D4E0F4A634612C", "C94CEE276DB2187AE6B65D56B3FC2848", "");
                                     LODOP.SET_PRINT_PAGESIZE(1, "2100", "2970", "");
                                     LODOP.SET_PRINTER_INDEX("@ViewBag.PrintName");
                                     LODOP.SET_PRINT_STYLEA(0, "FontSize", 18);
                                     LODOP.ADD_PRINT_URL(30, 20, 746, "95%", "http://" + window.location.host + "/Print/PrintPrebulkPackByBatch?sysIds=" + sysIds + "&warehouseSysId=@ViewBag.WarehouseSysId");
                                     LODOP.SET_PRINT_STYLEA(0, "HOrient", 3);
                                     LODOP.SET_PRINT_STYLEA(0, "VOrient", 3);
                                     LODOP.PRINT();
                                     msgAlert("打印成功");
                                 }
                             }
                         },
                         @if (AuthorizeManager.HasFunction(AuthKeyConst.OrderManagement_PrebulkPack_Edit, User.Identity.Name))
                        {
                                <text>
                              {
                                  text: '编辑',
                                  action: function (e, dt, node, config) {
                                      var sysId = GetGridSysId();
                                      if (sysId != null) {
                                          var selectRow = _self.table.rows(':has(:checkbox:checked)');
                                          if (selectRow.length == 1) {
                                              if (selectRow.data()[0].Status != 20 && selectRow.data()[0].Status != 25) {
                                                  msgAlert("只有封箱中的才能编辑!");
                                                  return;
                                              }
                                              window.location.href = "/PrebulkPack/UpdatePrebulkPack?sysId=" + sysId;
                                          }
                                      }
                                  }
                              },
                              </text>
                            }

                          @if (AuthorizeManager.HasFunction(AuthKeyConst.OrderManagement_PrebulkPack_Delete, User.Identity.Name))
                            {
                                        <text>
                                  {
                                      text: '删除',
                                      action: function (e, dt, node, config) {
                                          var sysIdList = GetGridMultiselectSysId();
                                          if (sysIdList != null) {
                                              msgConfirm("确定要删除所选的记录吗？", function (isConfirm) {
                                                  if (isConfirm) {
                                                      $.ajax({
                                                          url: "/PrebulkPack/DeletePrebulkPack?sysIdList=" + sysIdList,
                                                          type: "GET",
                                                          success: function (data) {
                                                              if (data.Success) {
                                                                  msgSuccess("删除成功!");
                                                                  location.reload();
                                                              }
                                                              else {
                                                                  msgErro(data.Message);
                                                              }
                                                          },
                                                          error: function () {
                                                              msgErro("操作失败");
                                                          }
                                                      });
                                                  }
                                              });
                                          }
                                      },
                                  }

                                  </text>
                            }
                            @*,@if (AuthorizeManager.HasFunction(AuthKeyConst.OrderManger_PrebulkPack_Export, User.Identity.Name))
                            {
                                <text>
                                {
                                    text: '导入',
                                    action: function (e, dt, node, config) {

                                        var sysIdList = GetGridMultiselectSysId();
                                        if (sysIdList == null) {
                                            msgErro("请选择需要导入的散货单");
                                            return false;
                                        }
                                        var selectRows = _self.table.rows(':has(:checkbox:checked)');
                                        for (var i = 0; i < selectRows.length; i++) {
                                            if (selectRows.data()[i].Status != 10) {
                                                msgAlert("只有新增的才能导入!");
                                                return;
                                            }
                                        }
                                        $("#importPrebulkPackButton").click();
                                    }
                                }
                                </text>
                            }*@

                    ],
                    "columnDefs": [
                        {
                            "targets": 0,
                            "width": "15px",
                            render: function (data, type, full, meta) {
                                return '<input type="checkbox" id="checkbox-all-' + full.SysId + '" value="' + full.SysId + '" StorageCase="' + full.StorageCase + '" />';
                            }
                        },
                        {
                            "targets": 1,
                            "width": "15%",
                            render: function (data, type, full, meta) {
                                return '<a target="_blank" href="/PrebulkPack/PrebulkPackView?sysId=' + full.SysId + '">' + full.PreBulkPackOrder + '</a>';
                            }
                        },
                        {
                            "targets": 3,
                            "width": "10%",
                            render: function (data, type, full, meta) {
                                if (full.OutboundSysId == '' || full.OutboundSysId == null || full.OutboundOrder == '' || full.OutboundOrder == null) {
                                    return '';
                                }
                                else {
                                    return '<a target="_blank" href="/Outbound/OutboundView?sysId=' + full.OutboundSysId + '">' + full.OutboundOrder + '</a>';
                                }

                            }
                        }
                    ],
                    "bServerSide": true,
                    "bProcessing": true,
                    "bPaginate": true, //翻页功能
                    "bLengthChange": true, //改变每页显示数据数量
                    "bFilter": false, //过滤功能
                    "bSort": false, //排序功能
                    "bInfo": true, //页脚信息
                    "bAutoWidth": true, //自动宽度
                    "aaSorting": [[2, "Asc"]],
                    "oLanguage": {
                        "sLengthMenu": "每页显示 _MENU_ 条记录",
                        "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                        "sInfoEmpty": "",
                        "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                        "oPaginate": {
                            "sFirst": "首页",
                            "sPrevious": "前一页",
                            "sNext": "后一页",
                            "sLast": "尾页"
                        },
                        "sZeroRecords": "没有检索到数据"
                    }
                });

                $("#btnSearch").bind("click", function () { //按钮 触发table重新请求服务器
                    _self.table.ajax.reload();
                });

                $("#prePackForm").validate({
                    ignore: [],
                    rules: {
                        prePackLot: {
                            required: true
                        },
                        prePackCase: {
                            required: true
                        },
                        prePackStart: {
                            required: true
                        },
                        prePackEnd: {
                            required: true
                        },
                    }
                });
            },
            GenerateCase: function () {
                //生成箱号
                if ($("#prePackForm").valid()) {
                    var prePackLot = $("#prePackLot").val().trim();
                    var prePackCase = $("#prePackCase").val().trim();
                    var prePackStart = parseInt($("#prePackStart").val());
                    var prePackEnd = parseInt($("#prePackEnd").val());

                    if (prePackStart < 0) {
                        msgErro("起始值不能小于0");
                        return false;
                    }
                    if (prePackEnd < prePackStart) {
                        msgErro("起始值不能大于结束值");
                        return false;
                    }

                    var bulkPackDtos = [];
                    for (var i = prePackStart; i <= prePackEnd; i++) {
                        var bulkPack = {
                            StorageCase: prePackLot + "-" + prePackCase + "-" + i
                        };
                        bulkPackDtos.push(bulkPack);
                    }

                    var request = {
                        PreBulkPackDtos: bulkPackDtos
                    };

                    saveLoading('show');
                    $.ajax({
                        url: "@Url.Action("AddPreBulkPack", "PrebulkPack")",
                        data: request,
                        type: "post",
                        success: function (data) {
                            saveLoading('hide');
                            $('#generateCaseModal').modal('hide');
                            if (data.Success) {
                                msgSuccess(data.Message);
                                PrebulkPackManage.table.ajax.reload();
                            }
                            else {
                                msgErro(data.Message);
                            }
                        },
                        error: function () {
                            saveLoading('hide');
                            msgErro("操作失败！");
                        }
                    });
                }
            }
        };

        $(function () {
            PrebulkPackManage.init();
        });

        function ImportPrebulkPackExcelData(obj) {
            var typeName = common.GetFileTypeName(obj.files[0].name);
            if (typeName == '') {
                msgAlert("请选择excel文件进行导入！");
                return false;
            }
            if (typeName == '.xlsx') {
                msgAlert("请选择03版之前的excel文件进行导入！");
                return false;
            }
            if (typeName != '' && typeName == '.xls') {
                saveLoading('show');

                var sysIdList = GetGridMultiselectSysId();
                var formData = new FormData();
                formData.append("file", $(obj)[0].files[0]);
                formData.append("sysIds", sysIdList);
                $.ajax({
                    url: "@Url.Action("ImportData", "PrebulkPack")",
                    type: 'POST',
                    data: formData,
                    contentType: false,
                    processData: false,
                    success: function (data) {
                        saveLoading('hide');
                        $("#importPrebulkPackButton").val('');
                        if (data.Success) {
                            msgSuccess(data.Message);
                            PrebulkPackManage.table.ajax.reload();
                        }
                        else {
                            msgErro(data.Message);
                            return false;
                        }
                    },
                    error: function (data) {
                        saveLoading('hide');
                        msgErro("导入失败！");
                        $("#importPrebulkPackButton").val('');
                        return false;
                    }
                });
            }
        }
        //

    </script>

}