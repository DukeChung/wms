@using NBK.WMS.Portal.Helpers
@model NBK.ECService.WMS.DTO.AssemblyRuleDto

@{
    ViewBag.Title = "加工匹配规则";
}

@Html.Breadcrumb("增值服务", "加工匹配规则")

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <form id="AssemblyRuleForm" class="form-horizontal" method="post">
        <div class="ibox-content m-b-sm border-bottom">
            <div class="row">
                <div class="col-sm-1">
                </div>
                <div class="col-sm-11" style="color: #a9a9a9; margin-bottom: 10px">
                    当前页面设置主要是用于加工单加工规则设置,请明确设置规则后在进行操作.
                    <input type="hidden" id="SysId" name="SysId" value="@Model.SysId.GetValueOrDefault()" />
                </div>
            </div>

            <div class="row">
                <div class="col-sm-1">
                </div>
                <div class="col-sm-11">
                    <div class="form-group">
                        <label class="control-label" for="">加工匹配规则</label>
                        <div class="row">
                            <div class="col-sm-2">
                                <select class="form-control m-b" name="Status" id="Status" style="width: 80%">
                                    @if (Model.Status)
                                    {
                                        <option value="true" selected="selected">开启</option>
                                        <option value="false">关闭</option>
                                    }
                                    else
                                    {
                                        <option value="true">开启</option>
                                        <option value="false" selected="selected">关闭</option>
                                    }
                                </select>
                            </div>
                            <div class="col-sm-10" style="margin-left: -40px; color: #a9a9a9; margin-top: 15px;">
                                开启:选择开启后,系统将根据下列规则设置对加工订单进行干预.关闭:选择关闭后系统将不会对加工订单进行任何干预.
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-sm-1">
                </div>
                <div class="col-sm-11">
                    <div class="form-group">
                        <label class="control-label" for="">按批次属性匹配 </label>
                        <div class="row">
                            <div class="col-sm-2">
                                <select class="form-control m-b" name="MatchingLotAttr" id="MatchingLotAttr" style="width: 80%">
                                    @if (Model.MatchingLotAttr)
                                    {
                                        <option value="true" selected="selected">开启</option>
                                        <option value="false">关闭</option>
                                    }
                                    else
                                    {
                                        <option value="true">开启</option>
                                        <option value="false" selected="selected">关闭</option>
                                    }
                                </select>
                            </div>
                            <div class="col-sm-10" style="margin-left: -40px; color: #a9a9a9; margin-top: 15px;">
                                开启:按批次属性匹配,在加工的时候按照指定的批次属性对库存进行筛选.关闭:加工的时候不对批次进行筛选
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-1">
                </div>
                <div class="col-sm-11">
                    <div class="form-group">
                        <label class="control-label" for="">加工领料排序规则 </label>
                        <div class="row">
                            <div class="col-sm-2">
                                <select class="form-control m-b" name="DeliverySortRules" id="DeliverySortRules" style="width: 80%">
                                    @{
                                        foreach (var sortRule in (List<SelectListItem>)ViewBag.DeliverySortRulesList)
                                        {
                                            if (Model.DeliverySortRules.ToString() == sortRule.Value)
                                            {
                                                <option value="@sortRule.Value" selected>@sortRule.Text</option>
                                            }
                                            else
                                            {
                                                <option value="@sortRule.Value">@sortRule.Text</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-sm-10" style="margin-left: -40px; color: #a9a9a9; margin-top: 15px;">
                                设置加工领料时的排序规则,无规则时不进行排序
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-1">
                </div>
                <div class="col-sm-11">
                    <div class="form-group">
                        <label class="control-label" for="">商品外借按渠道库存匹配</label>
                        <div class="row">
                            <div class="col-sm-2">
                                <select class="form-control m-b" name="MatchingSkuBorrowChannel" id="MatchingSkuBorrowChannel" style="width: 80%">
                                    @if (Model.MatchingSkuBorrowChannel)
                                    {
                                        <option value="true" selected="selected">开启</option>
                                        <option value="false">关闭</option>
                                    }
                                    else
                                    {
                                        <option value="true">开启</option>
                                        <option value="false" selected="selected">关闭</option>
                                    }
                                </select>
                            </div>
                            <div class="col-sm-10" style="margin-left: -40px; color: #a9a9a9; margin-top: 15px;">
                                开启:选择开启后,商品外借将会对渠道库存校验.关闭:选择关闭后商品外借将不会对渠道库存校验.
                            </div>
                        </div>
                    </div>
                </div>

            </div>           

            <div class="row">
                <div class="col-sm-11">
                </div>
                <div class="col-sm-1">
                    <button id="btnSave" class="btn btn-primary" type="button" style="margin-top: 23px; float: left;" onclick="SaveAssemblyRule()">保存</button>
                </div>
            </div>
        </div>
    </form>
</div>



@section Scripts {


    <script src="~/Scripts/Utility/Common.js"></script>
    <script type="text/javascript">
        var flag = false;
        function SaveAssemblyRule() {
            if (flag) {
                return;
            } flag = true;
            $.ajax({
                url: "/RuleSetting/SaveAssemblyRule",
                type: "POST",
                data: $("#AssemblyRuleForm").serializeObject(),
                success: function (data) {
                    if (data.Success) {
                        msgSuccess(data.Message);
                        window.location.href = "/RuleSetting/AssemblyRule";
                    } else {
                        msgErro(data.Message);
                    }
                },
                error: function (data) {
                    msgErro(data.Message);
                }
            });
        }

    </script>
}
