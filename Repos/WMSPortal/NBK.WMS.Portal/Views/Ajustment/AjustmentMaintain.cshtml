@using NBK.WMS.Portal.Helpers

@{
    ViewBag.Title = "损益单管理";
}

@Html.Breadcrumb("库存管理", "损益单管理")
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}


<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom">
        <div class="row">
            <div class="col-sm-3">
                @Html.SearchTextBox("损益单编号", "AdjustmentOrder")
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                    <label class="control-label" for="Status">单据状态</label>
                    <select class="form-control m-b" name="Status" id="Status">
                        <option selected>全部</option>
                        <option value="10">新建</option>
                        <option value="20">已审核</option>
                        <option value="-999">已作废</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("创建人", "CreateUserName")
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                    <label class="control-label" for="Status">损益类型</label>
                    <select class="form-control m-b" name="Type" id="Type">
                        <option selected>全部</option>
                        <option value="10">损益</option>
                        <option value="20">退货损益</option>
                        <option value="30">移仓损益</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                @Html.SearchTextBox("商品条码", "UPC")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("商品编号", "SkuCode")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("商品名称", "SkuName")
            </div>
            <div class="col-sm-2">
                @Html.SearchTextBox("来源单号", "SourceOrder")
            </div>
            <div class="col-sm-1">
                <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:25px;float: left; ">查询</button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <table id="gvAjustment" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th width="5%"><input type="checkbox" id="ckbAll" onclick="gvCheckAll(this);" /></th>
                                <th data-data="AdjustmentOrder">损益单编号</th>
                                <th data-data="StatusName">单据状态</th>
                                <th data-data="TypeName">损益类型</th>
                                <th data-data="SourceOrder">来源单号</th>
                                <th data-data="CreateInfoDisplay">创建时间</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script>
        var AjustmentMaintain = {
            table: {},
            init: function () {
                var _self = this;

                _self.table = $('#gvAjustment').DataTable({
                    "sAjaxSource": "GetAdjustmentListByPage",
                    "fnServerParams": function (aoData) { //查询条件
                        aoData.push(
                            { "name": "AdjustmentOrder", "value": $("#AdjustmentOrder").val() },
                            { "name": "Status", "value": $("#Status").val() },
                            { "name": "Type", "value": $("#Type").val() },
                            { "name": "CreateUserName", "value": $("#CreateUserName").val() },
                            { "name": "UPC", "value": $("#UPC").val() },
                            { "name": "SkuCode", "value": $("#SkuCode").val() },
                            { "name": "SkuName", "value": $("#SkuName").val() },
                            { "name": "SourceOrder", "value": $("#SourceOrder").val() }
                        );
                    },
                    dom: 'Bfrtip',
                    buttons: [
                        {
                            text: '新增',
                            action: function (e, dt, node, config) {
                                window.location.href = "/Ajustment/AddAjustment";
                            },
                        }
                        , {
                            text: '编辑',
                            action: function (e, dt, node, config) {
                                var sysId = GetGridSysId();
                                if (sysId != null) {

                                    var selectRow = AjustmentMaintain.table.rows(':has(:checkbox:checked)');
                                    if (selectRow.length == 1) {
                                        if (selectRow.data()[0].Status != 10) {
                                            msgAlert("只有新建的损益单才能编辑!");
                                            return;
                                        }
                                        window.location.href = "/Ajustment/UpdateAjustment?sysId=" + sysId;
                                    }
                                }
                            },
                        }
                    ],
                    "columnDefs": [
                        {
                            "targets": 0,
                            "width": "15px",
                            render: function (data, type, full, meta) {
                                return '<input type="checkbox" id="checkbox-all-' + full.SysId + '" value="' + full.SysId + '" />';
                            }
                        },
                        {
                            "targets": 1,
                            "width": "15%",
                            render: function (data, type, full, meta) {
                                return '<a target="_blank" href="/Ajustment/AjustmentView?sysId=' + full.SysId + '">' + full.AdjustmentOrder + '</a>';
                            }
                        }
                    ],
                    "bServerSide": true,
                    "bProcessing": true,
                    "bPaginate": true, //翻页功能
                    "bLengthChange": true, //改变每页显示数据数量
                    "bFilter": false, //过滤功能
                    "bSort": false, //排序功能
                    "bInfo": true, //页脚信息
                    "bAutoWidth": true, //自动宽度
                    "aaSorting": [[2, "Asc"]],
                    "oLanguage": {
                        "sLengthMenu": "每页显示 _MENU_ 条记录",
                        "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                        "sInfoEmpty": "",
                        "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                        "oPaginate": {
                            "sFirst": "首页",
                            "sPrevious": "前一页",
                            "sNext": "后一页",
                            "sLast": "尾页"
                        },
                        "sZeroRecords": "没有检索到数据"
                    }
                });

                $("#btnSearch").bind("click", function () { //按钮 触发table重新请求服务器
                    AjustmentMaintain.table.ajax.reload();
                });

            }
        }

        $(function () {
            AjustmentMaintain.init();
        })


    </script>
}
