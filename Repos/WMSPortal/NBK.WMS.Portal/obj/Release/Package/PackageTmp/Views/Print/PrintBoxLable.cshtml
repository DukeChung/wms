@using NBK.WMS.Portal.Helpers
@model NBK.ECService.WMS.DTO.PrintVanningDetailStickDto

@{
    ViewBag.Title = "PrintBoxLable";
    Layout = null;
}
<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no, minimal-ui" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/Print.css" rel="stylesheet" />

<div style="font-size:11px; margin-left:-5px; font-family:微软雅黑;">
    <div style="width:363px; border:1px solid #000;">
        <div style="border-bottom:1px solid #000;">
            <div style="padding:10px 5px 10px 10px; width:100%;">
                <div style="width:50%;float:left; font-size:18px; font-weight:500; padding:5px 5px 0px 0px;">国资商城</div>
                <div style="width:50%;float:left; font-size:12px; padding:8px 5px 0px 0px;"></div>
            </div>
        </div>
        <div style="border-bottom:1px solid #000;">
            <div style="width:100%;">
                <div style="width:10%; float:left; font-size:12px; font-weight:500; padding:60px 12px 60px 12px; border-right:1px solid #000;">
                    收件
                </div>
                <div style="width:60%;float:left; padding:5px 0px 50px 5px;">
                    <div>收货人：@Model.ConsigneeName</div>
                    <div>联系电话：@Model.ConsigneePhone</div>
                    <div>收货地址：@Model.ConsigneeAddress</div>
                    <div>邮编：100001</div>
                    <div></div>
                </div>
                <div style="width:30%;float:left;">
                    
                </div>
            </div>
        </div>
        <div style="border-bottom:1px solid #000; font-size:10px;">
            <div style="width:100%;">
                <div style="padding:5px 0px 5px 5px; width:70%;float:left; border-right:1px solid #000;">
                    签收提醒：<br />
                    收货时请检查物流外包装的完整性，当发现包装外表有水污、破损或包装已被拆封等异常情况时，请立即开箱验货。<br />
                    签收即表示您已检视并认可商品完好。<br />
                    所购商品数量较多时可能会分为多个包裹包装，请核对包裹数量。
                </div>
                <div style="width:30%;float:left;">
                    <div style="padding:0px 0px 20px 5px; margin-top:-10px;">顾客签名：</div>
                    <div style="padding:25px 0px 20px 5px;">日期：</div>
                </div>
            </div>
        </div>
        <div>
            <div style="width:100%;">
                <div style="width:73%;float:left; padding:20px 5px 20px 10px; border-right:1px solid #000;">
                    
                </div>
                <div style="width:27%;float:left;">
                    <div style="padding:5px 0px 5px 5px;">包裹重量：@Html.Raw(@Model.Weight)kg</div>
                    @{
                        if (ViewBag.ActionType == "Finish")
                        {
                            <div style="padding:5px 0px 5px 5px;">包裹合计：@Html.Raw(@Model.ParcelNumber)个</div>
                        }
                        else
                        {
                            <div style="padding:5px 0px 5px 5px;">包裹序号：@Model.ParcelNumber</div>
                        }
                    }
                    
                </div>
            </div>
        </div>
    </div>

    <div style="width: 363px; border:1px solid #000; margin-top:50px;">
        <div style="border-bottom:1px solid #000;">
            <div style="padding:5px 5px 5px 5px; width:100%;">
                <div style="width:45%;float:left;">收货人：@Model.ConsigneeName</div>
                <div style="width:55%;float:left;">联系电话：@Model.ConsigneePhone</div>
            </div>
            <div style="padding:0px 5px 5px 5px;clear:both; width:100%;">
                收货地址：@Model.ConsigneeAddress
            </div>
            <div style="height:50px;"></div>
        </div>
        <div style="border-bottom:1px solid #000;">
            <div width:100%;">
                <div style="width:10%; float:left; font-size:12px; font-weight:500; padding:12px 12px 12px 12px;">
                    寄件
                </div>
                <div style="width:90%;float:left; border-left:1px solid #000; padding:5px 0px 5px 5px;">
                    <div style="width:100%;">
                        <div style="width:40%; float:left;">
                            发货人：@Model.Contacts
                        </div>
                        <div style="width:60%; float:left;">
                            联系电话：@Model.Telephone
                        </div>
                    </div>
                    <div style="clear:both; padding:0px 5px 0px 0px;">
                        发货地址：@Model.Address
                    </div>
                    <div style="clear:both; padding:-5px 5px 5px -2px;">
                        邮编：100001
                    </div>
                </div>
            </div>
        </div>
        <div style="padding:5px 0px 5px 10px;width:100%;">
            <div style="float:left;width:25%; font-size:14px; font-weight:500;">@Model.PrintMallName</div>
            <div style="float:left;width:30%; font-size:10px; padding:2px 0px 0px 0px">@Model.PrintMallHttpUrl</div>
            <div style="float:left;width:45%; font-size:10px; padding:2px 5px 0px 5px">客服热线：@Model.PrintMallPhone</div>
        </div>
    </div>
</div>