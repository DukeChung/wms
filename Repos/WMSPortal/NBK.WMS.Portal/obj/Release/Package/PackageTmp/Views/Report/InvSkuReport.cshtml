@using NBK.AuthServiceUtil
@using NBK.ECService.WMS.DTO
@using NBK.WMS.Portal.Helpers

@{
    ViewBag.Title = "库存汇总报告";
}
@Html.Breadcrumb("报表", "库存汇总报告")
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
}




<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom">
        <form method="post" id="exportForm">
            <div class="row">
                <div class="col-sm-3">
                    @Html.SearchTextBox("商品名称", "SkuName")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("商品编号", "SkuCode")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("UPC", "UPC")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("外部ID", "OtherId")
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label class="control-label">所属仓库:</label>
                        <select id="SearchWarehouseSysId" name="SearchWarehouseSysId" class="form-control">
                            @{
                                foreach (var warehouse in (List<SelectItem>)ViewBag.WarehouseList)
                                {
                                    <option value="@warehouse.Value">@warehouse.Text</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label class="control-label" for="Region">是否原材料</label>
                        <select id="IsMaterial" name="IsMaterial" class="form-control ">
                            <option value="">全部</option>
                            <option value="true">是</option>
                            <option value="false">否</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group" style="line-height:85px">
                        <input type="hidden" id="GreaterThanZeroVal" name="GreaterThanZero" />
                        <input type="checkbox" id="GreaterThanZero" class="control-label" />不显示为0的库存
                    </div>
                </div>
                <div class="col-sm-3">
                    <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:25px;float: left; ">查询</button>
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <table id="gvInvSkuReport" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th data-data="SkuOtherId">商品外部ID</th>
                                <th data-data="SkuName">商品名称</th>
                                <th data-data="UPC">UPC</th>
                                <th data-data="DisplayQty">库存数量</th>
                                <th data-data="WareHouseName">仓库名称</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>


@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/dataPicker")

    <script>
        var InvSkuReportReport = {
            table: {},
            init: function () {
                var _self = this;

                _self.table = $('#gvInvSkuReport').DataTable({
                    "sAjaxSource": "GetInvSkuReport",
                    "fnServerParams": function (aoData) { //查询条件
                        aoData.push(
                            { "name": "SkuName", "value": $("#SkuName").val() },
                            { "name": "SkuCode", "value": $("#SkuCode").val() },
                            { "name": "UPC", "value": $("#UPC").val() },
                            { "name": "SearchWarehouseSysId", "value": $("#SearchWarehouseSysId").val() },
                            { "name": "OtherId", "value": $("#OtherId").val() },
                            { "name": "GreaterThanZero", "value": $("#GreaterThanZero").is(':checked') },
                            { "name": "IsMaterial", "value": $("#IsMaterial").val() }
                        );
                    },
                    dom: 'Bfrtip',
                    buttons: [
                        'pageLength',
                        @if (AuthorizeManager.HasFunction(AuthKeyConst.Report_InvSkuReportExport, User.Identity.Name))
                        {
                            <text>
                            {
                                text: '导出',
                                action: function (e, dt, node, config) {
                                    var exportForm = $("#exportForm");
                                    exportForm.attr("action", '@Url.Action("InvSkuReportExport")');
                                    exportForm.submit();
                                }
                            }
                            </text>
                        }
                    ],
                    "columnDefs": [],
                    "bServerSide": true,
                    "bProcessing": true,
                    "bPaginate": true, //翻页功能
                    "bLengthChange": true, //改变每页显示数据数量
                    "bFilter": false, //过滤功能
                    "bSort": false, //排序功能
                    "bInfo": true, //页脚信息
                    "bAutoWidth": true, //自动宽度
                    "aaSorting": [[2, "Asc"]],

                    "oLanguage": {
                        buttons: {
                            pageLength: {
                                _: "每页显示 %d 条记录"
                            }
                        },
                        "sLengthMenu": "每页显示 _MENU_ 条记录",
                        "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                        "sInfoEmpty": "",
                        "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                        "oPaginate": {
                            "sFirst": "首页",
                            "sPrevious": "前一页",
                            "sNext": "后一页",
                            "sLast": "尾页"
                        },
                        "sZeroRecords": "没有检索到数据"
                    }
                });

                $("#btnSearch").bind("click", function () { //按钮 触发table重新请求服务器
                    InvSkuReportReport.table.ajax.reload();
                });

                $("#GreaterThanZero").bind("click", function () {
                    $("#GreaterThanZeroVal").val($("#GreaterThanZero").is(':checked'));
                });
            }
        }

        $(function () {
            InvSkuReportReport.init();
        })


    </script>
}

