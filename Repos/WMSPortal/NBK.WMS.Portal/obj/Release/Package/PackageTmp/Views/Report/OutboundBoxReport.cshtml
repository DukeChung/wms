@using NBK.WMS.Portal.Helpers
@using NBK.AuthServiceUtil

@{
    ViewBag.Title = "出库箱数统计报表";
}

@Html.Breadcrumb("报表", "出库箱数统计报表")
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
}

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom">
        <form method="post" id="exportForm">

            <div class="row">
                <div class="col-sm-3">
                    @Html.SearchTextBox("出库单号", "OutboundOrder")
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label class="control-label" for="Status">出库单状态</label>
                        <select class="form-control m-b" name="Status" id="Status">
                            <option selected>全部</option>
                            <option value="10">新建</option>
                            <option value="30">分配完成</option>
                            <option value="40">拣货完成</option>
                            <option value="70">出库完成</option>
                            <option value="-999">作废</option>
                            <option value="-10">关闭</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("创建时间从", "CreateDateStart")
                </div>
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("创建时间到", "CreateDateEnd")
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("发货时间从", "ActualShipDateStart")
                </div>
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("发货时间到", "ActualShipDateEnd")
                </div>
                <div class="col-sm-3">
                    <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:25px;float: left; ">查询</button>
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <table id="gvOutboundBoxReport" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th data-data="WarehouseName">仓库名称</th>
                                <th data-data="OutboundOrder">出库单号</th>
                                <th data-data="StatusText">状态</th>
                                <th data-data="CreateDateText">创建时间</th>
                                <th data-data="ActualShipDateText">发货时间</th>
                                <th data-data="WholeCaseQty">整箱数量</th>
                                <th data-data="ScatteredCaseQty">散箱数量</th>
                                <th data-data="TotalCaseQty">出库总箱数</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/dataPicker")

    <script>
        var outboundBoxReport = {
            table: {},
            init: function () {
                var _self = this;
                $('#divCreateDateStart .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divCreateDateEnd .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divActualShipDateStart .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divActualShipDateEnd .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });

                _self.table = $('#gvOutboundBoxReport').DataTable({
                    "sAjaxSource": "GetOutboundBoxReport",
                    "fnServerParams": function (aoData) { //查询条件
                        aoData.push(
                            { "name": "OutboundOrder", "value": $("#OutboundOrder").val() },
                            { "name": "Status", "value": $("#Status").val() },
                            { "name": "CreateDateStart", "value": $("#CreateDateStart").val() },
                            { "name": "CreateDateEnd", "value": $("#CreateDateEnd").val() },
                            { "name": "ActualShipDateStart", "value": $("#ActualShipDateStart").val() },
                            { "name": "ActualShipDateEnd", "value": $("#ActualShipDateEnd").val() }
                        );
                    },
                    dom: 'Bfrtip',
                    buttons: [
                        'pageLength',
                        @if (AuthorizeManager.HasFunction(AuthKeyConst.Report_OutboundBoxReport_Export, User.Identity.Name))
                        {
                            <text>
                            {
                                text: '导出',
                                action: function (e, dt, node, config) {
                                    var exportForm = $("#exportForm");
                                    exportForm.attr("action", '@Url.Action("OutboundBoxReportExport")');
                                    exportForm.submit();
                                }
                            }
                            </text>
                        }
                    ],
                    "columnDefs": [],
                    "bServerSide": true,
                    "bProcessing": true,
                    "bPaginate": true, //翻页功能
                    "bLengthChange": true, //改变每页显示数据数量
                    "bFilter": false, //过滤功能
                    "bSort": false, //排序功能
                    "bInfo": true, //页脚信息
                    "bAutoWidth": true, //自动宽度
                    "aaSorting": [[2, "Asc"]],
                    "oLanguage": {
                        buttons: {
                            pageLength: {
                                _: "每页显示 %d 条记录"
                            }
                        },
                        "sLengthMenu": "每页显示 _MENU_ 条记录",
                        "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                        "sInfoEmpty": "",
                        "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                        "oPaginate": {
                            "sFirst": "首页",
                            "sPrevious": "前一页",
                            "sNext": "后一页",
                            "sLast": "尾页"
                        },
                        "sZeroRecords": "没有检索到数据"
                    }
                });

                $("#btnSearch").bind("click", function () {
                    if (!commonCheckDateCompare($("#CreateDateStart").val(), $("#CreateDateEnd").val())) {
                        msgAlert("结束时间应大于开始时间！");
                        return false;
                    }
                    if (!commonCheckDateCompare($("#ActualShipDateStart").val(), $("#ActualShipDateEnd").val())) {
                        msgAlert("结束时间应大于开始时间！");
                        return false;
                    }
                    outboundBoxReport.table.ajax.reload();
                });

            }
        }

        $(function () {
            outboundBoxReport.init();
        })
    </script>
}