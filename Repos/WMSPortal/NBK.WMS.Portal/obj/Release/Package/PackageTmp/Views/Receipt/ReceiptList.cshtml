@using NBK.WMS.Portal.Helpers
@using NBK.AuthServiceUtil
@{
    ViewBag.Title = "收货单管理";
}

@Html.Breadcrumb("入库管理", "收货单管理")
<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom">
        <div class="row">
            <div class="col-sm-3">
                @Html.SearchTextBox("收货单号", "ReceiptOrderSearch")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("供应商", "VendorNameSearch")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("入库单号", "ExternalOrderSearch")
            </div>
            <div class="col-sm-3">
                <label class="control-label">单据状态</label>
                <select id="StatusSearch" name="StatusSearch" class="form-control">
                    @{
                        foreach (var status in (List<SelectListItem>)ViewBag.StatusList)
                        {
                            <option value="@status.Value">@status.Text</option>
                        }
                    }
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                @Html.DataPickerTextBox("收货开始时间", "ReceiptDateFromSearch")
            </div>
            <div class="col-sm-3">
                @Html.DataPickerTextBox("收货结束时间", "ReceiptDateToSearch")
            </div>
            <div class="col-sm-3">
                @Html.DataPickerTextBox("创建开始时间", "CreateDateFromSearch")
            </div>
            <div class="col-sm-3">
                @Html.DataPickerTextBox("创建结束时间", "CreateDateToSearch")
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                <div class="form-group">
                    <label class="control-label" for="Region">是否原材料</label>
                    <select id="IsMaterial" name="IsMaterial" class="form-control ">
                        <option value="">全部</option>
                        <option value="true">是</option>
                        <option value="false">否</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("商品名称", "SkuNameSearch")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("UPC", "UPCSearch")
            </div>
            <div class="col-sm-3">
                <label class="control-label">上架状态</label>
                <select id="ShelvesStatusSearch" name="ShelvesStatusSearch" class="form-control">
                    @{
                        foreach (var status in (List<SelectListItem>)ViewBag.ShelvesStatusList)
                        {
                            <option value="@status.Value">@status.Text</option>
                        }
                    }
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:23px;float: left; ">查询</button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content" style="overflow-x:auto">
                    <table id="gvReceipt" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                @*<th>操作</th>*@
                                <th data-data="ReceiptOrder" style="width:100px">收货单号</th>
                                <th data-data="VendorName" style="width:100px">供应商</th>
                                <th data-data="ReceiptTypeText" style="width:100px">收货单类型</th>
                                <th data-data="StatusText" style="width:100px">单据状态</th>
                                <th data-data="ShelvesStatusText" style="width:100px">上架状态</th>
                                <th data-data="ReceiptDateText" style="width:100px">实际收货时间</th>
                                <th data-data="ExternalOrder" style="width:100px">入库单号</th>
                                <th data-data="AppointUserNames" style="width:100px">作业人</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/dataPicker")
    <script src="~/Scripts/Utility/Common.js"></script>
    <script type="text/javascript">
        var table;
        $(document).ready(function () {
            $('#divReceiptDateFromSearch .input-group.date').datepicker({
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                calendarWeeks: true,
                autoclose: true
            });

            $('#divReceiptDateToSearch .input-group.date').datepicker({
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                calendarWeeks: true,
                autoclose: true
            });

            $('#divCreateDateFromSearch .input-group.date').datepicker({
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                calendarWeeks: true,
                autoclose: true
            });

            $('#divCreateDateToSearch .input-group.date').datepicker({
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                calendarWeeks: true,
                autoclose: true
            });

            if ('@ViewBag.ReceiptDateFrom'.length > 0) {
                $("#ReceiptDateFromSearch").val('@ViewBag.ReceiptDateFrom');
            }

            if ('@ViewBag.ReceiptDateTo'.length > 0) {
                $("#ReceiptDateToSearch").val('@ViewBag.ReceiptDateTo');
            }

            table = $('#gvReceipt').DataTable({
                "sAjaxSource": "/Receipt/GetReceiptList",
                "fnServerParams": function (aoData) { //查询条件
                    aoData.push(
                        { "name": "ReceiptOrderSearch", "value": $("#ReceiptOrderSearch").val() },
                        { "name": "VendorNameSearch", "value": $("#VendorNameSearch").val() },
                        { "name": "StatusSearch", "value": $("#StatusSearch").val() },
                        { "name": "ExternalOrderSearch", "value": $("#ExternalOrderSearch").val() },
                        { "name": "ReceiptDateFromSearch", "value": $("#ReceiptDateFromSearch").val() },
                        { "name": "ReceiptDateToSearch", "value": $("#ReceiptDateToSearch").val() },
                        { "name": "CreateDateFromSearch", "value": $("#CreateDateFromSearch").val() },
                        { "name": "CreateDateToSearch", "value": $("#CreateDateToSearch").val() },
                        { "name": "IsMaterial", "value": $("#IsMaterial").val() },
                        { "name": "SkuNameSearch", "value": $("#SkuNameSearch").val() },
                        { "name": "UPCSearch", "value": $("#UPCSearch").val() },
                        { "name": "ShelvesStatusSearch", "value": $("#ShelvesStatusSearch").val() }
                    );
                },
                dom: 'Bfrtip',
                buttons: [],
                "columnDefs": [
                    {
                        "targets": 0,
                        "width": "15%",
                        render: function (data, type, full, meta) {
                            @if (AuthorizeManager.HasFunction(AuthKeyConst.Inbound_Receipt_View, HttpContext.Current.User.Identity.Name))
                            {
                                <text>
                            return '<a target="_blank" href="/Receipt/ReceiptView?sysId=' + full.SysId + '">' + full.ReceiptOrder + '</a>';
                            </text>
                            }
                            else
                            {
                                <text>
                            return full.ReceiptOrder;
                            </text>
                            }
                        }
                    }
                ],
                "bServerSide": true,
                "bProcessing": true,
                "bPaginate": true, //翻页功能
                "bLengthChange": true, //改变每页显示数据数量
                "bFilter": false, //过滤功能
                "bSort": false, //排序功能
                "bInfo": true, //页脚信息
                "bAutoWidth": true, //自动宽度
                "aaSorting": [[2, "Asc"]],
                "oLanguage": {
                    "sLengthMenu": "每页显示 _MENU_ 条记录",
                    "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                    "sInfoEmpty": "",
                    "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                    "oPaginate": {
                        "sFirst": "首页",
                        "sPrevious": "前一页",
                        "sNext": "后一页",
                        "sLast": "尾页"
                    },
                    "sZeroRecords": "没有检索到数据"
                }
            });

            $("#btnSearch").bind("click", function () { //按钮 触发table重新请求服务器
                if (!commonCheckDateCompare($("#ReceiptDateFromSearch").val(), $("#ReceiptDateToSearch").val())) {
                    msgAlert("收货开始时间应小于收货结束时间");
                    return false;
                }
                if (!commonCheckDateCompare($("#CreateDateFromSearch").val(), $("#CreateDateToSearch").val())) {
                    msgAlert("创建开始时间应小于创建结束时间");
                    return false;
                }

                table.ajax.reload();
            });
        });
    </script>
}