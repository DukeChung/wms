@using NBK.WMS.Portal.Helpers

@{
    ViewBag.Title = "装箱单管理";
}

@Html.Breadcrumb("出库管理", "装箱单管理")
<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom">
        <div class="row">
            <div class="col-sm-3">
                @Html.SearchTextBox("装箱单号", "VanningOrderSearch")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("出库单号", "OutboundOrderSearch")
            </div>
            <div class="col-sm-3">
               @Html.SearchTextBox("拣货单号", "PickDetailOrderSearch")
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                    <label class="control-label" for="OutboundStatusSearch">出库单状态</label>
                    <select class="form-control m-b" name="OutboundStatusSearch" id="OutboundStatusSearch">
                        <option selected>全部</option>
                        <option value="10">新建</option>
                        <option value="30">分配完成</option>
                        <option value="40">拣货完成</option>
                        <option value="70">出库完成</option>
                        <option value="-999">作废</option>
                        <option value="-10">关闭</option>
                    </select>
                </div>
            </div>
            
        </div>

        <div class="row">
            <div class="col-sm-3">
                @Html.SearchTextBox("商品名称", "SkuNameSearch")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("UPC", "SkuUPCSearch")
            </div>
            <div class="col-sm-3">
                
            </div>
            <div class="col-sm-3">
                <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:23px;float: left; ">查询</button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content" style="overflow-x:auto">
                    <table id="gvVanning" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                @*<th>操作</th>*@
                                <th data-data="VanningOrder" style="width:100px">装箱单号</th>
                                <th data-data="OutboundOrder" style="width:100px">出库单号</th>
                                <th data-data="TypeText" style="width:100px">单据类型</th>
                                <th data-data="StatusText" style="width:100px">单据状态</th>
                                <th data-data="VanningDateText" style="width:100px">装箱时间</th>
                             
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    <script src="~/Scripts/Utility/Common.js"></script>
    <script type="text/javascript">
        var table;
        $(document).ready(function () {
            table = $('#gvVanning').DataTable({
                "sAjaxSource": "/Vanning/GetVanningList",
                "fnServerParams": function (aoData) { //查询条件
                    aoData.push(
                        { "name": "VanningOrderSearch", "value": $("#VanningOrderSearch").val() },
                        { "name": "OutboundOrderSearch", "value": $("#OutboundOrderSearch").val() },
                        { "name": "PickDetailOrderSearch", "value": $("#PickDetailOrderSearch").val() },
                        { "name": "OutboundStatusSearch", "value": $("#OutboundStatusSearch").val() },
                        { "name": "SkuNameSearch", "value": $("#SkuNameSearch").val() },
                        { "name": "SkuUPCSearch", "value": $("#SkuUPCSearch").val() }
                    );
                },
                dom: 'Bfrtip',
                buttons: [],
                "columnDefs": [
                    {
                        "targets": 0,
                        "width": "15%",
                        render: function (data, type, full, meta) {
                            return '<a href="/Vanning/VanningView?sysId=' + full.SysId + '">' + full.VanningOrder + '</a>';
                        }
                    }
                ],
                "bServerSide": true,
                "bProcessing": true,
                "bPaginate": true, //翻页功能
                "bLengthChange": true, //改变每页显示数据数量
                "bFilter": false, //过滤功能
                "bSort": false, //排序功能
                "bInfo": true, //页脚信息
                "bAutoWidth": true, //自动宽度
                "aaSorting": [[2, "Asc"]],
                "oLanguage": {
                    "sLengthMenu": "每页显示 _MENU_ 条记录",
                    "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                    "sInfoEmpty": "",
                    "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                    "oPaginate": {
                        "sFirst": "首页",
                        "sPrevious": "前一页",
                        "sNext": "后一页",
                        "sLast": "尾页"
                    },
                    "sZeroRecords": "没有检索到数据"
                }
            });

            $("#btnSearch").bind("click", function () { //按钮 触发table重新请求服务器
                table.ajax.reload();
            });
        });
    </script>
}