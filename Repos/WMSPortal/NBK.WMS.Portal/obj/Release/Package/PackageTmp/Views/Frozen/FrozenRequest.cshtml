@using NBK.WMS.Portal.Helpers
@using NBK.ECService.WMS.DTO;

@{
    ViewBag.Title = "库存冻结";
}

@Html.Breadcrumb("冻结管理", "/Frozen/FrozenMaintain", "库存冻结")
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/Content/plugins/chosen/chosenStyles")
}

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div id="FrozenView" class="ibox-content m-b-sm border-bottom">

        <div class="row">
            <label class="col-sm-2 control-label ">
                选择商品
            </label>
        </div>
        <div class="form-group hr-line-dashed"></div>

        <div class="row">
            <div class="col-sm-3">
                <div class="form-group">
                    <label class="control-label" for="Status">冻结类型</label>
                    <select class="form-control m-b" name="Type" id="Type" onchange="FrozenModel.TypeChanged()">
                        <option value="10" selected>储区</option>
                        <option value="20">货位</option>
                        <option value="30">商品</option>
                        <option value="40">货位商品</option>
                    </select>
                </div>
            </div>

            <div class="col-sm-3" id="divZone">
                <div class="form-group">
                    <label class="control-label" for="Zone">储区</label>
                    <select class="form-control chosen-select" name="Zone" id="Zone" onchange="FrozenModel.ZoneChanged()">
                        @{
                            foreach (var zone in (List<SelectItem>)ViewBag.ZoneList)
                            {
                                <option value="@zone.Value">@zone.Text</option>
                            }
                        }
                    </select>
                </div>
            </div>

            <div class="col-sm-3" id="divLoc">
                <div class="form-group">
                    <label class="control-label" for="Loc">货位</label>
                    <select class="form-control chosen-select" name="Loc" id="Loc">
                        <option>请选择</option>
                        @*@{
                            foreach (var loc in (List<SelectItem>)ViewBag.LocationList)
                            {
                                <option value="@loc.Value">@loc.Text</option>
                            }
                        }*@
                    </select>
                </div>
            </div>

            <div class="col-sm-6" id="divSku">
                <div class="col-sm-6">
                    @Html.SearchTextBox("商品UPC", "UPC")
                </div>
                <div class="col-sm-6">
                    @Html.SearchTextBox("商品名称", "SkuName")
                </div>
            </div>

            <div class="col-sm-3">
                <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:25px;float: left; ">查询</button>
                
            </div>
        </div>

        <div class="row">
            <div class="col-sm-9">
                @Html.SearchTextBox("备注", "Memo")
            </div>
            <div class="col-sm-3">
                <a class="btn btn-sm btn-primary" style="margin-top:25px;float: left; " id="btnSave"><i class="fa fa-check-square-o"></i> 冻结</a>
            </div>
            
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-content">
                        <table id="gvSkuList" class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th width="5%"><input type="checkbox" id="ckbAll" onclick="FrozenModel.gvSkuListCheckAll(this);" /></th>
                                    <th data-data="UPC">商品条码</th>
                                    <th data-data="SkuName">商品名称</th>
                                    <th data-data="UOMCode">单位</th>
                                    <th data-data="DisplayQty">可用库存</th>
                                    <th data-data="DisplayFrozenQty">冻结库存</th>
                                    <th data-data="Loc">货位</th>
                                    <th data-data="Lot">批次</th>
                                    <th data-data="Channel">渠道</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/chosen")

    <script>
        var FrozenModel = {
            SkuTable: {},
            init: function () {
                $('.chosen-select').chosen({ no_results_text: "未找到此选项!", width: "100%" });
                $("#divZone").show();
                $("#divLoc").hide();
                $("#divSku").hide();

                FrozenModel.SkuTable = $('#gvSkuList').DataTable({
                    "sAjaxSource": "GetFrozenRequestSkuByPage",
                    "fnServerParams": function (aoData) { //查询条件
                        aoData.push(
                            { "name": "Type", "value": $("#Type").val() },
                            { "name": "Zone", "value": $("#Zone").val() },
                            { "name": "Loc", "value": $("#Loc").val() },
                            { "name": "UPC", "value": $("#UPC").val() },
                            { "name": "SkuName", "value": $("#SkuName").val() }
                        );
                    },
                    dom: 'Bfrtip',
                    buttons: [
                    ],
                    "columnDefs": [
                        {
                            "targets": 0,
                            "width": "15px",
                            render: function (data, type, full, meta) {
                                return '<input type="checkbox" id="checkbox-all-' + full.SysId + '" value="' + full.SysId + '" />';
                            }
                        }
                    ],
                    "bServerSide": true,
                    "bProcessing": true,
                    "bPaginate": true, //翻页功能
                    "bLengthChange": true, //改变每页显示数据数量
                    "bFilter": false, //过滤功能
                    "bSort": false, //排序功能
                    "bInfo": true, //页脚信息
                    "bAutoWidth": true, //自动宽度
                    "aaSorting": [[2, "Asc"]],
                    "oLanguage": {
                        "sLengthMenu": "每页显示 _MENU_ 条记录",
                        "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                        "sInfoEmpty": "",
                        "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                        "oPaginate": {
                            "sFirst": "首页",
                            "sPrevious": "前一页",
                            "sNext": "后一页",
                            "sLast": "尾页"
                        },
                        "sZeroRecords": "没有检索到数据"
                    }
                });

                $("#btnSearch").bind("click", function () { //按钮 触发table重新请求服务器
                    FrozenModel.SkuTable.ajax.reload();
                });

                $("#btnSave").bind("click", function () {

                    if ($("#Zone").val() == null) {
                        msgErro("请选择一个有效的储区！");
                        return;
                    }

                    if ($("#Type").val() == "20" && $("#Loc").val() == "请选择") {
                        msgErro("请选择一个有效的货位！");
                        return;
                    }

                    var confirmStr = "";
                    if ($("#Type").val() == "10"){
                        confirmStr = "确定要冻结所选储区吗?";
                    } else if ($("#Type").val() == "20") {
                        confirmStr = "确定要冻结所选货位吗?";
                    } else if ($("#Type").val() == "30") {
                        confirmStr = "确定要冻结所选商品吗?";
                    } else if ($("#Type").val() == "40") {
                        confirmStr = "确定要冻结所选货位商品吗?";
                    }


                    msgConfirm(confirmStr, function (isConfirm) {
                        if (isConfirm) {
                            var requestData = {
                                Type: $("#Type").val(),
                                ZoneSysId: $("#Zone").val(),
                                Loc: $("#Loc").val(),
                                Memo: $("#Memo").val(),
                                skus: null,
                                LocSkuList: []
                            };

                            if ($("#Type").val() == "30") { //商品级别
                                var sysIdList = GetGridMultiselectSysId();
                                if (sysIdList != null) {
                                    requestData.skus = sysIdList;
                                }
                            } else if ($("#Type").val() == "40") {  //货位商品级别
                                var sysIdList = GetGridMultiselectSysId();
                                if (sysIdList != null) {
                                    var arr = FrozenModel.SkuTable.rows(':has(:checkbox:checked)');

                                    $.each(arr.data(), function (i) {
                                        var selectItem = this;
                                        var pushItem = {
                                            SkuSysId: selectItem.SkuSysId,
                                            Loc: selectItem.Loc
                                        };
                                        requestData.LocSkuList.push(pushItem);
                                    });
                                }
                            }
                            saveLoading('show');
                            $.ajax({
                                url: "@Url.Action("SaveFrozenRequest", "Frozen")",
                                data: requestData,
                                dataType: "json",
                                type: "post",
                                success: function (data) {;
                                    saveLoading();
                                    if (data.success) {
                                        msgSuccess("冻结成功!");
                                        FrozenModel.backParentPage();
                                    }
                                    else {
                                        msgErro(data.message);
                                    }
                                },
                                error: function () {
                                    saveLoading();
                                    msgErro("操作失败！");
                                }
                            });
                        }
                    }, true);


                });
            },
            gvSkuListCheckAll: function (obj) {
                $("#gvSkuList tbody input[type='checkbox']").each(function () {
                    this.checked = obj.checked;
                });
            },
            TypeChanged: function () {
                if ($("#Type").val() == "10") {  //储区
                    $("#divZone").show();
                    $("#divLoc").hide();
                    $("#divSku").hide();
                } else if ($("#Type").val() == "20") {  //货位
                    $("#divZone").show();
                    $("#divLoc").show();
                    $("#divSku").hide();
                    FrozenModel.initLoc();
                } else if ($("#Type").val() == "30" || $("#Type").val() == "40") {  //商品
                    $("#divLoc").hide();
                    $("#divZone").hide();
                    $("#divSku").show();
                    
                }
            },
            ZoneChanged: function () {
                if($("#Type").val() == "20") {
                    FrozenModel.initLoc();
                }
            },
            initLoc: function () {
                $("#Loc").empty();
                $("#Loc").append("<option>请选择</option>");
                $.ajax({
                    url: "@Url.Action("GetSelectLocationList", "Frozen")" + "?zoneSysId=" + $("#Zone").val(),
                    type: "GET",
                    success: function (data) {
                        if (data.Success) {
                            $.each(data.Data, function (i, val) {
                                $("#Loc").append("<option value='" + val.Text + "'>" + val.Text + "</option>");
                            });
                        }
                        $("#Loc").trigger("chosen:updated");
                    },
                    error: function () {
                        msgErro("货位数据源获取失败！");
                    }
                });
            },
            backParentPage: function () {
                window.location.href = '@Url.Action("FrozenMaintain", "Frozen")'
            }
        };

        $(function () {
            FrozenModel.init();
        });

    </script>

}