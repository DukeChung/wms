@using NBK.WMS.Portal.Helpers
@using NBK.ECService.WMS.Utility.Enum
@model NBK.ECService.WMS.DTO.PrintPickingMaterialDto

@{
    Layout = null;
}

<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no, minimal-ui" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/Print.css" rel="stylesheet" />

<div class="">
    <div class="ibox-content  m-b-sm border-bottom">
        <form id="PurchaseForm" class="form-horizontal">
            <div class="form-group">
                <div class="col-xs-12" style="text-align:left">
                    <H1 style="color: red; text-align: left">领料分拣单</H1>
                </div>
            </div>
            <div class="form-group line-dashed">
                <div class="col-xs-12">
                </div>
            </div>
            <div class="form-group">
                @Html.PrintTitle("收货单号", Model.ReceiptOrder)
                @Html.PrintTitle("领料人", Model.PickingUserName)
                @Html.PrintTitle("领料日期", Model.PickingDate.ToString())
            </div>

            <div class="form-group ">
                <div class="col-xs-12">
                    <table class="table">
                        <tr>
                            @Html.PrintTh("商品编号")
                            @Html.PrintTh("商品名称")
                            @Html.PrintTh("UPC")
                            @Html.PrintTh("商品描述")
                            @Html.PrintTh("领料数量")
                        </tr>
                        @{
                            foreach (var info in Model.PrintPickingMaterialDetailDtoList)
                            {
                                <tr>
                                    @Html.PrintTd(info.SkuCode)
                                    @Html.PrintTd(info.SkuName)
                                    @Html.PrintTd(info.UPC)
                                    @Html.PrintTd(info.SkuDescr)
                                    @Html.PrintTd(info.DisplayQty.ToString())
                                </tr>
                            }
                        }
                    </table>
                </div>
            </div>
            <div class="form-group">
                @Html.PrintTitle("领料人(签字)", string.Empty, 5)
                <div class='col-xs-2'></div>
                <div class='col-xs-5'></div>
            </div>

        </form>
    </div>
</div> 