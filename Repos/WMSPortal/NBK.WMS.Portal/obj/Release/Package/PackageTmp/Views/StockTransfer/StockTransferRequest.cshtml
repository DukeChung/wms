@using NBK.WMS.Portal.Helpers
@using NBK.AuthServiceUtil;

@{
    ViewBag.Title = "库存批次转移";
}

@Html.Breadcrumb("库存管理", "库存批次转移")
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom">
        <div class="row">
            <div class="col-sm-3">
                @Html.SearchTextBox("商品名称", "SkuName")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("商品UPC", "UPC")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("批次号", "Lot")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("外部批次号", "ExternalLot")
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                @Html.DataPickerTextBox("生产日期从", "ProduceDateFrom")
            </div>
            <div class="col-sm-3">
                @Html.DataPickerTextBox("生产日期到", "ProduceDateTo")
            </div>
            <div class="col-sm-3">
                @Html.DataPickerTextBox("失效日期从", "ExpiryDateFrom")
            </div>
            <div class="col-sm-3">
                @Html.DataPickerTextBox("失效日期到", "ExpiryDateTo")
            </div>
        </div>

        <div class="ibox" style="margin-bottom:0px">
            <a class="collapse-link">
                <i class="fa fa-chevron-down">更多查询条件</i>
            </a>
            <div class="ibox-content" style="display:none;padding:10px 0px 0px 0px">
                <div class="row">
                    <div class="col-sm-3">
                        @Html.SearchTextBox("批次01", "LotAttr01")
                    </div>
                    <div class="col-sm-3">
                        @Html.SearchTextBox("批次02", "LotAttr02")
                    </div>
                    <div class="col-sm-3">
                        @Html.SearchTextBox("批次03", "LotAttr03")
                    </div>
                    <div class="col-sm-3">
                        @Html.SearchTextBox("批次04", "LotAttr04")
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        @Html.SearchTextBox("批次05", "LotAttr05")
                    </div>
                    <div class="col-sm-3">
                        @Html.SearchTextBox("批次06", "LotAttr06")
                    </div>
                    <div class="col-sm-3">
                        @Html.SearchTextBox("批次07", "LotAttr07")
                    </div>
                    <div class="col-sm-3">
                        @Html.SearchTextBox("批次08", "LotAttr08")
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        @Html.SearchTextBox("批次09", "LotAttr09")
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group" style="line-height:85px">
                            <input type="checkbox" id="GreaterThanZero" class="control-label" />仅显示大于0的库存
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:25px;float: left; ">查询</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <table id="gvStockTransferRequest" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th width="5%"><input type="checkbox" id="ckbAll" onclick="gvCheckAll(this);" /></th>
                                <th data-data="SkuName">商品名称</th>
                                <th data-data="SkuDescr">商品描述</th>
                                <th data-data="UPC">UPC</th>
                                <th data-data="DisplayQty">库存</th>
                                <th data-data="DisplayAvailableQty">可用库存</th>
                                <th data-data="Loc">货位</th>
                                <th data-data="Lot">批次编号</th>
                                <th data-data="ProduceDateDisplay">生产日期</th>
                                <th data-data="ExpiryDateDisplay">失效日期</th>
                                <th data-data="LotAttr01">批次01</th>
                                <th data-data="LotAttr02">批次02</th>
                                <th data-data="LotAttr03">批次03</th>
                                <th data-data="LotAttr04">批次04</th>
                                <th data-data="LotAttr05">批次05</th>
                                <th data-data="LotAttr06">批次06</th>
                                <th data-data="LotAttr07">批次07</th>
                                <th data-data="LotAttr08">批次08</th>
                                <th data-data="LotAttr09">批次09</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/dataPicker")
    <script>
        var StockTransferRequest = {
            table: {},
            init: function () {
                var _self = this;

                $("#GreaterThanZero").prop("checked", true);

                $('#divExpiryDateFrom .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divExpiryDateTo .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divProduceDateFrom .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divProduceDateTo .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                

                _self.table = $('#gvStockTransferRequest').DataTable({
                    "sAjaxSource": "GetStockTransferLotByPage",
                    "fnServerParams": function (aoData) { //查询条件
                        aoData.push(
                            { "name": "SkuName", "value": $("#SkuName").val() },
                            { "name": "UPC", "value": $("#UPC").val() },
                            { "name": "Lot", "value": $("#Lot").val() },
                            { "name": "ExternalLot", "value": $("#ExternalLot").val() },
                            { "name": "ProduceDateFrom", "value": $("#ProduceDateFrom").val() },
                            { "name": "ProduceDateTo", "value": $("#ProduceDateTo").val() },
                            { "name": "ExpiryDateFrom", "value": $("#ExpiryDateFrom").val() },
                            { "name": "ExpiryDateTo", "value": $("#ExpiryDateTo").val() },
                            { "name": "LotAttr01", "value": $("#LotAttr01").val() },
                            { "name": "LotAttr02", "value": $("#LotAttr02").val() },
                            { "name": "LotAttr03", "value": $("#LotAttr03").val() },
                            { "name": "LotAttr04", "value": $("#LotAttr04").val() },
                            { "name": "LotAttr05", "value": $("#LotAttr05").val() },
                            { "name": "LotAttr06", "value": $("#LotAttr06").val() },
                            { "name": "LotAttr07", "value": $("#LotAttr07").val() },
                            { "name": "LotAttr08", "value": $("#LotAttr08").val() },
                            { "name": "LotAttr09", "value": $("#LotAttr09").val() },
                            { "name": "GreaterThanZero", "value": $("#GreaterThanZero").is(':checked') }
                        );
                    },
                    dom: 'Bfrtip',
                    buttons: [
                        {
                            text: '库存转移',
                            action: function (e, dt, node, config) {
                                var sysId = GetGridSysId();
                                if (sysId != null) {
                                    window.location.href = "/StockTransfer/StockTransferAdd?sysId=" + sysId;
                                }
                            },
                        },
                    ],
                    "columnDefs": [
                        {
                            "targets": 0,
                            "width": "15px",
                            render: function (data, type, full, meta) {
                                return '<input type="checkbox" id="checkbox-all-' + full.SysId + '" value="' + full.SysId + '" />';
                            }
                        }
                    ],
                    "sScrollX": "100%",
                    "sScrollXInner": "150%",
                    "bScrollCollapse": true,
                    "bServerSide": true,
                    "bProcessing": true,
                    "bPaginate": true, //翻页功能
                    "bLengthChange": true, //改变每页显示数据数量
                    "bFilter": false, //过滤功能
                    "bSort": false, //排序功能
                    "bInfo": true, //页脚信息
                    "bAutoWidth": true, //自动宽度
                    "aaSorting": [[2, "Asc"]],
                    "oLanguage": {
                        "sLengthMenu": "每页显示 _MENU_ 条记录",
                        "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                        "sInfoEmpty": "",
                        "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                        "oPaginate": {
                            "sFirst": "首页",
                            "sPrevious": "前一页",
                            "sNext": "后一页",
                            "sLast": "尾页"
                        },
                        "sZeroRecords": "没有检索到数据"
                    }
                });

                $("#btnSearch").bind("click", function () { //按钮 触发table重新请求服务器
                    if (!commonCheckDateCompare($("#ExpiryDateFrom").val(), $("#ExpiryDateTo").val())) {
                        msgAlert("失效日期终止日期应大于起始日期！");
                        return false;
                    }

                    if (!commonCheckDateCompare($("#ProduceDateFrom").val(), $("#ProduceDateTo").val())) {
                        msgAlert("生产日期终止日期应大于起始日期！");
                        return false;
                    }

                    StockTransferRequest.table.ajax.reload();
                });
            }
        }

        $(function () {
            StockTransferRequest.init();
        })

    </script>

}