@model NBK.ECService.WMS.DTO.SysCodeDetailDto

@Scripts.Render("~/plugins/validate")
@Scripts.Render("~/plugins/validate/cnMessage")
<script>
    $(function () {
        $("#sysCodeDetailForm").validate({
            ignore: [],
            rules: {
                SeqNo: {
                    required: true,
                    min: 0
                },
                Code: {
                    required: true,
                    maxlength: 30
                },
                Descr: {
                    required: true,
                    maxlength: 128
                }
            }
        });
    });
</script>
<div class="ibox-content modal-dialog"   >
    <div class="row">
        <div class="col-sm-12 b-r">
            <h3 class="m-t-none m-b">新增系统代码</h3>
            <form id="sysCodeDetailForm" class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-2 control-label">代码:</label>
                    <div class="col-sm-4">
                        <input type="hidden" id="SysCodeDetailSysId" name="SysCodeDetailSysId" value="@Model.SysId">
                        <input type="hidden" id="SysCodeSysId" name="SysCodeSysId" value="@ViewBag.SysCodeSysId">
                        <input type="text" id="Code" name="Code" class="form-control required" placeholder="请输代码" value="@Model.Code" maxlength="16" onkeyup="value=value.replace(/[^\a-\z\A-\Z0-9]/g,'')" onpaste="value=value.replace(/[^\a-\z\A-\Z0-9]/g,'')"   >
                    </div>
                    <label class="col-sm-2 control-label">排列序号:</label>
                    <div class="col-sm-4">

                        <input type="number" id="SeqNo" maxlength="2" name="SeqNo" class="form-control required" onkeyup="value=value.replace(/[^0-9]/g,'')" placeholder="请输入排列序号"  value="@Model.SeqNo" >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">描述:</label>
                    <div class="col-sm-10">
                        <input type="text" id="Descr" name="Descr" class="form-control required" value="@Model.Descr"  maxlength="64"  >
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-9"></div>
                    <div class="col-sm-3">
                        <div class="checkbox i-checks">
                            <label>
                                @if (!Model.SysId.HasValue || Model.IsActive)
                                {
                                    <input type="checkbox" id="IsActive" name="IsActive" checked="checked"><i></i>
                                }
                                else
                                {
                                    <input type="checkbox" id="IsActive" name="IsActive" ><i></i>
                                }
                                启用
                            </label>

                        </div>
                    </div>
                </div>
            </form>
            <div class="ibox-footer text-right tooltip-demo">
                <a class="btn btn-sm btn-primary" id="btnSave" onclick="SysCodeDetailSave();"><i class="fa fa-check-square-o"></i> 保存</a>
                <a class="btn btn-white btn-sm" id="btnBack" onclick="modelClose('divWindowSysCodeDetail');"><i class="fa fa-times"></i> 取消</a>
            </div>
        </div>
        
    </div>
</div>


