@using NBK.WMS.Portal.Helpers

@{
    ViewBag.Title = "系统代码编辑";
}

@Html.Breadcrumb("系统代码管理", "/SysCode/Index", "系统代码编辑")

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="tabs-container">
        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#tab-1">常规</a></li>
            <li class=""><a data-toggle="tab" href="#tab-2">明细列表</a></li>
        </ul>
        <div class="tab-content">
            <div id="tab-1" class="tab-pane active">
                <div class="panel-body col-sm-12">

                    <form id="sysCodeForm" class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">系统代码:</label>

                            <div class="col-sm-10">
                                <input type="hidden" id="SysId" name="SysId" value="@ViewBag.SysId">
                                <input type="text" id="SysCodeType" name="SysCodeType" class="form-control" disabled>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">描述:</label>

                            <div class="col-sm-10">
                                <input type="text" id="Descr" name="Descr" class="form-control">
                            </div>
                        </div>
                    </form>
                    <div class="ibox-footer text-right tooltip-demo">
                        <a class="btn btn-sm btn-primary" id="btnSave" onclick="SysCodeSave();"><i class="fa fa-check-square-o"></i> 保存</a>
                        <a class="btn btn-white btn-sm" id="btnBack" onclick="goBack();"><i class="fa fa-times"></i> 返回</a>
                    </div>

                </div>
            </div>
            <div id="tab-2" class="tab-pane">
                <div class="panel-body col-sm-12">
                    <table id="gvSysCodeDetail" class="table table-striped table-bordered table-hover dataTables-example " style="width:100%">
                        <thead>
                            <tr>
                                <th><input type="checkbox" id="ckbAll" onclick="gvCheckAll(this);" /></th>
                                <th data-data="SeqNo" width="5%">排列序号</th>
                                <th data-data="Code" width="25%">代码</th>
                                <th data-data="Descr" width="45%">描述</th>
                                <th data-data="IsActiveText" width="8%">是否启用</th>
                                <th data-data="UpdateText" width="25%">更新时间</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>


    <div id="divWindowSysCodeDetail" class="modal fade" aria-hidden="true" style="display: none;"></div>


</div>


@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")

}

@section Scripts {
    @Scripts.Render("~/plugins/iCheck")
    @Scripts.Render("~/plugins/dataTables", "~/plugins/validate")
    <script src="~/Scripts/Utility/Common.js"></script>
    <script type="text/javascript">
        var table;
        $(document).ready(function () {
            $.ajax({
                url: "/SysCode/GetSysCodeBySysId?sysId=@ViewBag.SysId",
                type: "POST",
                success: function (data) {
                    if (data.success) {
                        $("#SysCodeType").val(data.SysCodeDto.SysCodeType);
                        $("#Descr").val(data.SysCodeDto.Descr);
                    }
                },
                error: function () {
                    // flab.notify.error("错误", "操作失败！");
                }
            });

            table = $('#gvSysCodeDetail').DataTable({
                "sAjaxSource": "GetSysCodeDetailDtoList?sysCodeSysId=@ViewBag.SysId",
                dom: 'Bfrtip',
                buttons: [
                    {
                        text: '新增',
                        action: function (e, dt, node, config) {

                            initSysCodeDetail('');
                        }
                    },
                    {
                        text: '编辑',
                        action: function (e, dt, node, config) {
                            var sysId = GetGridSysId();
                            if (sysId != null) {
                                initSysCodeDetail(sysId);
                            }
                        }
                    },
                    {
                        text: '删除',
                        action: function (e, dt, node, config) {

                            var sysIds = GetGridMultiselectSysId();
                            if (sysIds != null) {
                                msgConfirm("确定要删除当前记录吗?", function () {
                                    $.ajax({
                                        url: "/SysCode/DeleteSysCodeDetail?SysIds=" + sysIds,
                                        type: "POST",
                                        success: function (data) {
                                            if (data.success) {
                                                table.ajax.reload();
                                                msgSuccess('', function () {
                                                });
                                            } else {
                                                msgErro(data.message);
                                            }
                                        },
                                        error: function () {
                                            msgErro("操作失败");
                                        }
                                    });
                                });
                            }
                        }
                    }
                ],
                "columnDefs": [
                    {
                        "targets": 0,
                        "width": "15px",
                        render: function (data, type, full, meta) {
                            return '<input type="checkbox" id="checkbox-all-' + full.SysId + '" value="' + full.SysId + '" />';
                        }
                    }
                ],
                "bServerSide": true,
                "bProcessing": true,
                "bPaginate": false, //翻页功能
                "bLengthChange": true, //改变每页显示数据数量
                "bFilter": false, //过滤功能
                "bSort": false, //排序功能
                "bInfo": false, //页脚信息
                "bAutoWidth": true, //自动宽度
                "aaSorting": [[2, "Asc"]],
                "oLanguage": {
                    "sZeroRecords": "没有检索到数据"
                }
            });
        });

        function initSysCodeDetail(sysCodeSysDetailSysId) {
            modelClose("divWindowSysCodeDetail");
            $("#divWindowSysCodeDetail").load("/SysCode/InitSysCodeDetail?sysId=@ViewBag.SysId&sysCodeSysDetailSysId=" + sysCodeSysDetailSysId, function () {
                $('.i-checks').iCheck({
                    checkboxClass: 'icheckbox_square-green',
                    radioClass: 'iradio_square-green'
                });
                $("#divWindowSysCodeDetail").modal('show');
            });

        }

        function SysCodeDetailSave() {

            if ($("#sysCodeDetailForm").valid()) {
                var url = "";
                if ($("#SysCodeDetailSysId").val() !== '') {
                    url = "/SysCode/UpdateSysCodeDetail?SysId=" + $("#SysCodeDetailSysId").val();
                } else {

                    url = "/SysCode/InsertSysCodeDetail?SysId=" + $("#SysCodeDetailSysId").val();
                }
                $.ajax({
                    url: url,
                    type: "POST",
                    data: $("#sysCodeDetailForm").serializeObject(),
                    success: function (data) {
                        if (data.success) {
                            modelClose("divWindowSysCodeDetail");
                            table.ajax.reload();
                            msgSuccess('');
                        } else {
                            msgErro(data.message);
                        }
                    },
                    error: function () {
                        msgErro("操作失败");
                    }
                });
            }
        }


        function SysCodeSave() {
            $.ajax({
                url: "/SysCode/SaveSysCode?sysId=@ViewBag.SysId",
                type: "POST",
                data: $("#sysCodeForm").serializeObject(),
                success: function (data) {
                    if (data.success) {
                        msgSuccess('', function () {

                        });
                    } else {
                        msgErro(data.message);
                    }
                },
                error: function () {
                    msgErro("操作失败");
                }
            });
        }


    </script>
}

