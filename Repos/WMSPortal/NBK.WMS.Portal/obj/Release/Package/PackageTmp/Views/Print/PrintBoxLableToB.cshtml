@using NBK.WMS.Portal.Helpers
@model NBK.ECService.WMS.DTO.PrintVanningDetailStickDto

@{
    ViewBag.Title = "PrintBoxLable";
    Layout = null;
}
<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no, minimal-ui" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/Print.css" rel="stylesheet" />
 

<div style="font-size:11px; font-family:微软雅黑;" >
    <div style="width:363px; border:1px solid #000;">
        <div style="border-bottom:1px solid #000;">
            <div style="padding:10px 5px 10px 10px; width:100%;">
                <div style="width:50%;float:left; font-size:18px; font-weight:500; padding:5px 5px 0px 0px;">国资商城</div>
                <div style="width:50%;float:left; font-size:12px; padding:8px 5px 0px 0px;"></div>
            </div>
        </div>
        <div style="padding:5px;">
            <table style="border-collapse:collapse;border:none; width:97%; font-size:11px;">
                <tr>
                    <td style="border:1px solid #000; padding:5px;text-align:center;">UPC</td>
                    <td style="border:1px solid #000; padding:5px;text-align:center;">商品名称</td>
                    <td style="border:1px solid #000; padding:5px;text-align:center;">单位</td>
                    <td style="border:1px solid #000; padding:5px;text-align:center;">数量</td>
                </tr>
                @{
                    if (Model != null && Model.PrintVanningDetailStickSkuDto != null && Model.PrintVanningDetailStickSkuDto.Count > 0)
                    {
                        foreach (var info in Model.PrintVanningDetailStickSkuDto)
                        {
                            <tr style="height:27px; vertical-align:middle; text-align:center;">
                                <td style="border:1px solid #000;">@info.UPC</td>
                                <td style="border:1px solid #000;">
                                @{
                                    if(!string.IsNullOrEmpty(info.SkuName) && info.SkuName.Length > 18)
                                    {
                                        info.SkuName = info.SkuName.Substring(0, 18);
                                    }
                                    @info.SkuName
                                 }
                                </td>
                                <td style="border:1px solid #000;">@info.UOMCode</td>
                                <td style="border:1px solid #000;">@info.Qty</td>
                            </tr>
                        }
                    }
                } 
            </table>
            <div style="margin-top:10px; width:100%;">
                <div style="width:60%;float:left;">
                    @{
                        if (ViewBag.ActionType == "Finish")
                        {
                            <div style="padding:5px 0px 5px 5px;">包裹合计：@Html.Raw(@Model.ParcelNumber)个</div>
                        }
                        else
                        {
                            <div style="padding:5px 0px 5px 5px;">包裹序号：@Model.ParcelNumber</div>
                        }
                    }
                </div>
                <div style="width:40%;float:left; padding-top:5px;">
                    <span>SKU:@{@Model.SkuCount} 个</span><span style="margin-left:10px;">商品合计:@{@Model.SkuQty}个</span>
                </div>
            </div>
        </div>
    </div>

    <div id="divFooter" style="width: 363px; border:1px solid #000; margin-top:@{@ViewBag.MarginTop}px">
        <div style="border-bottom:1px solid #000;">
            <div style="padding:5px 5px 5px 5px; width:100%;">
                <div style="width:45%;float:left;">收货人：@Model.ConsigneeName</div>
                <div style="width:55%;float:left;">联系电话：@Model.ConsigneePhone</div>
            </div>
            <div style="padding:0px 5px 5px 5px;clear:both; width:100%;">
                收货地址：@Model.ConsigneeAddress
            </div>
            <div style="height:50px;"></div>
        </div>

        <div style="width:100%; border-bottom:1px solid #000;">
            <div style="width:70%;float:left; padding:35px 5px 35px 5px; border-right:1px solid #000;">

            </div>
            <div style="width:30%;float:left;">
                <div style="padding:0px 0px 20px 5px; margin-top:-10px;">顾客签名：</div>
                <div style="padding:20px 0px 20px 5px;">日期：</div>
            </div>
        </div>

        <div style="padding:5px 0px 5px 10px;width:100%;">
            <div style="float:left;width:25%; font-size:14px; font-weight:500;">@Model.PrintMallName</div>
            <div style="float:left;width:30%; font-size:10px; padding:2px 0px 0px 0px">@Model.PrintMallHttpUrl</div>
            <div style="float:left;width:45%; font-size:10px; padding:2px 5px 0px 5px">客服热线：@Model.PrintMallPhone</div>
        </div>
       
    </div>
</div>
