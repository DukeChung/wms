@using NBK.WMS.Portal.Helpers
@using NBK.AuthServiceUtil
@{
    ViewBag.Title = "盘点查询";
}

@Html.Breadcrumb("库存管理", "盘点查询")
<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom">
        <div class="row">
            <div class="col-sm-3">
                @Html.SearchTextBox("盘点单编号", "StockTakeOrderSearch")
            </div>
            <div class="col-sm-3">
                <label class="control-label">单据状态</label>
                <select id="StatusSearch" name="StatusSearch" class="form-control">
                    @{
                        <option value="">请选择</option>
                        foreach (var status in (List<SelectListItem>)ViewBag.StatusList)
                        {
                            <option value="@status.Value">@status.Text</option>
                        }
                    }
                </select>
            </div>
            <div class="col-sm-3">
                <label class="control-label">盘点人</label>
                <select id="AssignBySearch" name="AssignBySearch" class="form-control chosen-select">
                    @{
                        <option value="">请选择</option>
                        foreach (var user in (List<SelectListItem>)ViewBag.UserList)
                        {
                            <option value="@user.Value">@user.Text</option>
                        }
                    }
                </select>
            </div>
            <div class="col-sm-3">
                <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:23px;float: left; ">查询</button>
            </div>
        </div>
        <div class="ibox" style="margin-bottom:0px">
            <a class="collapse-link">
                <i class="fa fa-chevron-down">更多查询条件</i>
            </a>
            <div class="ibox-content" style="display:none;padding:10px 0px 0px 0px">
                <div class="row">
                    <div class="col-sm-3">
                        @Html.SearchTextBox("UPC", "SkuUPCSearch")
                    </div>
                    <div class="col-sm-3">
                        @Html.SearchTextBox("商品编号", "SkuCodeSearch")
                    </div>
                    <div class="col-sm-3">
                        @Html.SearchTextBox("商品名称", "SkuNameSearch")
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <label class="control-label">创建人</label>
                        <select id="CreateBySearch" name="CreateBySearch" class="form-control chosen-select">
                            @{
                                <option value="">请选择</option>
                                foreach (var user in (List<SelectListItem>)ViewBag.UserList)
                                {
                                    <option value="@user.Value">@user.Text</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-sm-3">
                        @Html.DataPickerTextBox("开始时间", "StartTimeSearch")
                    </div>
                    <div class="col-sm-3">
                        @Html.DataPickerTextBox("完成时间", "EndTimeSearch")
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content" style="overflow-x:auto">
                    <table id="gvStockTake" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th><input type="checkbox" id="ckbAll" onclick="gvCheckAll(this);" /></th>
                                <th data-data="Status"></th>
                                <th data-data="StockTakeOrder" style="width:100px">盘点单号</th>
                                <th data-data="StatusText" style="width:100px">单据状态</th>
                                <th data-data="StockTakeTypeText" style="width:100px">盘点类型</th>
                                @*<th data-data="TotalSkuQty" style="width:100px">合计SKU数</th>
                                <th data-data="TotalQty" style="width:100px">合计商品件数</th>*@
                                <th data-data="CreateUserName" style="width:100px">创建人</th>
                                <th data-data="StartTimeText" style="width:100px">开始时间</th>
                                <th data-data="EndTimeText" style="width:100px">完成时间</th>
                                <th data-data="AssignUserName" style="width:100px">盘点人</th>
                                <th data-data="ReplayUserName" style="width:100px">复盘人</th>
                                @*<th data-data="IsAdjText" style="width:100px">是否损益</th>*@
                            </tr>
                        </thead>
                    </table>
                </div>
                <div class="ibox-footer text-right tooltip-demo">
                    <a class="btn btn-sm btn-primary" id="btnComplete">盘点完成</a>
                    <a class="btn btn-sm btn-primary" id="btnViewReport">查看盘点汇总报告</a>
                </div>
            </div>
        </div>
    </div>
</div>

<form class="form-horizontal">
    <div class="form-group">
        <div class="modal inmodal fade" id="div_AddStockTake" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">盘点人:</label>
                            <div class="col-sm-8">
                                <select id="AssignBy" name="AssignBy" class="form-control">
                                    @{
                                        <option value="">请选择</option>
                                        foreach (var user in (List<SelectListItem>)ViewBag.UserList)
                                        {
                                            <option value="@user.Value">@user.Text</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">仓库:</label>
                            <div class="col-sm-8">
                                <input id="WarehouseSysId" type="hidden" value="@ViewBag.WarehouseSysId" />
                                <input id="WarehouseName" class="form-control" type="text" value="@ViewBag.WarehouseName" readonly />
                            </div>
                            <label id="Msg" class="col-sm-12 control-label" style="color:red;text-align:center"></label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a class="btn btn-sm btn-primary" id="btnSaveStockTake"><i class="fa fa-check-square-o"></i> 保存</a>
                        <a class="btn btn-white btn-sm" id="btnCloseStockTake" data-dismiss="modal"><i class="fa fa-times"></i> 关闭</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
    @Styles.Render("~/Content/plugins/chosen/chosenStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/dataPicker")
    @Scripts.Render("~/plugins/chosen")
    @Scripts.Render("~/plugins/barcode")
    @Scripts.Render("~/plugins/print")
    <script src="~/Scripts/Utility/Common.js"></script>
    <script type="text/javascript">
        var table;
        $(document).ready(function () {
            $('.chosen-select').chosen({ width: "100%" });

            $('#divStartTimeSearch .input-group.date').datepicker({
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                calendarWeeks: true,
                autoclose: true
            });

            $('#divEndTimeSearch .input-group.date').datepicker({
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                calendarWeeks: true,
                autoclose: true
            });

            table = $('#gvStockTake').DataTable({
                "sAjaxSource": "GetStockTakeList",
                "fnServerParams": function (aoData) { //查询条件
                    aoData.push(
                        { "name": "StockTakeOrderSearch", "value": $("#StockTakeOrderSearch").val() },
                        { "name": "StatusSearch", "value": $("#StatusSearch").val() },
                        { "name": "AssignBySearch", "value": $("#AssignBySearch").val() },
                        { "name": "SkuUPCSearch", "value": $("#SkuUPCSearch").val() },
                        { "name": "SkuCodeSearch", "value": $("#SkuCodeSearch").val() },
                        { "name": "SkuNameSearch", "value": $("#SkuNameSearch").val() },
                        { "name": "CreateBySearch", "value": $("#CreateBySearch").val() },
                        { "name": "StartTimeSearch", "value": $("#StartTimeSearch").val() },
                        { "name": "EndTimeSearch", "value": $("#EndTimeSearch").val() }
                    );
                },
                dom: 'Bfrtip',
                buttons: [
                    @if (AuthorizeManager.HasFunction(AuthKeyConst.Inventory_StockTake_AddStockTake, HttpContext.Current.User.Identity.Name))
                    {
                        <text>
                        {
                            text: '新增盘点单',
                            action: function () {
                                //$("#Msg").html("");
                                //$("#AssignBy").val("");
                                //$('#div_AddStockTake').modal("toggle");
                                window.open("/StockTake/NewStockTake");
                            }
                        }
                        </text>
                    },
                    {
                        text: '打印',
                        action: function () {
                            PrintStockTake();
                        }
                    },
                    {
                        text: '删除',
                        action: function () {
                            deleteStockTake();
                        }
                    }
                ],
                "columnDefs": [
                    {
                        "targets": 0,
                        "width": "15px",
                        render: function (data, type, full, meta) {
                            return '<input type="checkbox" id="checkbox-all-' + full.SysId + '" value="' + full.SysId + '" UPC="' + full.UPC + '"/>';
                        }
                    },
                    {
                        "targets": 1,
                        "visible": false
                    },
                    {
                        "targets": 2,
                        "width": "15%",
                        render: function (data, type, full, meta) {
                            @if (AuthorizeManager.HasFunction(AuthKeyConst.Inventory_StockTake_View, HttpContext.Current.User.Identity.Name))
                            {
                                <text>
                            return '<a target="_blank" href="/StockTake/StockTakeView?sysId=' + full.SysId + '">' + full.StockTakeOrder + '</a>';
                                </text>
                            }
                            else
                            {
                                <text>
                                return full.StockTakeOrder;
                                </text>
                            }
                        }
                    }
                ],
                "bServerSide": true,
                "bProcessing": true,
                "bPaginate": true, //翻页功能
                "bLengthChange": true, //改变每页显示数据数量
                "bFilter": false, //过滤功能
                "bSort": false, //排序功能
                "bInfo": true, //页脚信息
                "bAutoWidth": true, //自动宽度
                "aaSorting": [[2, "Asc"]],
                "oLanguage": {
                    "sLengthMenu": "每页显示 _MENU_ 条记录",
                    "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                    "sInfoEmpty": "",
                    "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                    "oPaginate": {
                        "sFirst": "首页",
                        "sPrevious": "前一页",
                        "sNext": "后一页",
                        "sLast": "尾页"
                    },
                    "sZeroRecords": "没有检索到数据"
                }
            });

            $("#btnSearch").bind("click", function () { //按钮 触发table重新请求服务器
                table.ajax.reload();
            });
        });

        $("#btnSaveStockTake").bind("click", function () {
            $("#Msg").html("");
            if ($("#AssignBy").val().trim() == "") {
                $("#Msg").html("请选择盘点人!");
            } else {
                $.ajax({
                    url: "/StockTake/SaveAddStockTake",
                    type: "POST",
                    data: { AssignBy: $("#AssignBy").val(), AssignUserName: $("#AssignBy").find("option:selected").text(), WarehouseSysId: $("#WarehouseSysId").val() },
                    success: function (data) {
                        if (data.Success) {
                            msgSuccess(data.Message);
                            table.ajax.reload();
                        } else {
                            msgErro(data.Message);
                        }
                    },
                    error: function (data) {
                        msgErro(data.Message);
                    }
                });
                $('#div_AddStockTake').modal("hide");
            }
        });

        $("#btnComplete").bind("click", function () {
            var selectedData = getSelectedData(table);
            if (selectedData != null) {
                var isCanFinish = true;
                for (var i = 0; i < selectedData.length; i++) {
                    var status = selectedData[i].Status;
                    if (status == 10 || status == 60) {
                        msgErro("不能操作未开始或已完成的盘点单");
                        isCanFinish = false;
                        break;
                    }
                }

                if (isCanFinish) {
                    var sysIds = GetGridMultiselectSysId();
                    if (sysIds != null) {
                        msgConfirm("确定要盘点完成吗？", function (isConfirm) {
                            if (isConfirm) {
                                saveLoading('show');
                                $.ajax({
                                    url: "/StockTake/StockTakeComplete?sysIds=" + sysIds,
                                    type: "GET",
                                    success: function (data) {
                                        setTimeout(function () {
                                            saveLoading();
                                            if (data.Success) {
                                                msgSuccess(data.Message, setTimeout(function () { table.ajax.reload(); }, 100));
                                            } else {
                                                msgErro(data.Message);
                                            }
                                        }, 100);
                                    },
                                    error: function (data) {
                                        saveLoading();
                                        msgErro(data.Message);
                                    }
                                });
                            }
                        }, true);
                    }
                }
            } else {
                msgErro("请在列表中勾选一项!");
                return false;
            }
        });

        function deleteStockTake() {
            var selectedData = getSelectedData(table);
            if (selectedData != null) {
                var isAllNew = true;
                for (var i = 0; i < selectedData.length; i++) {
                    if (selectedData[i].Status != 10) {
                        msgErro("只能删除未开始状态的盘点单");
                        isAllNew = false;
                        break;
                    }
                }

                if (isAllNew) {
                    var sysIds = GetGridMultiselectSysId();
                    if (sysIds != null) {
                        msgConfirm("确定要删除所选盘点单吗？", function (isConfirm) {
                            if (isConfirm) {
                                saveLoading('show');
                                $.ajax({
                                    url: "/StockTake/DeleteStockTake?sysIds=" + sysIds,
                                    type: "GET",
                                    success: function (data) {
                                        setTimeout(function () {
                                            saveLoading();
                                            if (data.Success) {
                                                msgSuccess(data.Message, setTimeout(function () { table.ajax.reload(); }, 100));
                                            } else {
                                                msgErro(data.Message);
                                            }
                                        }, 100);
                                    },
                                    error: function (data) {
                                        saveLoading();
                                        msgErro(data.Message);
                                    }
                                });
                            }
                        }, true);
                    }
                }
            } else {
                msgErro("请在列表中勾选一项!");
                return false;
            }
        }

        $("#btnViewReport").bind("click", function () {
            var selectedData = getSelectedData(table);
            if (selectedData != null) {
                var isAllFinished = true;
                for (var i = 0; i < selectedData.length; i++) {
                    if (selectedData[i].Status != 60) {
                        msgErro("所选单据必须全部完成");
                        isAllFinished = false;
                        break;
                    }
                }

                if (isAllFinished) {
                    var sysIds = GetGridMultiselectSysId();
                    if (sysIds != null) {
                        var selectedData = getSelectedData(table);
                        window.location.href = "/StockTake/StockTakeReport?sysIds=" + sysIds;
                    }
                }
            }
        });

        function PrintStockTake() {
            var sysId = GetGridSysId();
            if (sysId == null) { return false; }
            var selectedData = getSelectedData(table);
            var LODOP = getLodop();
            LODOP.SET_LICENSES("", "B373432C4C51542C45D4E0F4A634612C", "C94CEE276DB2187AE6B65D56B3FC2848", "");
            LODOP.SET_PRINT_PAGESIZE(1, "2100", "2970", "");
            LODOP.SET_PRINTER_INDEX("@ViewBag.PrintName");
            LODOP.SET_PRINT_STYLEA(0, "FontSize", 18);
            LODOP.ADD_PRINT_URL(30, 20, 746, "95%", encodeURI("http://" + window.location.host + "/Print/PrintStockTake?sysId=" + sysId + "&userName=@ViewBag.CurrentUserName" + "&warehouseSysId=@ViewBag.WarehouseSysId"));
            LODOP.ADD_PRINT_BARCODE(40, 500, 206, 58, "128B", selectedData[0].StockTakeOrder);
            LODOP.SET_PRINT_STYLEA(0, "HOrient", 3);
            LODOP.SET_PRINT_STYLEA(0, "VOrient", 3);
            LODOP.PRINT();
        }
    </script>
}