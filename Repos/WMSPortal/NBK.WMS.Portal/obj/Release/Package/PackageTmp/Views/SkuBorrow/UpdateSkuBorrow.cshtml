@using NBK.WMS.Portal.Helpers
@model NBK.ECService.WMS.DTO.SkuBorrowViewDto
@{
    ViewBag.Title = "编辑商品外借单";
}

@Html.Breadcrumb("商品外借", "/SkuBorrow/SkuBorrowMaintain", "编辑商品外借单")
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/Content/plugins/dropzone/dropZoneStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
    @Styles.Render("~/plugins/codeEditorStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
}

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div id="UpdateSkuBorrow" class="ibox-content m-b-sm border-bottom">

        <form id="SkuBorrowForm" class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label ">
                    <H2 style="color: red;text-align:left">商品外借明细</H2>
                </label>

                <div class="col-sm-7">

                </div>
                <div class="col-sm-3">
                    <div class="row">
                        <div class="col-sm-7">
                        </div>
                        <div class="col-sm-5" id="divBarCode">
                        </div>

                        <div class="col-sm-3">

                        </div>
                        <div class="col-sm-8 font-italic" style="text-align:right" id="divBarCodeValue">@Model.SkuBorrowOrder</div>
                        <div class="col-sm-1">

                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group   hr-line-dashed"></div>

            <div class="form-group">
                <div class="col-sm-1">
                    外借单号:
                </div>
                <div class="col-sm-3">
                    <div class="row">
                        <div class="col-sm-12"> @Model.SkuBorrowOrder </div>
                        <div class="col-sm-12 hr-line-dashed" style="margin-top: 5px"> </div>
                    </div>
                </div>
                <div class="col-sm-1">
                    借出时间:
                </div>
                <div class="col-sm-3">
                    <div class="row">
                        <div class="col-sm-12"> @Model.BorrowStartTimeDisplay </div>
                        <div class="col-sm-12 hr-line-dashed" style="margin-top: 5px"> </div>
                    </div>
                </div>
                <div class="col-sm-1">
                    归还时间:
                </div>
                <div class="col-sm-3">
                    <div class="row">
                        <div class="col-sm-12"> @Model.BorrowEndTimeDisplay</div>
                        <div class="col-sm-12 hr-line-dashed" style="margin-top: 5px"> </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-1">
                    单据状态:
                </div>
                <div class="col-sm-3">
                    <div class="row">
                        <div class="col-sm-12"> @Model.StatusName</div>
                        <div class="col-sm-12 hr-line-dashed" style="margin-top: 5px"> </div>
                    </div>
                </div>
                <div class="col-sm-1">
                    创建时间:
                </div>
                <div class="col-sm-3">
                    <div class="row">
                        <div class="col-sm-12"> @Model.CreateInfoDisplay</div>
                        <div class="col-sm-12 hr-line-dashed" style="margin-top: 5px"> </div>
                    </div>
                </div>
                <div class="col-sm-1">
                    仓库:
                </div>
                <div class="col-sm-3">
                    <div class="row">
                        <div class="col-sm-12"> @Model.WareHouseName </div>
                        <div class="col-sm-12 hr-line-dashed" style="margin-top: 5px"> </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-1">
                    外借人:
                </div>
                <div class="col-sm-3">
                    <div class="row">
                        <div class="col-sm-12"> @Model.BorrowName</div>
                        <div class="col-sm-12 hr-line-dashed" style="margin-top: 5px"> </div>
                    </div>
                </div>
                <div class="col-sm-1">
                    外借部门:
                </div>
                <div class="col-sm-3">
                    <div class="row">
                        <div class="col-sm-12"> @Model.LendingDepartment</div>
                        <div class="col-sm-12 hr-line-dashed" style="margin-top: 5px"> </div>
                    </div>
                </div>
            </div>

            <div class="form-group   hr-line-dashed"></div>

            <div class="form-group ">
                <label class="col-sm-2 control-label" style="text-align:left;">商品明细</label>
                <div class="col-sm-10"></div>
                <div class="col-sm-12">

                    <table id="skuborrowDetails" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th width="5%"><input type="checkbox" id="ckbAll" onclick="gvCheckAll(this);" /></th>
                                <th data-data="SkuCode">商品编号</th>
                                <th data-data="SkuName">商品名称</th>
                                <th data-data="SkuDescr">商品描述</th>
                                <th data-data="UPC">商品条码</th>
                                <th data-data="UOMCode">单位</th>
                                <th data-data="Loc">货位</th>
                                <th data-data="Lot">批次</th>
                                <th data-data="Lpn">托盘</th>
                                <th data-data="BorrowStartTime">借出时间</th>
                                <th data-data="BorrowEndTime">归还时间</th>
                                <th data-data="IsDamage">是否损坏</th>
                                <th data-data="DisplayQty">数量</th>
                                <th data-data="Remark">备注</th>
                                <th>图片</th>
                            </tr>
                        </thead>

                    </table>

                </div>

            </div>

            <div class="ibox-footer text-right tooltip-demo">
                @if ((bool)ViewData["IsSaveDisplay"] == true)
                {
                <a class="btn btn-sm btn-primary" id="btnSave"><i class="fa fa-check-square-o"></i> 保存</a>
                <a class="btn btn-sm btn-danger" id="btnVoid"><i class="fa fa-check-square-o"></i> 作废</a>
                }

                <a class="btn btn-white btn-sm" id="btnReturn"><i class="fa fa-times"></i> 返回</a>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/dataPicker")
    @Scripts.Render("~/plugins/barcode")

    <script>
        var UpdateSkuBorrowModel = {
            skuborrowModel: {},
            skuborrowDetailsTable: {},
            skuborrowDetailsSource: {},
            skuborrowLevelSource: {},
            init: function () {
                var _self = this;

                _self.skuborrowDetailsTable = $('#skuborrowDetails').DataTable({
                    data: _self.skuborrowDetailsSource,
                    dom: 'Bfrtip',
                    buttons: [
                        {
                            text: '删除',
                            action: function (e, dt, node, config) {
                                var sysIdList = GetGridMultiselectSysId();
                                if (sysIdList != null) {

                                    msgConfirm("确定要删除所选的记录吗？", function (isConfirm) {
                                        if (isConfirm) {
                                            $.ajax({
                                                url: "/SkuBorrow/DeleteSkuBorrowSkus?sysIdList=" + sysIdList,
                                                type: "GET",
                                                success: function (data) {
                                                    if (data.success) {
                                                        msgSuccess("删除成功!");
                                                        location.reload();
                                                    }
                                                    else {
                                                        msgErro(data.message);
                                                    }
                                                },
                                                error: function () {
                                                    msgErro("操作失败");
                                                }
                                            });
                                        }
                                    });
                                }
                            }
                        }
                    ],
                    "columnDefs": [
                        {
                            "targets": 0,
                            "width": "15px",
                            render: function (data, type, full, meta) {
                                return '<input type="checkbox" id="checkbox-all-' + full.SysId + '" value="' + full.SysId + '" />';
                            }
                        },
         {
             "targets": 9, 
             render: function (data, type, full, meta) {
                 return '<div style="width:150px"><div class="input-group date"><span class="input-group-addon"> <i class="fa fa-calendar"></i></span>  <input type="text" class="form-control"  name="BorrowStartTime" value="' + full.BorrowStartTimeDisplay + '" onchange="UpdateSkuBorrowModel.startTimeChange(this)"/></div></div>'; 
             }
         },
                        {
                            "targets": 10, 
                            render: function (data, type, full, meta) {
                                return '<div style="width:150px"><div class="input-group date"><span class="input-group-addon"> <i class="fa fa-calendar"></i></span>  <input type="text" class="form-control"  name="BorrowEndTime" value="' + full.BorrowEndTimeDisplay + '" onchange="UpdateSkuBorrowModel.endTimeChange(this)"/></div></div>'; 
                            }
                        },

                        {
                            "targets": 11, 
                            render: function (data, type, full, meta) {
                                var selection = '<select class="form-control" style="width:80px;" onchange="UpdateSkuBorrowModel.skuBorrowIsDamageChange(this)">';
                                if (full.IsDamage == 1) {
                                    selection += '<option value=0>否</option>';
                                    selection += '<option value=1 selected>是</option>';
                                }
                                else {
                                    selection += '<option value=0>否</option>';
                                    selection += '<option value=1>是</option>';
                                }
                                selection += '</select>';
                                return selection;
                            }
                        },

                        {
                            "targets": 12, 
                            render: function (data, type, full, meta) {
                                return '<input class="form-control" type="number" style="width:80px;" value="' + full.DisplayQty + '" onblur="UpdateSkuBorrowModel.qtyBlur(this)" min="1"/>';
                            }
                        },
                        {
                            "targets": 13,
                            render: function (data, type, full, meta) {
                                return '<input class="form-control" style="width:200px;" value="' + full.Remark + '" onblur="UpdateSkuBorrowModel.remarkBlur(this)" />';
                            }
                        },
                        {
                            "targets": 14,
                            "width": "20%",
                            render: function (data, type, full, meta) {
                                if (full.PictureDtoList != null && full.PictureDtoList.length > 0) {
                                    var spans = new Array();
                                    for (var i in full.PictureDtoList) {
                                        spans.push('<span style="margin-left:5px;" class="fileinput-filename" Name="' + full.PictureDtoList[i].Name + '" Url="' + full.PictureDtoList[i].Url + '" Size="' + full.PictureDtoList[i].Size + '" Suffix="' + full.PictureDtoList[i].Suffix + '"><a href="' + full.PictureDtoList[i].ShowUrl + '"  target="_blank">' + full.PictureDtoList[i].Name + '</a></span><a class="close" data-dismiss="fileinput" style="float: none" onclick="RemovePiciture(this);">&times;</a>');
                                    }
                                    return '<div class="fileinput fileinput-new" data-provides="fileinput"><span class="btn btn-default btn-file"><span class="fileinput-new">选择图片</span><input type="file" id="file_' + full.SysId + '" onchange="UploadImage(this);"></span><div class="pictures">' + spans.join('') + '</div></div>';
                                } else {
                                    return '<div class="fileinput fileinput-new" data-provides="fileinput"><span class="btn btn-default btn-file"><span class="fileinput-new">选择图片</span><input type="file" id="file_' + full.SysId + '" onchange="UploadImage(this);"></span><div class="pictures"></div></div>';
                                }
                            }
                        }

                    ],
                    "bServerSide": false,
                    "bProcessing": true,
                    "bPaginate": false, //翻页功能
                    "bLengthChange": true, //改变每页显示数据数量
                    "bFilter": false, //过滤功能
                    "bSort": false, //排序功能
                    "bInfo": true, //页脚信息
                    "bAutoWidth": true, //自动宽度
                    "oLanguage": {
                        "sLengthMenu": "每页显示 _MENU_ 条记录",
                        "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                        "sInfoEmpty": "",
                        "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                        "oPaginate": {
                            "sFirst": "首页",
                            "sPrevious": "前一页",
                            "sNext": "后一页",
                            "sLast": "尾页"
                        },
                        "sZeroRecords": "没有检索到数据"
                    }
                });


                //初始化明细列表
                _self.skuborrowModel = JSON.parse('@Html.Raw(Json.Encode(Model))');
                UpdateSkuBorrowModel.skuborrowDetailsTable.rows.add(_self.skuborrowModel.SkuBorrowDetailList).draw();


                var flag = false;

                $("#btnSave").bind("click", function () {
                    saveLoading('show');
                    if (flag) {
                        return;
                    }
                    flag = true;
                    var skuborrowDetailList = UpdateSkuBorrowModel.getSkuBorrowDetailSource();
                    var qtyValidate = "";
                    var timeValidate = "";
                    var fillValidate = "";
                    for (var i = 0; i < skuborrowDetailList.length; i++) {
                        var row = i + 1;
                        if (!isPositive(skuborrowDetailList[i]["DisplayQty"])) {
                            qtyValidate = qtyValidate + row + ",";
                        }
                        if ((skuborrowDetailList[i]["BorrowStartTime"] == "" || skuborrowDetailList[i]["BorrowStartTime"] == null) && (skuborrowDetailList[i]["BorrowEndTime"] != null && skuborrowDetailList[i]["BorrowEndTime"] != "")) {
                            fillValidate = fillValidate + row + ",";
                        }
                        if (Date.parse(skuborrowDetailList[i]["BorrowStartTime"]) > Date.parse(skuborrowDetailList[i]["BorrowEndTime"])) {
                            timeValidate = timeValidate + row + ",";
                        }
                    }
                    if (qtyValidate != "" || fillValidate != "" || timeValidate != "") {
                        var alertMsg = "";
                        if (qtyValidate != "") {
                            qtyValidate = qtyValidate.substring(0, qtyValidate.length - 1);
                            alertMsg = "第" + qtyValidate + "行商品必须借出数量必须大于0\n";
                        }
                        if (fillValidate != "") {
                            fillValidate = fillValidate.substring(0, fillValidate.length - 1);
                            alertMsg = "第" + fillValidate + "行商品必须填写借出时间\n";
                        }
                        if (timeValidate != "") {
                            timeValidate = timeValidate.substring(0, timeValidate.length - 1);
                            alertMsg = alertMsg + "第" + timeValidate + "行商品归还时间必须大于等于借出时间";
                        }
                        if (alertMsg != "") {
                            saveLoading();
                            msgAlert(alertMsg);
                        }
                        flag = false;
                        return;
                    }

                    var requestData = {
                        SysId: UpdateSkuBorrowModel.skuborrowModel.SysId,
                        WareHouseSysId: UpdateSkuBorrowModel.skuborrowModel.WareHouseSysId,
                        SkuBorrowDetailList: skuborrowDetailList
                    };

                    $.ajax({
                        url: "@Url.Action("UpdateSkuBorrowService", "SkuBorrow")",
                        data: requestData,
                        dataType: "json",
                        type: "post",
                        success: function (data) {
                            flag = false;
                            saveLoading();
                            if (data.success) {
                                msgSuccess("保存成功!");
                                UpdateSkuBorrowModel.backParentPage();
                            }
                            else {
                                msgErro(data.message);
                            }
                        },
                        error: function () {
                            flag = false;
                            saveLoading();
                            msgErro("操作失败！");
                        }
                    });

                });

                $("#btnReturn").bind("click", function () {
                    UpdateSkuBorrowModel.backParentPage();
                });

                $("#btnVoid").click(function () {
                    var request = {
                        SysId: '@Model.SysId'
                    };

                    $.ajax({
                        url: "@Url.Action("Void", "SkuBorrow")",
                        data: request,
                        type: "post",
                        success: function (data) {
                            if (data.success) {
                                msgSuccess("作废成功!");
                                UpdateSkuBorrowModel.backParentPage();
                            }
                            else {
                                msgErro(data.message);
                            }
                        },
                        error: function () {
                            msgErro("操作失败！");
                        }
                    });

                });
            },

            startTimeChange: function (obj) {
                var selectIndex = $(obj).parent().parent().parent().parent().index();

                UpdateSkuBorrowModel.skuborrowDetailsTable.data()[selectIndex]["BorrowStartTime"] = $(obj).val();
            },

            endTimeChange: function (obj) {
                var selectIndex = $(obj).parent().parent().parent().parent().index();

                UpdateSkuBorrowModel.skuborrowDetailsTable.data()[selectIndex]["BorrowEndTime"] = $(obj).val();
            },

            qtyBlur: function (obj) {
                var selectIndex = $(obj).parent().parent().index();

                UpdateSkuBorrowModel.skuborrowDetailsTable.data()[selectIndex]["DisplayQty"] = $(obj).val();
            },

            skuBorrowIsDamageChange: function (obj) {
                var selectIndex = $(obj).parent().parent().index();

                UpdateSkuBorrowModel.skuborrowDetailsTable.data()[selectIndex]["IsDamage"] = $(obj).val();
            },

            remarkBlur: function (obj) {
                var selectIndex = $(obj).parent().parent().index();

                UpdateSkuBorrowModel.skuborrowDetailsTable.data()[selectIndex]["Remark"] = $(obj).val();
            },

            getSkuBorrowDetailSource: function () {
                var skuborrowDetailList = [];
                var skuborrowDetaildata = UpdateSkuBorrowModel.skuborrowDetailsTable.data();

                for (var i = 0; i < skuborrowDetaildata.length; i++) {
                    var pictures = [];
                    $("#file_" + skuborrowDetaildata[i].SysId).parent().parent().children(".pictures").children(".fileinput-filename").each(function () {
                        var picture = {
                            Name: $(this).attr("Name"),
                            Url: $(this).attr("Url"),
                            Size: $(this).attr("Size"),
                            Suffix: $(this).attr("Suffix")
                        };
                        pictures.push(picture);
                    });
                    skuborrowDetaildata[i].PictureDtoList = pictures;
                    skuborrowDetailList.push(skuborrowDetaildata[i]);
                    skuborrowDetaildata[i]["BorrowStartTime"] = ConvertJSONDateToJSDateObject(skuborrowDetaildata[i]["BorrowStartTime"]);
                    skuborrowDetaildata[i]["BorrowEndTime"] = ConvertJSONDateToJSDateObject(skuborrowDetaildata[i]["BorrowEndTime"]);
                }

                return skuborrowDetailList;
            },
            backParentPage: function () {
                window.location.href = '@Url.Action("SkuBorrowMaintain", "SkuBorrow")'
            }
        }

        $(function () {
            $("#divBarCode").empty().barcode($("#divBarCodeValue").html(), "code128", { barWidth: 1, barHeight: 45, showHRI: false });
            UpdateSkuBorrowModel.init();


            $("input[name='BorrowStartTime']").each(function () {
                $(this).datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
            })


            $("input[name='BorrowEndTime']").each(function () {
                $(this).datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
            })

        })

        function UploadImage(obj) {
            var _this = $(obj);
            var pictures = $(obj).parent().parent().children(".pictures");
            if (pictures.children(".fileinput-filename").length >= 3) {
                msgErro("最多上传3张图片！");
                return false;
            }
            saveLoading('show');
            var formData = new FormData();
            formData.append("file", $(obj)[0].files[0]);
            $.ajax({
                url: "@Url.Action("UploadImage", "SkuBorrow")",
                type: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                success: function (data) {
                    saveLoading('hide');
                    _this.val('');
                    if (data.Success) {
                        msgSuccess("上传成功！");
                        pictures.append('<span style="margin-left:5px;max-width:100px" title="' + data.Name + '" class="fileinput-filename" Name="' + data.Name + '" Url="' + data.Url + '" Size="' + data.Size + '" Suffix="' + data.Suffix + '"><a href="' + data.ShowUrl + '"  target="_blank">' + data.Name + '</a></span><a class="close" data-dismiss="fileinput" style="float: none" onclick="RemovePiciture(this);">&times;</a>');
                    }
                    else {
                        msgErro(data.Message);
                    }
                },
                error: function (data) {
                    saveLoading('hide');
                    _this.val('');
                    msgErro("上传失败！");
                }
            });
        }

        function RemovePiciture(obj) {
            $(obj).prev().remove();
            $(obj).remove();
        }

        function ConvertJSONDateToJSDateObject(jsondate) {
            if (jsondate != null && jsondate != "" && jsondate.indexOf("Date") >= 0) {
                var date = new Date(parseInt(jsondate.replace("/Date(", "").replace(")/", ""), 10));
                return date.Format("yyyy-MM-dd");
            }
            return jsondate;
        }

        Date.prototype.Format = function (fmt) {
            var o = {
                "M+": this.getMonth() + 1,
                "d+": this.getDate(),
                "h+": this.getHours(),
                "m+": this.getMinutes(),
                "s+": this.getSeconds(),
                "q+": Math.floor((this.getMonth() + 3) / 3),
                "S": this.getMilliseconds()
            };
            if (/(y+)/.test(fmt)) fmt = fmt.replace(RegExp.$1, (this.getFullYear() + "").substr(4 - RegExp.$1.length));
            for (var k in o)
                if (new RegExp("(" + k + ")").test(fmt)) fmt = fmt.replace(RegExp.$1, (RegExp.$1.length == 1) ? (o[k]) : (("00" + o[k]).substr(("" + o[k]).length)));
            return fmt;
        } 

        function isPositive(x) {
            let num = parseFloat(x);
            return (!isNaN(num)) && (isFinite(num)) && (num > 0);
        }
    </script>
}
