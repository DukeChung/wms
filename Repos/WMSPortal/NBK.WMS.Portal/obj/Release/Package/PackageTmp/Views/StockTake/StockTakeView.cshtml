@using NBK.WMS.Portal.Helpers
@using NBK.AuthServiceUtil
@using NBK.ECService.WMS.Utility.Enum
@model NBK.ECService.WMS.DTO.StockTakeViewDto
@{
    ViewBag.Title = "盘点单明细";
}

@Html.Breadcrumb("盘点查询", "/StockTake/StockTakeList", "盘点单明细")
<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="row" style="padding-left:15px">
        <div class="col-sm-3"><label class="control-label">盘点单编号: @Model.StockTakeOrder</label></div>
        <div class="col-sm-3"><label class="control-label">状态: @Model.StatusText</label></div>
        <div class="col-sm-3"><label class="control-label">盘点仓库: @Model.WarehouseName</label></div>
        <div class="col-sm-3"><label class="control-label">创建人: @Model.CreateUserName</label></div>
    </div>
    <br />

    <div class="ibox-content  m-b-sm border-bottom">
        <div class="row">
            <div class="col-sm-3">
                @Html.SearchTextBox("UPC", "SkuUPCSearch")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("商品编号", "SkuCodeSearch")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("商品名称", "SkuNameSearch")
            </div>
            <div class="col-sm-3">
                <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:23px;float: left; ">查询</button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="tabs-container">
                <ul class="nav nav-tabs">
                    <li class="active"><a id="a-details" data-toggle="tab" href="#tab-details">盘点明细</a></li>
                    <li class=""><a id="a-diff" data-toggle="tab" href="#tab-diff"  onclick="tabDiffSelected()">盘点差异</a></li>
                </ul>
                <div class="tab-content">
                    <div id="tab-details" class="tab-pane active">
                        <div class="panel-body">
                            <div class="ibox">
                                <div class="ibox-content col-sm-12" style="overflow-x:auto;padding-bottom:0px">
                                    <table id="gvDetails" class="table table-striped table-bordered table-hover dataTables-example">
                                        <thead>
                                            <tr>
                                                <th data-data="SkuCode" style="width:100px">商品编号</th>
                                                <th data-data="SkuUPC" style="width:100px">UPC</th>
                                                <th data-data="SkuName" style="width:100px">商品名称</th>
                                                <th data-data="SkuDescr" style="width:100px">商品描述</th>
                                                <th data-data="Loc" style="width:100px">库位</th>
                                                <th data-data="UOMCode" style="width:100px">单位</th>
                                                <th data-data="DisplayStockTakeQty" style="width:100px">初盘数量</th>
                                                <th data-data="DisplayReplayQty" style="width:100px">复盘数量</th>
                                            </tr>
                                        </thead>
                                    </table>
                                    <div class="ibox-footer text-right tooltip-demo">
                                        @{
                                            if (Model.Status == (int)StockTakeStatus.New)
                                            {
                                                <a class="btn btn-sm btn-primary" id="btnStart">开始盘点</a>
                                            }
                                        }
                                        <a class="btn btn-white btn-sm" id="btnBack" onclick="goPreviousPage();"><i class="fa fa-times"></i> 返回</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="tab-diff" class="tab-pane">
                        <div class="panel-body">
                            <div class="ibox">
                                <div class="ibox-content col-sm-12" style="overflow-x:auto;padding-bottom:0px">
                                    <table id="gvDiff" class="table table-striped table-bordered table-hover dataTables-example">
                                        <thead>
                                            <tr>
                                                @*<th><input type="checkbox" id="ckbAll" checked disabled onclick="gvCheckAll(this);" /></th>*@
                                                <th data-data="SkuCode" style="width:100px">商品编号</th>
                                                <th data-data="SkuUPC" style="width:100px">UPC</th>
                                                <th data-data="SkuName" style="width:100px">商品名称</th>
                                                <th data-data="SkuDescr" style="width:100px">商品描述</th>
                                                <th data-data="Loc" style="width:100px">库位</th>
                                                <th data-data="UOMCode" style="width:100px">单位</th>
                                                @*<th data-data="StatusText" style="width:100px">状态</th>*@
                                                <th data-data="DisplayQty" style="width:100px">财务库存</th>
                                                <th data-data="DisplayStockTakeQty" style="width:100px">初盘数量</th>
                                                <th data-data="DisplayReplayQty" style="width:100px">复盘数量</th>
                                            </tr>
                                        </thead>
                                    </table>
                                    <div class="ibox-footer text-right tooltip-demo">
                                        @if (AuthorizeManager.HasFunction(AuthKeyConst.Inventory_StockTake_Replay, HttpContext.Current.User.Identity.Name))
                                        {
                                            if (Model.Status == (int)StockTakeStatus.StockTakeFinished)
                                            {
                                            <a class="btn btn-sm btn-primary" id="btnReplay">生成复盘</a>
                                            }
                                        }
                                        @*@if (AuthorizeManager.HasFunction(AuthKeyConst.Inventory_StockTake_CreateAdj, HttpContext.Current.User.Identity.Name))
                                        {
                                            if (Model.Status != (int)StockTakeStatus.Finished)
                                            {
                                            <a class="btn btn-sm btn-primary" id="btnCreateAdj">生成损益单</a>
                                            }
                                        }
                                        @if (Model.Status != (int)StockTakeStatus.Finished)
                                        {
                                            <a class="btn btn-sm btn-primary" id="btnComplete">盘点完成</a>
                                        }*@
                                        <a class="btn btn-white btn-sm" id="btnBack" onclick="goPreviousPage();"><i class="fa fa-times"></i> 返回</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<form class="form-horizontal">
    <div class="form-group">
        <div class="modal inmodal fade" id="div_ReplayStockTake" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">复盘人:</label>
                            <div class="col-sm-8">
                                <select id="ReplayBy" name="ReplayBy" class="form-control">
                                    @{
                                        <option value="">请选择</option>
                                        foreach (var user in (List<SelectListItem>)ViewBag.UserList)
                                        {
                                            <option value="@user.Value">@user.Text</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">仓库:</label>
                            <div class="col-sm-8">
                                <input id="WarehouseSysId" type="hidden" value="@ViewBag.WarehouseSysId" />
                                <input id="WarehouseName" class="form-control" type="text" value="@ViewBag.WarehouseName" readonly />
                            </div>
                            <label id="Msg" class="col-sm-12 control-label" style="color:red;text-align:center"></label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a class="btn btn-sm btn-primary" id="btnSaveReplay"><i class="fa fa-check-square-o"></i> 保存</a>
                        <a class="btn btn-white btn-sm" id="btnCloseReplay" data-dismiss="modal"><i class="fa fa-times"></i> 关闭</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    <script src="~/Scripts/Utility/Common.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#gvDiff_wrapper").css("padding-bottom", "0px");
            $("#gvDetails_wrapper").css("padding-bottom", "0px");
            $('#a-details').attr('aria-expanded', true);

            tableDetails = $('#gvDetails').DataTable({
                "sAjaxSource": "GetStockTakeDetailList",
                "fnServerParams": function (aoData) { //查询条件
                    aoData.push(
                        { "name": "StockTakeSysIdSearch", "value": '@Model.SysId' },
                        { "name": "SkuUPCSearch", "value": $("#SkuUPCSearch").val() },
                        { "name": "SkuCodeSearch", "value": $("#SkuCodeSearch").val() },
                        { "name": "SkuNameSearch", "value": $("#SkuNameSearch").val() }
                    );
                },
                dom: 'Bfrtip',
                buttons: [
                    'pageLength'
                ],
                "columnDefs": [],
                "bServerSide": true,
                "bProcessing": true,
                "bPaginate": true, //翻页功能
                "bLengthChange": true, //改变每页显示数据数量
                "bFilter": false, //过滤功能
                "bSort": false, //排序功能
                "bInfo": true, //页脚信息
                "bAutoWidth": true, //自动宽度
                "aaSorting": [[2, "Asc"]],
                "oLanguage": {
                    buttons: {
                        pageLength: {
                            _: "每页显示 %d 条记录"
                        }
                    },
                    "sLengthMenu": "每页显示 _MENU_ 条记录",
                    "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                    "sInfoEmpty": "",
                    "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                    "oPaginate": {
                        "sFirst": "首页",
                        "sPrevious": "前一页",
                        "sNext": "后一页",
                        "sLast": "尾页"
                    },
                    "sZeroRecords": "没有检索到数据"
                }
            });

            tableDiff = $('#gvDiff').DataTable({
                "sAjaxSource": "GetStockTakeDiffList",
                "fnServerParams": function (aoData) { //查询条件
                    aoData.push(
                        { "name": "StockTakeSysIdSearch", "value": '@Model.SysId' },
                        { "name": "SkuUPCSearch", "value": $("#SkuUPCSearch").val() },
                        { "name": "SkuCodeSearch", "value": $("#SkuCodeSearch").val() },
                        { "name": "SkuNameSearch", "value": $("#SkuNameSearch").val() }
                    );
                },
                dom: 'Bfrtip',
                buttons: [
                      'pageLength'
                ],
                //"columnDefs": [
                //    {
                //        "targets": 0,
                //        "width": "15px",
                //        render: function (data, type, full, meta) {
                //            return '<input type="checkbox" id="checkbox-all-' + full.SysId + '" value="' + full.SysId + '" checked disabled />';
                //        }
                //    }
                //],
                "bServerSide": true,
                "bProcessing": true,
                "bPaginate": true, //翻页功能
                "bLengthChange": true, //改变每页显示数据数量
                "bFilter": false, //过滤功能
                "bSort": false, //排序功能
                "bInfo": true, //页脚信息
                "bAutoWidth": true, //自动宽度
                "aaSorting": [[2, "Asc"]],
                "initComplete": function (settings, json) {
                    if (tableDiff.rows().data().length == 0) {
                        $("#btnReplay").hide();
                    }
                },
                "oLanguage": {
                    buttons: {
                        pageLength: {
                            _: "每页显示 %d 条记录"
                        }
                    },
                    "sLengthMenu": "每页显示 _MENU_ 条记录",
                    "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                    "sInfoEmpty": "",
                    "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                    "oPaginate": {
                        "sFirst": "首页",
                        "sPrevious": "前一页",
                        "sNext": "后一页",
                        "sLast": "尾页"
                    },
                    "sZeroRecords": "没有检索到数据"
                }
            });

            $("#btnSearch").bind("click", function () { //按钮 触发table重新请求服务器
                if ($('#a-details').attr('aria-expanded') == "true") {
                    tableDetails.ajax.reload();
                } else {
                    tableDiff.ajax.reload();
                }
            });

            $("#btnStart").bind("click", function () {
                var message = "开始盘点将会冻结商品库存，是否继续？";
                @{
                    if (Model.StockTakeType == (int)StockTakeType.Location || Model.StockTakeType == (int)StockTakeType.Touch)
                    {
                        <text>message = "开始盘点将会冻结库位库存，是否继续？";</text>
                    }
                }

                msgConfirm(message, function (isConfirm) {
                    if (isConfirm) {
                        saveLoading('show');
                        $.ajax({
                            url: "/StockTake/StockTakeStart",
                            type: "POST",
                            data: { SysId: '@Model.SysId' },
                            success: function (data) {
                                setTimeout(function () {
                                    saveLoading();
                                    if (data.Success) {
                                        msgSuccess(data.Message, setTimeout(function () {
                                            window.location.href = "/StockTake/StockTakeView?sysId=" + '@Model.SysId';
                                        }, 100));
                                    } else {
                                        msgErro(data.Message);
                                    }
                                }, 100);
                            },
                            error: function (data) {
                                saveLoading();
                                msgErro(data.Message);
                            }
                        });
                    }
                }, true);
            });

            $("#btnReplay").bind("click", function () {
                $("#Msg").html("");
                $("#ReplayBy").val("");
                $('#div_ReplayStockTake').modal("toggle");
            });

            $("#btnSaveReplay").bind("click", function () {
                $("#Msg").html("");
                if ($("#ReplayBy").val().trim() == "") {
                    $("#Msg").html("请选择复盘人!");
                } else {
                    $('#div_ReplayStockTake').modal("hide");
                    msgConfirm("确定对所有差异数据进行复盘操作吗？", function (isConfirm) {
                        if (isConfirm) {
                            saveLoading('show');
                            $.ajax({
                                url: "/StockTake/ReplayStockTakeDetail?stockTakeSysId=" + '@Model.SysId' + "&replayBy=" + $("#ReplayBy").val() + "&replayUserName=" + $("#ReplayBy").find("option:selected").text() + "&warehouseSysId=@Model.WarehouseSysId",
                                type: "GET",
                                success: function (data) {
                                    setTimeout(function () {
                                        saveLoading();
                                        if (data.Success) {
                                            msgSuccess(data.Message, setTimeout(function () {
                                                window.location.href = "/StockTake/StockTakeView?sysId=" + '@Model.SysId';
                                            }, 100));
                                            //tableDiff.ajax.reload();
                                        } else {
                                            msgErro(data.Message);
                                        }
                                    }, 100);
                                },
                                error: function (data) {
                                    saveLoading();
                                    msgErro(data.Message);
                                }
                            });
                        }
                    }, true);
                }
            });

            @*$("#btnCreateAdj").bind("click", function () {
                var sysIds = GetGridMultiselectSysId();
                if (sysIds != null) {
                    msgConfirm("确定要生成损益单吗？", function (isConfirm) {
                        if (isConfirm) {
                            saveLoading('show');
                            $.ajax({
                                url: "/StockTake/CreateAdjustment?sysId=" + '@Model.SysId' + "&detailSysIds=" + sysIds,
                                type: "GET",
                                success: function (data) {
                                    setTimeout(function () {
                                        saveLoading();
                                        if (data.Success) {
                                            msgSuccess(data.Message);
                                            //tableDiff.ajax.reload();
                                        } else {
                                            msgErro(data.Message);
                                        }
                                    }, 100);

                                },
                                error: function (data) {
                                    saveLoading();
                                    msgErro(data.Message);
                                }
                            });
                        }
                    },true);
                }
            });*@

            @*$("#btnComplete").bind("click", function () {
                msgConfirm("确定要盘点完成吗？", function (isConfirm) {
                    if (isConfirm) {
                        saveLoading('show');
                        $.ajax({
                            url: "/StockTake/StockTakeComplete?sysIds=@Model.SysId",
                            type: "GET",
                            success: function (data) {
                                setTimeout(function () {
                                    saveLoading();
                                    if (data.Success) {
                                        msgSuccess(data.Message, setTimeout(function () { window.location.reload(); }, 2000));
                                    } else {
                                        msgErro(data.Message);
                                    }
                                }, 100);

                            },
                            error: function (data) {
                                saveLoading();
                                msgErro(data.Message);
                            }
                        });
                    }
                }, true);
            });*@

            tableDiff.ajax.reload();
            tableDetails.ajax.reload();
        });

        function tabDiffSelected() {
            $("#gvDiff").width($("#gvDetails").width() + "px");
        }

        function goPreviousPage() {
            window.location.href = "/StockTake/StockTakeList";
        }
    </script>
}