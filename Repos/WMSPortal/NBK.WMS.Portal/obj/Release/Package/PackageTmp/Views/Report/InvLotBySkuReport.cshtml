@using NBK.WMS.Portal.Helpers

@{
    ViewBag.Title = "批次库存查询";
}

@Html.Breadcrumb("报表", "批次库存查询")
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}


<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom">
        <div class="row">
            <div class="col-sm-3">
                @Html.SearchTextBox("商品名称", "SkuName")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("商品描述", "SkuDescr")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("商品UPC", "UPC")
            </div>
            <div class="col-sm-3">
                @Html.SearchTextBox("批次", "Lot")
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                @Html.SearchTextBox("渠道", "LotAttr01")
            </div>
            <div class="col-sm-3">
                <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:25px;float: left; ">查询</button>
            </div>
            <div class="col-sm-3"> 
            </div>
            <div class="col-sm-2">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <table id="gvInvLotBySkuReport" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th width="5%"><input type="checkbox" id="ckbAll" onclick="gvCheckAll(this);" /></th>
                                <th data-data="SkuCode">商品编号</th>
                                <th data-data="SkuName">商品名称</th>
                                <th data-data="UPC">商品UPC</th>
                                <th data-data="Lot">批次</th>
                                <th data-data="ProduceDateDisplay">生产日期</th>
                                <th data-data="ExpiryDateDisplay">失效日期</th>
                                <th data-data="LotAttr01">渠道</th>
                                <th data-data="LotAttr02">批次编号</th>
                                <th data-data="DisplayQty">库存数量</th>
                                <th data-data="DisplayAllocatedQty">分配数量</th>
                                <th data-data="DisplayPickedQty">拣货数量</th>
                                <th data-data="DisplayFrozenQty">冻结数量</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <form id="InvLotForm" class="form-horizontal">
        <div class="form-group">
            <div class="modal inmodal fade" id="printLotModal" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">
                        <div class="modal-body" style="max-height:600px;">
                            <div class="form-group">
                                <label class="col-sm-12">请输入打印数量:</label>
                                <div class="col-sm-12">
                                    <input type="number" id="PrintQty" name="PrintQty" class="form-control" value="1">
                                </div>
                            </div>
                            <div class="modal-footer">
                                <a class="btn btn-white btn-sm" onclick="PrintLotModal();"><i class="fa fa-print"></i>打印</a>
                                <a class="btn btn-white btn-sm" id="btnCloseSkuClass" data-dismiss="modal"><i class="fa fa-times"></i> 关闭</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/print")
    <script>
        var InvLotBySkuReport = {
            table: {},
            init: function () {
                var _self = this;

                _self.table = $('#gvInvLotBySkuReport').DataTable({
                    "sAjaxSource": "GetInvLotBySkuReport",
                    "fnServerParams": function (aoData) { //查询条件
                        aoData.push(
                            { "name": "SkuName", "value": $("#SkuName").val() },
                            { "name": "SkuDescr", "value": $("#SkuDescr").val() },
                            { "name": "UPC", "value": $("#UPC").val() },
                            { "name": "Lot", "value": $("#Lot").val() },
                            { "name": "LotAttr01", "value": $("#LotAttr01").val() }
                        );
                    },
                    dom: 'Bfrtip',
                    buttons: [
                        'pageLength',
                        {
                            text: '打印批次',
                            action: function (e, dt, node, config) {
                                var check = $("table tbody input:checked");
                                if (check.length == 0) {
                                    msgErro("请在列表中勾选一项!");
                                    return null;
                                }
                                if (check.length > 1) {
                                    msgErro("只能勾选一项!");
                                    return null;
                                }

                                $("#printLotModal").modal();

                            }
                        }
                    ],
                    "columnDefs": [
                        {
                            "targets": 0,
                            "width": "15px",
                            render: function (data, type, full, meta) {
                                return '<input type="checkbox" id="checkbox-all-' + full.SysId + '" value="' + full.SysId + '" Lot ="' + full.Lot + '" LotAttr01 = "' + full.LotAttr01 + '" />';
                            }
                        }
                    ],
                    "bServerSide": true,
                    "bProcessing": true,
                    "bPaginate": true, //翻页功能
                    "bLengthChange": true, //改变每页显示数据数量
                    "bFilter": false, //过滤功能
                    "bSort": false, //排序功能
                    "bInfo": true, //页脚信息
                    "bAutoWidth": true, //自动宽度
                    "aaSorting": [[2, "Asc"]],
                    "oLanguage": {
                        buttons: {
                            pageLength: {
                                _: "每页显示 %d 条记录"
                            }
                        },
                        "sLengthMenu": "每页显示 _MENU_ 条记录",
                        "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                        "sInfoEmpty": "",
                        "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                        "oPaginate": {
                            "sFirst": "首页",
                            "sPrevious": "前一页",
                            "sNext": "后一页",
                            "sLast": "尾页"
                        },
                        "sZeroRecords": "没有检索到数据"
                    }
                });

                $("#btnSearch").bind("click", function () { //按钮 触发table重新请求服务器
                    InvLotBySkuReport.table.ajax.reload();
                });

            }
        }

        $(function () {
            InvLotBySkuReport.init();
        })

        function PrintLotModal() {
            var check = $("table tbody input:checked");

            var toLot = $(check[0]).attr("Lot");
            var toLotAttr01 = $(check[0]).attr("LotAttr01");

            var printQty = parseInt($("#PrintQty").val());
            var printName = '@ViewBag.PrintCaseName';
            print.PrintLot(printQty, printName, toLot, toLotAttr01);
        }
    </script>
}
