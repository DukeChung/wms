@using NBK.AuthServiceUtil
@using NBK.ECService.WMS.DTO
@using NBK.WMS.Portal.Helpers

@{
    ViewBag.Title = "收发货明细报表";
}
@Html.Breadcrumb("报表", "收发货明细报表")
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
}

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom">
        <form method="post" id="exportForm">
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label class="control-label">所属仓库:</label>
                        <select id="SearchWarehouseSysId" name="SeachWarehouseSysId" class="form-control">
                            @*<option value="">全部仓库</option>*@
                            @{
                                foreach (var warehouse in (List<SelectItem>)ViewBag.WarehouseList)
                                {
                                    <option value="@warehouse.Value">@warehouse.Text</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-3" style="display:none">
                    @Html.SearchTextBox("所在区域", "WareHouseArea")
                </div>
                <div class="col-sm-3" style="display:none">
                    @Html.SearchTextBox("仓库性质", "WareHouseProperty")
                </div>
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("开始日期", "StartTime")
                </div>
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("结束日期", "EndTime")
                </div>
                <div class="col-sm-3">
                    <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:25px;float: left; ">查询</button>
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <table id="gvReceivedAndSendSkuReport" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th data-data="WareHouseName">仓库名称</th>
                                @*<th data-data="WareHouseArea">仓库所在区域</th>
                                    <th data-data="WareHouseProperty">仓库性质</th>*@
                                <th data-data="ReceivedQty">当天收货SKU数量</th>
                                <th data-data="ReceivedPieceQty">收货总件数</th>
                                <th data-data="DeliveryQty"> 当天发货SKU数量 </th>
                                <th data-data="DeliveryPieceQty">发货总件数</th>
                                <th data-data="PurchaseCount">入库单数量</th>
                                <th data-data="OutboundCount">出库单数量</th>
                                <th data-data="CreateDate">日期</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/dataPicker")
    <script>
        var receivedAndSendReport = {
            table: {},
            init: function () {
                $("#StartTime").val("@ViewBag.StartDate");
                $("#EndTime").val("@ViewBag.EndDate");
                var _self = this;
                $('#divStartTime .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divEndTime .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });

                _self.table = $('#gvReceivedAndSendSkuReport').DataTable({
                    "sAjaxSource": "GetReceivedAndSendSkuReport",
                    "fnServerParams": function (aoData) { //查询条件
                        aoData.push(
                            { "name": "SearchWarehouseSysId", "value": $("#SearchWarehouseSysId").val() },
                            { "name": "WareHouseArea", "value": $("#WareHouseArea").val() },
                            { "name": "WareHouseProperty", "value": $("#WareHouseProperty").val() },
                            { "name": "StartTime", "value": $("#StartTime").val() },
                            { "name": "EndTime", "value": $("#EndTime").val() }
                        );
                    },
                    dom: 'Bfrtip',
                    buttons: [
                        @if (AuthorizeManager.HasFunction(AuthKeyConst.Report_ReceivedAndSendSkuReportExport, User.Identity.Name))
                        {
                            <text>
                            {
                                text: '导出',
                                action: function (e, dt, node, config) {
                                    var exportForm = $("#exportForm");
                                    exportForm.attr("action", '@Url.Action("ReceivedAndSendSkuReportExport")' + '?SearchWarehouseSysId=' + $("#SearchWarehouseSysId").val());
                                    exportForm.submit();
                                }
                            }
                            </text>
                    }],
                    "columnDefs": [],
                    "bServerSide": true,
                    "bProcessing": true,
                    "bPaginate": true, //翻页功能
                    "bLengthChange": true, //改变每页显示数据数量
                    "bFilter": false, //过滤功能
                    "bSort": false, //排序功能
                    "bInfo": true, //页脚信息
                    "bAutoWidth": true, //自动宽度
                    "aaSorting": [[2, "Asc"]],
                    "oLanguage": {
                        buttons: {
                            pageLength: {
                                _: "每页显示 %d 条记录"
                            }
                        },
                        "sLengthMenu": "每页显示 _MENU_ 条记录",
                        "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                        "sInfoEmpty": "",
                        "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                        "oPaginate": {
                            "sFirst": "首页",
                            "sPrevious": "前一页",
                            "sNext": "后一页",
                            "sLast": "尾页"
                        },
                        "sZeroRecords": "没有检索到数据"
                    }
                });

                $("#btnSearch").bind("click", function () {
                    if (!commonCheckDateCompare($("#StartTime").val(), $("#EndTime").val())) {
                        msgAlert("终止时间大于开始时间！");
                        return false;
                    }
                    receivedAndSendReport.table.ajax.reload();
                });

            }
        }

        $(function () {
            receivedAndSendReport.init();
        })

    </script>
}