@using WMS.Global.Portal.Helpers
@using NBK.ECService.WMSReport.DTO.Base
@using NBK.AuthServiceUtil

@{
    ViewBag.Title = "整散箱商品明细报表";
}

@Html.Breadcrumb("报表", "整散箱商品明细报表")
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
}

<div class="wrapper wrapper-content animated fadeInRight ecommerce" autocomplete="off">
    <div class="ibox-content m-b-sm border-bottom">
        <form method="post" id="exportForm">

            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label class="control-label">所属仓库:</label>
                        <select id="SearchWarehouseSysId" name="SearchWarehouseSysId" class="form-control">
                            @{
                                foreach (var warehouse in (List<SelectItem>)ViewBag.WarehouseList)
                                {
                                    <option value="@warehouse.Value">@warehouse.Text</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("出库单号", "OutboundOrder")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("箱号", "TransferOrder")
                </div>
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("出库时间从", "ActualShipDateFrom")
                </div>

            </div>
            <div class="row">
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("出库时间到", "ActualShipDateTo")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("商品名称", "SkuName")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("UPC", "UPC")
                </div>
                <div class="col-sm-1">
                    <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:25px;float: left; ">查询</button>
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <table id="gvOutboundPackSkuReport" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                @*<th data-data="Index">序号</th>*@
                                <th data-data="WarehouseName">仓库名称</th>
                                <th data-data="Channel">订单类型</th>
                                <th data-data="OutboundOrder"> 出库单号 </th>
                                <th data-data="ServiceStationName">服务综合体名称</th>
                                <th data-data="ActualShipDateDisplay">出库日期</th>
                                <th data-data="CreateUserName">操作人员</th>
                                <th data-data="TransferOrder">箱号</th>
                                <th data-data="TransferTypeDisplay">箱型</th>
                                <th data-data="SkuName">商品名称</th>
                                <th data-data="UPC">UPC</th>
                                <th data-data="Qty">数量</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/dataPicker")

    <script>
        var OutboundPackSkuReport = {
            table: {},
            init: function () {
                var _self = this;

                $('#divActualShipDateFrom .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divActualShipDateTo .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });

                _self.table = $('#gvOutboundPackSkuReport').DataTable({
                    "sAjaxSource": "GetOutboundPackSkuReport",
                    "fnServerParams": function (aoData) { //查询条件
                        aoData.push(
                            { "name": "SearchWarehouseSysId", "value": $("#SearchWarehouseSysId").val() },
                            { "name": "OutboundOrder", "value": $("#OutboundOrder").val() },
                            { "name": "SkuName", "value": $("#SkuName").val() },
                            { "name": "UPC", "value": $("#UPC").val() },
                            { "name": "ActualShipDateFrom", "value": $("#ActualShipDateFrom").val() },
                            { "name": "ActualShipDateTo", "value": $("#ActualShipDateTo").val() },
                            { "name": "TransferOrder", "value": $("#TransferOrder").val() }
                        );
                    },
                    dom: 'Bfrtip',
                    buttons: [
                        'pageLength',
                        @if (AuthorizeManager.HasFunction(AuthKeyConst.Report_OutboundPackSkuReport_Export, User.Identity.Name))
                        {
                            <text>
                            {
                                text: '导出',
                                action: function (e, dt, node, config) {
                                    var exportForm = $("#exportForm");
                                    exportForm.attr("action", '@Url.Action("OutboundPackSkuReportExport")');
                                    exportForm.submit();
                                }
                            }
                            </text>
                        }
                    ],
                    "columnDefs": [],
                    "bServerSide": true,
                    "bProcessing": true,
                    "bPaginate": true, //翻页功能
                    "bLengthChange": true, //改变每页显示数据数量
                    "bFilter": false, //过滤功能
                    "bSort": false, //排序功能
                    "bInfo": true, //页脚信息
                    "bAutoWidth": true, //自动宽度
                    "aaSorting": [[2, "Asc"]],
                    "iDisplayLength": 50,
                    "oLanguage": {
                        buttons: {
                            pageLength: {
                                _: "每页显示 %d 条记录"
                            }
                        },
                        "sLengthMenu": "每页显示 _MENU_ 条记录",
                        "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                        "sInfoEmpty": "",
                        "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                        "oPaginate": {
                            "sFirst": "首页",
                            "sPrevious": "前一页",
                            "sNext": "后一页",
                            "sLast": "尾页"
                        },
                        "sZeroRecords": "没有检索到数据"
                    }
                });

                $("#btnSearch").bind("click", function () {
                    if (!commonCheckDateCompare($("#ActualShipDateFrom").val(), $("#ActualShipDateTo").val())) {
                        msgAlert("出库结束时间应大于开始时间！");
                        return false;
                    }
                    OutboundPackSkuReport.table.ajax.reload();

                });
            }
        }

        $(function () {
            OutboundPackSkuReport.init();
        })


    </script>
}