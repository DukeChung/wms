@using WMS.Global.Portal.Helpers
@using NBK.AuthServiceUtil

@{
    ViewBag.Title = "商品包装查询报表";
}
@Html.Breadcrumb("报表", "商品包装查询报表")
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
}

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom">
        <form method="post" id="exportForm">

            <div class="row">
                <div class="col-sm-3">
                    @Html.SearchTextBox("商品编号", "SkuCode")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("商品名称", "SkuName")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("商品UPC", "UPC")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("包装UPC", "UPC03")
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    @Html.SearchTextBox("商品外部Id", "OtherId")
                </div>
                <div class="col-sm-3">
                    <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:25px;float: left; ">查询</button>
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <table id="gvSkuPackReport" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th data-data="SkuCode">商品编号</th>
                                <th data-data="SkuName">商品名称</th>
                                <th data-data="UPC">商品UPC</th>
                                <th data-data="UPC02">包装UPC02</th>
                                <th data-data="UOMCode02">单位02</th>
                                <th data-data="FieldValue02">单位数量02</th>
                                <th data-data="UPC03">包装UPC03</th>
                                <th data-data="UOMCode03">单位03</th>
                                <th data-data="FieldValue03">单位数量03</th>
                                <th data-data="UPC04">包装UPC04</th>
                                <th data-data="UOMCode04">单位04</th>
                                <th data-data="FieldValue04">单位数量04</th>
                                <th data-data="UPC05">包装UPC05</th>
                                <th data-data="UOMCode05">单位05</th>
                                <th data-data="FieldValue05">单位数量05</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/dataPicker")

    <script>
        var skuPackReport = {
            table: {},
            init: function () {
                var _self = this;

                _self.table = $('#gvSkuPackReport').DataTable({
                    "sAjaxSource": "GetSkuPackReport",
                    "fnServerParams": function (aoData) { //查询条件
                        aoData.push(
                            { "name": "SkuName", "value": $("#SkuName").val() },
                            { "name": "SkuCode", "value": $("#SkuCode").val() },
                            { "name": "UPC", "value": $("#UPC").val() },
                            { "name": "UPC03", "value": $("#UPC03").val() },
                            { "name": "OtherId", "value": $("#OtherId").val() }
                        );
                    },
                    dom: 'Bfrtip',
                    buttons: [
                        'pageLength',
                        @if (AuthorizeManager.HasFunction(AuthKeyConst.Report_SkuPackReport_Export, User.Identity.Name))
                        {
                            <text>
                            {
                                text: '导出',
                                action: function (e, dt, node, config) {
                                    var exportForm = $("#exportForm");
                                    exportForm.attr("action", '@Url.Action("SkuPackReportExport")');
                                    exportForm.submit();
                                }
                            }
                            </text>
                        }
                    ],
                    "columnDefs": [],
                    "bServerSide": true,
                    "bProcessing": true,
                    "bPaginate": true, //翻页功能
                    "bLengthChange": true, //改变每页显示数据数量
                    "bFilter": false, //过滤功能
                    "bSort": false, //排序功能
                    "bInfo": true, //页脚信息
                    "bAutoWidth": true, //自动宽度
                    "aaSorting": [[2, "Asc"]],
                    "iDisplayLength": 50,
                    "oLanguage": {
                        buttons: {
                            pageLength: {
                                _: "每页显示 %d 条记录"
                            }
                        },
                        "sLengthMenu": "每页显示 _MENU_ 条记录",
                        "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                        "sInfoEmpty": "",
                        "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                        "oPaginate": {
                            "sFirst": "首页",
                            "sPrevious": "前一页",
                            "sNext": "后一页",
                            "sLast": "尾页"
                        },
                        "sZeroRecords": "没有检索到数据"
                    }
                });

                $("#btnSearch").bind("click", function () {
                    skuPackReport.table.ajax.reload();
                });

            }
        }

        $(function () {
            skuPackReport.init();
        })
    </script>
}