@using NBK.AuthServiceUtil
@using NBK.ECService.WMSReport.DTO.Base
@using WMS.Global.Portal.Helpers

@{
    ViewBag.Title = "系统访问汇总";
}

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}


<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-lg-12">
            <!-- sparks -->
            <ul id="sparks">
                <li class="sparks-info">
                    <h5> 入库 <span class="txt-color-blue" id="inboundCount"></span></h5>
                </li>
                <li class="sparks-info">
                    <h5> 出库 <span class="txt-color-purple" id="outboundCount"></span></h5>
                </li>
                <li class="sparks-info">
                    <h5> 库存管理 <span class="txt-color-greenDark" id="inventoryCount"></span></h5>
                </li>
                <li class="sparks-info">
                    <h5> 增值服务 <span class="txt-color-blue" id="valueCount"></span></h5>
                </li>
                <li class="sparks-info">
                    <h5> 三方交接 <span class="txt-color-purple" id="thirdpartCount"></span></h5>
                </li>
                <li class="sparks-info">
                    <h5> 报表 <span class="txt-color-greenDark" id="reportCount"></span></h5>
                </li>
            </ul>
            <!-- end sparks -->
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <table id="gvWMSBizAccessGlobal" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th data-data="FirstBizName">业务分类</th>
                                <th data-data="SecondBizName">二级分类</th>
                                <th data-data="BizName">业务名</th>
                                <th data-data="ServiceUrl">ServiceUrl</th>
                                <th data-data="Count">累计访问次数</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script>
        var WMSBizAccessGlobalModel = {
            table: {},
            init: function () {

                $.ajax({
                    url: "@Url.Action("GetAccessBizList","Home")",
                    type: "GET",
                    success: function (response) {
                        if (response.Success) {
                            //WMSBizAccessGlobalModel.init(response.Data);
                            $.each(response.Data, function (index, element) {
                                if (element.Name == "入库")
                                    $("#inboundCount").text(element.Count);
                                else if (element.Name == "出库")
                                    $("#outboundCount").text(element.Count);
                                else if (element.Name == "库存管理")
                                    $("#inventoryCount").text(element.Count);
                                else if (element.Name == "增值服务")
                                    $("#valueCount").text(element.Count);
                                else if (element.Name == "三方交接")
                                    $("#thirdpartCount").text(element.Count);
                                else if (element.Name == "报表")
                                    $("#reportCount").text(element.Count);
                            });
                        }
                    }
                });

                WMSBizAccessGlobalModel.table = $('#gvWMSBizAccessGlobal').DataTable({
                    "sAjaxSource": "GetAccessBizListByPage",
                    "fnServerParams": function (aoData) { //查询条件
                        //aoData.push(
                        //);
                    },
                    dom: 'Bfrtip',
                    buttons: [
                    ],
                    "columnDefs": [],
                    "bServerSide": true,
                    "bProcessing": true,
                    "bPaginate": true, //翻页功能
                    "bLengthChange": true, //改变每页显示数据数量
                    "bFilter": false, //过滤功能
                    "bSort": false, //排序功能
                    //"aoColumns": [
                    //    { "bSortable": false },
                    //    null,
                    //    null,
                    //    null,
                    //    null
                    //],
                    "bInfo": true, //页脚信息
                    "bAutoWidth": true, //自动宽度
                    "aaSorting": [[1, "Asc"]],
                    "iDisplayLength": 1000,
                    "oLanguage": {
                        buttons: {
                            pageLength: {
                                _: "每页显示 %d 条记录"
                            }
                        },
                        "sLengthMenu": "每页显示 _MENU_ 条记录",
                        "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                        "sInfoEmpty": "",
                        "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                        "oPaginate": {
                            "sFirst": "首页",
                            "sPrevious": "前一页",
                            "sNext": "后一页",
                            "sLast": "尾页"
                        },
                        "sZeroRecords": "没有检索到数据"
                    }
                });
            }
        }

        $(function () {
            WMSBizAccessGlobalModel.init();
        })


    </script>
}