@using NBK.AuthServiceUtil
@using NBK.ECService.WMSReport.DTO.Base
@using WMS.Global.Portal.Helpers

@{
    ViewBag.Title = "出库明细查询";
}

@Html.Breadcrumb("报表", "出库明细查询")
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
}


<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom">
        <form method="post" id="exportForm">
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label class="control-label">所属仓库:</label>
                        <select id="SearchWarehouseSysId" name="SearchWarehouseSysId" class="form-control">
                            @{
                                foreach (var warehouse in (List<SelectItem>)ViewBag.WarehouseList)
                                {
                                    <option value="@warehouse.Value">@warehouse.Text</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("出库单号", "OutboundOrder")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("外部单据号", "ExternOrderId")
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label class="control-label" for="Status">状态</label>
                        <select class="form-control m-b" name="Status" id="Status">
                            <option selected>全部</option>
                            <option value="10">新建</option>
                            <option value="20">部分分配</option>
                            <option value="30">分配完成</option>
                            <option value="35">部分拣货</option>
                            <option value="40">拣货完成</option>
                            <option value="70">出库完成</option>
                            <option value="-999">作废</option>
                            <option value="-10">关闭</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    @Html.SearchTextBox("商品名称", "SkuName")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("商品编号", "SkuCode")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("UPC", "UPC")
                </div>
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("出库开始时间", "ActualShipDateFrom")
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("出库结束时间", "ActualShipDateTo")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("服务综合体编码", "ServiceStationCode")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("服务综合体名称", "ServiceStationName")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("收货地址", "ConsigneeAddress")
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label class="control-label" for="OutboundType">类型</label>
                        <select class="form-control m-b" name="OutboundType" id="OutboundType">
                            <option selected>全部</option>
                            <option value="20">B2C</option>
                            <option value="30">B2B</option>
                            <option value="40">退货出库</option>
                            <option value="50">快进快出</option>
                            <option value="80">农资出库</option>
                            <option value="60">移仓</option>
                            <option value="70">原材料出库</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label class="control-label" for="Region">是否原材料</label>
                        <select id="IsMaterial" name="IsMaterial" class="form-control ">
                            <option value="">全部</option>
                            <option value="true">是</option>
                            <option value="false">否</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("业务类型", "OutboundChildType")
                </div>
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("装车时间从", "DepartureDateFrom")
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("装车时间到", "DepartureDateTo")
                </div>
                <div class="col-sm-1">
                    <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:25px;float: left; ">查询</button>
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <table id="gvOutboundDetailReport" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th data-data="WarehouseName">所属仓库</th>
                                <th data-data="OutboundOrder">出库单号</th>
                                <th data-data="StatusDisplay">状态</th>
                                <th data-data="OutboundTypeDisplay">类型</th>
                                <th data-data="OutboundChildType">业务类型</th>
                                <th data-data="SkuCode">商品编号</th>
                                <th data-data="SkuName">商品名称</th>
                                <th data-data="UPC">UPC</th>
                                <th data-data="SkuDescr">商品描述</th>
                                <th data-data="Qty">订单数量</th>
                                <th data-data="ShippedQty">发货数量</th>
                                <th data-data="OutboundDateDisplay">下单时间</th>
                                <th data-data="ActualShipDateDisplay">发货时间</th>
                                <th data-data="ServiceStationCode">服务综合体编码</th>
                                <th data-data="ServiceStationName">服务综合体名称</th>
                                <th data-data="ConsigneeName">收货人</th>
                                <th data-data="ConsigneePhone">收货人电话</th>
                                <th data-data="AddressDisplay" width="10%">收货人地址</th>

                                <th data-data="TMSOrder">TMS运单号</th>
                                <th data-data="SortNumberDisplay">TMS装车顺序</th>
                                <th data-data="DepartureDateDisplay">TMS装车时间</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>


@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/dataPicker")

    <script>
        var OutboundDetailReport = {
            table: {},
            init: function () {
                var _self = this;
                $('#divActualShipDateFrom .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divActualShipDateTo .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });

                $('#divDepartureDateFrom .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divDepartureDateTo .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });

                _self.table = $('#gvOutboundDetailReport').DataTable({
                    "sAjaxSource": "GetOutboundDetailReport",
                    "fnServerParams": function (aoData) { //查询条件
                        aoData.push(
                            { "name": "SearchWarehouseSysId", "value": $("#SearchWarehouseSysId").val() },
                            { "name": "OutboundOrder", "value": $("#OutboundOrder").val() },
                            { "name": "ExternOrderId", "value": $("#ExternOrderId").val() },
                            { "name": "Status", "value": $("#Status").val() },
                            { "name": "SkuCode", "value": $("#SkuCode").val() },
                            { "name": "SkuName", "value": $("#SkuName").val() },
                            { "name": "UPC", "value": $("#UPC").val() },
                            { "name": "ActualShipDateFrom", "value": $("#ActualShipDateFrom").val() },
                            { "name": "OutboundType", "value": $("#OutboundType").val() },
                            { "name": "ActualShipDateTo", "value": $("#ActualShipDateTo").val() },
                            { "name": "IsMaterial", "value": $("#IsMaterial").val() },
                            { "name": "ServiceStationCode", "value": $("#ServiceStationCode").val() },
                            { "name": "ServiceStationName", "value": $("#ServiceStationName").val() },
                            { "name": "ConsigneeAddress", "value": $("#ConsigneeAddress").val() },
                            { "name": "OutboundChildType", "value": $("#OutboundChildType").val() },
                            { "name": "DepartureDateFrom", "value": $("#DepartureDateFrom").val() },
                            { "name": "DepartureDateTo", "value": $("#DepartureDateTo").val() }
                        );
                    },
                    dom: 'Bfrtip',
                    buttons: [
                        'pageLength',
                        @if (AuthorizeManager.HasFunction(AuthKeyConst.Report_OutboundDetailReport_Export, User.Identity.Name))
                        {
                            <text>
                            @*{
                                text: '导出(03版excel)',
                                action: function (e, dt, node, config) {
                                    var exportForm = $("#exportForm");
                                    exportForm.attr("action", '@Url.Action("OutboundDetailReportExport")');
                                    exportForm.submit();
                                }
                            },*@
                            {
                                text: '导出',
                                action: function (e, dt, node, config) {
                                    var request = {
                                        SearchWarehouseSysId: $("#SearchWarehouseSysId").val(),
                                        OutboundOrder: $("#OutboundOrder").val(),
                                        ExternOrderId: $("#ExternOrderId").val(),
                                        Status: $("#Status").val(),
                                        SkuCode: $("#SkuCode").val(),
                                        SkuName: $("#SkuName").val(),
                                        UPC: $("#UPC").val(),
                                        ActualShipDateFrom: $("#ActualShipDateFrom").val(),
                                        OutboundType: $("#OutboundType").val(),
                                        ActualShipDateTo: $("#ActualShipDateTo").val(),
                                        IsMaterial: $("#IsMaterial").val(),
                                        ServiceStationCode: $("#ServiceStationCode").val(),
                                        ServiceStationName: $("#ServiceStationName").val(),
                                        OutboundChildType: $("#OutboundChildType").val(),
                                        ConsigneeAddress: $("#ConsigneeAddress").val(),
                                        DepartureDateFrom: $("#DepartureDateFrom").val(),
                                        DepartureDateTo: $("#DepartureDateTo").val()
                                    };

                                    saveLoading('show');
                                    $.ajax({
                                        url: "@Url.Action("OutboundDetailReportExportByFile", "Report")",
                                        data: request,
                                        dataType: "json",
                                        type: "post",
                                        success: function (data) {;
                                            saveLoading();
                                            if (data.success) {
                                                window.open(data.filePath);
                                            }
                                            else {
                                                msgErro(data.message);
                                            }
                                        },
                                        error: function () {
                                            saveLoading();
                                            msgErro("导出失败！");
                                        }
                                    });
                                }
                            }
                            </text>
                        }
                    ],
                    "sScrollX": "100%",
                    "sScrollXInner": "150%",
                    "bScrollCollapse": true,
                    "columnDefs": [],
                    "bServerSide": true,
                    "bProcessing": true,
                    "bPaginate": true, //翻页功能
                    "bLengthChange": true, //改变每页显示数据数量
                    "bFilter": false, //过滤功能
                    "bSort": false, //排序功能
                    "bInfo": true, //页脚信息
                    "bAutoWidth": true, //自动宽度
                    "aaSorting": [[2, "Asc"]],
                    "iDisplayLength": 50,
                    "oLanguage": {
                        buttons: {
                            pageLength: {
                                _: "每页显示 %d 条记录"
                            }
                        },
                        "sLengthMenu": "每页显示 _MENU_ 条记录",
                        "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                        "sInfoEmpty": "",
                        "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                        "oPaginate": {
                            "sFirst": "首页",
                            "sPrevious": "前一页",
                            "sNext": "后一页",
                            "sLast": "尾页"
                        },
                        "sZeroRecords": "没有检索到数据"
                    }
                });

                $("#btnSearch").bind("click", function () { //按钮 触发table重新请求服务器


                    if (!commonCheckDateCompare($("#ActualShipDateFrom").val(), $("#ActualShipDateTo").val())) {
                        msgAlert("出库结束时间应大于出库开始时间！");
                        return false;
                    }

                    if (!commonCheckDateCompare($("#DepartureDateFrom").val(), $("#DepartureDateTo").val())) {
                        msgAlert("装车结束时间应大于装车开始时间！");
                        return false;
                    }

                    OutboundDetailReport.table.ajax.reload();
                });

            }
        }

        $(function () {
            OutboundDetailReport.init();
        })


    </script>
}