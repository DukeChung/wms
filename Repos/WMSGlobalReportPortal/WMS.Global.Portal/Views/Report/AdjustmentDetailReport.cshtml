@using WMS.Global.Portal.Helpers
@using NBK.ECService.WMSReport.DTO.Base

@{
    ViewBag.Title = "损益明细报表";
}

@Html.Breadcrumb("报表", "损益明细报表")
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
}

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom">
        <div class="row">
            <div class="col-sm-3">
                <div class="form-group">
                    <label class="control-label">所属仓库:</label>
                    <select id="SearchWarehouseSysId" name="SearchWarehouseSysId" class="form-control">
                        @{
                            foreach (var warehouse in (List<SelectItem>)ViewBag.WarehouseList)
                            {
                                <option value="@warehouse.Value">@warehouse.Text</option>
                            }
                        }
                    </select>
                </div>
            </div> 
            <div class="col-sm-3">
                <div class="form-group">
                    <label class="control-label" for="AdjustmentLevelCode">损益级别</label>
                    <select class="form-control m-b" name="AdjustmentLevelCode" id="AdjustmentLevelCode">
                        <option value="" selected>全部</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-2">
                @Html.DataPickerTextBox("创建时间从", "CreateDateFrom")
            </div>
            <div class="col-sm-2">
                @Html.DataPickerTextBox("创建时间到", "CreateDateTo")
            </div>
            <div class="col-sm-2">
                <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:25px;float: left; ">查询</button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <table id="gvAdjustmentDetailReport" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th data-data="WarehouseName">仓库名称</th> 
                                <th data-data="SkuCode">商品编号</th>
                                <th data-data="SkuName">商品名称</th>
                                <th data-data="UPC">商品UPC</th>
                                <th data-data="Loc">货位</th>
                                <th data-data="Lot">批次</th>
                                <th data-data="LotAttr01">渠道</th>
                                <th data-data="AdjustmentLevelDescription">损益级别</th>
                                <th data-data="DisplayQty">损益数量</th>
                                <th data-data="CreateDateDisplay">创建时间</th>
                                <th data-data="CreateUserName">创建人</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/dataPicker")

    <script>
        var AdjustmentDetailReport = {
            table: {},
            init: function () {
                $('#divCreateDateFrom .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divCreateDateTo .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });

                $.ajax({
                    url: "@Url.Action("GetAdjustmentLevelSysCode", "Report")",
                    type: "get",
                    success: function (data) {
                        data.adjustmentLevelList.forEach(function (e, i) {
                            $("#AdjustmentLevelCode").append('<option value="' + e.Value + '">' + e.Text + '</option>');
                        });
                    }
                });

                var _self = this;

                _self.table = $('#gvAdjustmentDetailReport').DataTable({
                    "sAjaxSource": "GetAdjustmentDetailReport",
                    "fnServerParams": function (aoData) { //查询条件
                        aoData.push(
                            { "name": "SearchWarehouseSysId", "value": $("#SearchWarehouseSysId").val() },
                            { "name": "AdjustmentLevelCode", "value": $("#AdjustmentLevelCode").val() },
                            { "name": "CreateDateFrom", "value": $("#CreateDateFrom").val() },
                            { "name": "CreateDateTo", "value": $("#CreateDateTo").val() }
                        );
                    },
                    buttons: [],
                    "columnDefs": [],
                    "bServerSide": true,
                    "bProcessing": true,
                    "bPaginate": true, //翻页功能
                    "bLengthChange": true, //改变每页显示数据数量
                    "bFilter": false, //过滤功能
                    "bSort": false, //排序功能
                    "bInfo": true, //页脚信息
                    "bAutoWidth": true, //自动宽度
                    "aaSorting": [[2, "Asc"]],
                    "iDisplayLength": 50, 
                    "oLanguage": {
                        "sLengthMenu": "每页显示 _MENU_ 条记录",
                        "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                        "sInfoEmpty": "",
                        "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                        "oPaginate": {
                            "sFirst": "首页",
                            "sPrevious": "前一页",
                            "sNext": "后一页",
                            "sLast": "尾页"
                        },
                        "sZeroRecords": "没有检索到数据"
                    }
                });

                $("#btnSearch").bind("click", function () { //按钮 触发table重新请求服务器
                    _self.table.ajax.reload();
                });
            }
        }

        $(function () {
            AdjustmentDetailReport.init();
        })

    </script>
}
