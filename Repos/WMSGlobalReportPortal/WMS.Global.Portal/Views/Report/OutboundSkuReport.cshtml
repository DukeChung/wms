@using NBK.AuthServiceUtil
@using NBK.ECService.WMSReport.DTO.Base
@using WMS.Global.Portal.Helpers
@{
    ViewBag.Title = "出库单商品汇总报表";
}
@Html.Breadcrumb("报表", "出库单商品汇总报表")
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
}


<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="ibox-content m-b-sm border-bottom">
        <form method="post" id="exportForm">
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label class="control-label">发货仓库:</label>
                        <select id="SearchWarehouseSysId" name="SearchWarehouseSysId" class="form-control">
                            @{
                                foreach (var warehouse in (List<SelectItem>)ViewBag.WarehouseList)
                                {
                                    <option value="@warehouse.Value">@warehouse.Text</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("站点编号", "ServiceStationCode")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("市", "ConsigneeCity")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("区县", "ConsigneeArea")
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    @Html.SearchTextBox("出库单号", "OutboundOrder")
                </div>
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("出库时间从", "ActualShipDateFrom")
                </div>
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("出库时间到", "ActualShipDateTo")
                </div>
                <div class="col-sm-3">
                    <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:25px;float: left; ">查询</button>
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <table id="gvOutboundSkuReport" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th data-data="ServiceStationCode">站点编号</th>
                                <th data-data="ConsigneeCity">市</th>
                                <th data-data="ConsigneeArea">区县</th>
                                <th data-data="ServiceStationName">服务综合体名称</th>
                                <th data-data="OutboundOrder">出库单号</th>
                                <th data-data="ActualShipDateDisplay">出库时间</th>
                                <th data-data="WarehouseName">发货仓库</th>
                                <th data-data="SkuType">发货种类</th>
                                <th data-data="SkuCount">发货数量</th>
                                <th data-data="ReturnQty">退货数量</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/plugins/dataTables/datatables.min.js"></script>
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/dataPicker")
    <script>
        var OutboundSkuReport = {
            table: {},
            init: function () {
                var _self = this;
                $('#divActualShipDateFrom .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divActualShipDateTo .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });

                _self.table = $('#gvOutboundSkuReport').DataTable({
                    "sAjaxSource": "GetOutboundSkuReport",
                    "fnServerParams": function (aoData) { //查询条件
                        aoData.push(
                            { "name": "SearchWarehouseSysId", "value": $("#SearchWarehouseSysId").val() },
                            { "name": "ServiceStationCode", "value": $("#ServiceStationCode").val() },
                            { "name": "ConsigneeCity", "value": $("#ConsigneeCity").val() },
                            { "name": "ConsigneeArea", "value": $("#ConsigneeArea").val() },
                            { "name": "OutboundOrder", "value": $("#OutboundOrder").val() },
                            { "name": "ActualShipDateFrom", "value": $("#ActualShipDateFrom").val() },
                            { "name": "ActualShipDateTo", "value": $("#ActualShipDateTo").val() }
                        );
                    },
                    dom: 'Bfrtip',
                    buttons: [
                        'pageLength',
                        @if (AuthorizeManager.HasFunction(AuthKeyConst.Report_OutboundSkuReport_Export, User.Identity.Name))
                    {
                            <text>
                            {
                                text: '导出',
                                action: function (e, dt, node, config) {
                                    var exportForm = $("#exportForm");
                                    exportForm.attr("action", '@Url.Action("OutboundSkuReportExport")');
                                    exportForm.submit();
                                }
                            }
                            </text>
                }
                    ],
                    "columnDefs": [],
                    "bServerSide": true,
                    "bProcessing": true,
                    "bPaginate": true, //翻页功能
                    "bLengthChange": true, //改变每页显示数据数量
                    "bFilter": false, //过滤功能
                    "bSort": false, //排序功能
                    "bInfo": true, //页脚信息
                    "bAutoWidth": true, //自动宽度
                    "aaSorting": [[2, "Asc"]],
                    "iDisplayLength": 50,
                    "oLanguage": {
                        buttons: {
                            pageLength: {
                                _: "每页显示 %d 条记录"
                            }
                        },
                        "sLengthMenu": "每页显示 _MENU_ 条记录",
                        "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                        "sInfoEmpty": "",
                        "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                        "oPaginate": {
                            "sFirst": "首页",
                            "sPrevious": "前一页",
                            "sNext": "后一页",
                            "sLast": "尾页"
                        },
                        "sZeroRecords": "没有检索到数据"
                    }
                });

                $("#btnSearch").bind("click", function () { //按钮 触发table重新请求服务器

                    if (!commonCheckDateCompare($("#ActualShipDateFrom").val(), $("#ActualShipDateTo").val())) {
                        msgAlert("起始出库时间大于中止出库时间！");
                        return false;
                    }

                    OutboundSkuReport.table.ajax.reload();
                });

            }
        }

        $(function () {
            OutboundSkuReport.init();
        })

    </script>
}