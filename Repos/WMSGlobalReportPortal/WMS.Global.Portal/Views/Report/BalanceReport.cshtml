@using WMS.Global.Portal.Helpers
@using NBK.AuthServiceUtil
@using NBK.ECService.WMSReport.DTO.Base

@{
    ViewBag.Title = "B2C结算报表";
}

@Html.Breadcrumb("报表", "B2C结算报表")
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
}

<div class="wrapper wrapper-content animated fadeInRight ecommerce" autocomplete="off">
    <div class="ibox-content m-b-sm border-bottom">
        <form method="post" id="exportForm">

            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label class="control-label">所属仓库:</label>
                        <select id="SearchWarehouseSysId" name="SearchWarehouseSysId" class="form-control">
                            @{
                                foreach (var warehouse in (List<SelectItem>)ViewBag.WarehouseList)
                                {
                                    <option value="@warehouse.Value">@warehouse.Text</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("快递公司", "CarrierName")
                </div> 
                <div class="col-sm-3">
                    @Html.SearchTextBox("出库单号", "OutboundOrder")
                </div> 
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("出库时间从", "StartTime")
                </div> 
            </div> 

            <div class="row"> 
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("出库时间到", "EndTime")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("物流运单号", "CarrierNumber")
                </div>
                <div class="col-sm-3">
                    <div class="form-group"> <label class="control-label" for="ConsigneeProvince">省</label> <input type="text" id="ConsigneeProvince" name="ConsigneeProvince" value="" placeholder="请输入省" class="form-control" autocomplete="off">  </div>
                </div> 
                <div class="col-sm-3">
                    <div class="form-group"> <label class="control-label" for="ConsigneeCity">州/市</label> <input type="text" id="ConsigneeCity" name="ConsigneeCity" value="" placeholder="请输入州/市" class="form-control" autocomplete="off">  </div>
                </div> 
            </div> 
            
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group"> <label class="control-label" for="ConsigneeArea">县/区</label> <input type="text" id="ConsigneeArea" name="ConsigneeArea" value="" placeholder="请输入县/区" class="form-control" autocomplete="off">  </div>
                </div>
                <div class="col-sm-3">
                    <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:25px;float: left; ">查询</button>
                </div>
            </div> 
        </form>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <table id="gvBalanceReport" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th data-data="WarehouseName">所属仓库</th> 
                                <th data-data="CarrierName">快递公司</th>
                                <th data-data="OutboundDateText">出库日期</th>
                                <th data-data="OutboundOrder">出库单号</th>
                                <th data-data="Remark"> 订单备注 </th>
                                <th data-data="WarehouseName">发货仓库</th>
                                <th data-data="ConsigneeProvince">收货省份</th>
                                <th data-data="ConsigneeCity">收货州/市</th>
                                <th data-data="ConsigneeArea">收货县/区</th>
                                <th data-data="ConsigneeAddress" width="20%">收货地址</th>
                                <th data-data="CarrierNumber">物流运单号</th> 
                                <th data-data="Weight">重量(KG)</th> 

                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/dataPicker")

    <script>
        var BalanceReport = {
            table: {},
            init: function () {
                var _self = this;

                $('#divStartTime .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divEndTime .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });

                _self.table = $('#gvBalanceReport').DataTable({
                    "sAjaxSource": "GetBalanceReport",
                    "fnServerParams": function (aoData) { //查询条件
                        aoData.push(
                            { "name": "SearchWarehouseSysId", "value": $("#SearchWarehouseSysId").val() },
                            { "name": "CarrierName", "value": $("#CarrierName").val() },
                            { "name": "OutboundOrder", "value": $("#OutboundOrder").val() },
                            { "name": "StartTime", "value": $("#StartTime").val() },
                            { "name": "EndTime", "value": $("#EndTime").val() },
                            { "name": "WarehouseName", "value": $("#WarehouseName").val() },
                            { "name": "ConsigneeProvince", "value": $("#ConsigneeProvince").val() },
                            { "name": "ConsigneeCity", "value": $("#ConsigneeCity").val() },
                            { "name": "ConsigneeArea", "value": $("#ConsigneeArea").val() },
                            { "name": "CarrierNumber", "value": $("#CarrierNumber").val() }

                        );
                    },
                    dom: 'Bfrtip',
                    buttons: [
                        'pageLength',
                          @if (AuthorizeManager.HasFunction(AuthKeyConst.Report_BalanceReport_Export, User.Identity.Name))
                          {
                                <text>
                                {
                                    text: '导出',
                                    action: function (e, dt, node, config) {
                                        var exportForm = $("#exportForm");
                                        exportForm.attr("action", '@Url.Action("BalanceReportExport")');
                                        exportForm.submit();
                                    }
                                }
                                </text>
                           }
                    ],
                    "columnDefs": [],
                    "bServerSide": true,
                    "bProcessing": true,
                    "bPaginate": true, //翻页功能
                    "bLengthChange": true, //改变每页显示数据数量
                    "bFilter": false, //过滤功能
                    "bSort": false, //排序功能
                    "bInfo": true, //页脚信息
                    "bAutoWidth": true, //自动宽度
                    "aaSorting": [[2, "Asc"]], 
                    "iDisplayLength": 50,
                    "oLanguage": {
                        buttons: {
                            pageLength: {
                                _: "每页显示 %d 条记录"
                            }
                        },
                        "sLengthMenu": "每页显示 _MENU_ 条记录",
                        "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                        "sInfoEmpty": "",
                        "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                        "oPaginate": {
                            "sFirst": "首页",
                            "sPrevious": "前一页",
                            "sNext": "后一页",
                            "sLast": "尾页"
                        },
                        "sZeroRecords": "没有检索到数据"
                    }
                });

                $("#btnSearch").bind("click", function () {
                    if (!commonCheckDateCompare($("#StartTime").val(), $("#EndTime").val())) {
                        msgAlert("结束时间应大于开始时间！");
                        return false;
                    }
                    BalanceReport.table.ajax.reload();

                });
            }
        }

        $(function () {
            BalanceReport.init();
        })


    </script>
}