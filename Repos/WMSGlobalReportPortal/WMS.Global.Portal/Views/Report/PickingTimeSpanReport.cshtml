@using WMS.Global.Portal.Helpers
@using NBK.AuthServiceUtil
@using NBK.ECService.WMSReport.DTO.Base

@{
    ViewBag.Title = "出库拣货工时报表";
}
@Html.Breadcrumb("报表", "出库拣货工时报表")
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
}

<div class="wrapper wrapper-content animated fadeInRight ecommerce" autocomplete="off">
    <div class="ibox-content m-b-sm border-bottom">
        <form method="post" id="exportForm">

            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label class="control-label">所属仓库:</label>
                        <select id="SearchWarehouseSysId" name="SearchWarehouseSysId" class="form-control">
                            @{
                                foreach (var warehouse in (List<SelectItem>)ViewBag.WarehouseList)
                                {
                                    <option value="@warehouse.Value">@warehouse.Text</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("出库单号", "OutboundOrder")
                </div>
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("开始时间从", "StartTimeFrom")
                </div>
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("开始时间到", "StartTimeTo")
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("结束时间从", "EndTimeFrom")
                </div>
                <div class="col-sm-3">
                    @Html.DataPickerTextBox("结束时间到", "EndTimeTo")
                </div>
                <div class="col-sm-3">
                    @Html.SearchTextBox("操作人", "Operator")
                </div>
                <div class="col-sm-3">
                    <button id="btnSearch" class="btn btn-primary" type="button" style="margin-top:25px;float: left; ">查询</button>
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <table id="gvPickingTimeSpanReport" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th data-data="WarehouseName">所属仓库</th>
                                <th data-data="OutboundOrder">出库单号</th>
                                <th data-data="SkuTypeNumber">商品种类</th>
                                <th data-data="SkuTotalCount">总数量</th>
                                <th data-data="Operator"> 操作人 </th>
                                <th data-data="StartTimeDisplay">开始时间</th>
                                <th data-data="EndTimeDisplay">结束时间</th>
                                <th data-data="StayTime">用时</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/dataPicker")

    <script>
        var PickingTimeSpanReport = {
            table: {},
            init: function () {
                var _self = this;

                $('#divStartTimeFrom .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divStartTimeTo .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divEndTimeFrom .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });
                $('#divEndTimeTo .input-group.date').datepicker({
                    todayBtn: "linked",
                    keyboardNavigation: false,
                    forceParse: false,
                    calendarWeeks: true,
                    autoclose: true
                });

                _self.table = $('#gvPickingTimeSpanReport').DataTable({
                    "sAjaxSource": "GetPickingTimeSpanReport",
                    "fnServerParams": function (aoData) { //查询条件
                        aoData.push(
                            { "name": "SearchWarehouseSysId", "value": $("#SearchWarehouseSysId").val() },
                            { "name": "OutboundOrder", "value": $("#OutboundOrder").val() },
                            { "name": "StartTimeFrom", "value": $("#StartTimeFrom").val() },
                            { "name": "StartTimeTo", "value": $("#StartTimeTo").val() },
                            { "name": "EndTimeFrom", "value": $("#EndTimeFrom").val() },
                            { "name": "EndTimeTo", "value": $("#EndTimeTo").val() },
                            { "name": "Operator", "value": $("#Operator").val() }
                        );
                    },
                    dom: 'Bfrtip',
                    buttons: [
                        'pageLength', 
                            {
                                text: '导出',
                                action: function (e, dt, node, config) {
                                    var exportForm = $("#exportForm");
                                    exportForm.attr("action", '@Url.Action("PickingTimeSpanReportExport")');
                                    exportForm.submit();
                                }
                            } 
                    ],
                    "columnDefs": [],
                    "bServerSide": true,
                    "bProcessing": true,
                    "bPaginate": true, //翻页功能
                    "bLengthChange": true, //改变每页显示数据数量
                    "bFilter": false, //过滤功能
                    "bSort": false, //排序功能
                    "bInfo": true, //页脚信息
                    "bAutoWidth": true, //自动宽度
                    "aaSorting": [[2, "Asc"]],
                    "iDisplayLength": 50,
                    "oLanguage": {
                        buttons: {
                            pageLength: {
                                _: "每页显示 %d 条记录"
                            }
                        },
                        "sLengthMenu": "每页显示 _MENU_ 条记录",
                        "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                        "sInfoEmpty": "",
                        "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                        "oPaginate": {
                            "sFirst": "首页",
                            "sPrevious": "前一页",
                            "sNext": "后一页",
                            "sLast": "尾页"
                        },
                        "sZeroRecords": "没有检索到数据"
                    }
                });

                $("#btnSearch").bind("click", function () {
                    if (!commonCheckDateCompare($("#StartTimeFrom").val(), $("#StartTimeTo").val())) {
                        msgAlert("开始时间到应大于开始时间从！");
                        return false;
                    }
                    if (!commonCheckDateCompare($("#EndTimeFrom").val(), $("#EndTimeTo").val())) {
                        msgAlert("结束时间到应大于结束时间从！");
                        return false;
                    }
                    PickingTimeSpanReport.table.ajax.reload();

                });
            }
        }

        $(function () {
            PickingTimeSpanReport.init();
        })


    </script>
}